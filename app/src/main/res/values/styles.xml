<resources>
    <style name="youTubetheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/text_color_close</item>
        <item name="colorAccent">@color/colorPrimary</item>
        </style>

    <style name="AlertDialogPositivCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:layout_width">@dimen/dp_size_100</item>
        <item name="android:layout_height">@dimen/dp_size_100</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/positive</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/positive</item>
        <item name="android:paddingTop">@dimen/dp_size_5</item>
        <item name="android:paddingBottom">@dimen/dp_size_5</item>
    </style>

    <style name="LoadMoreInfoStyle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="UnBlockTextStyle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="TextAppearance" />

    <style name="AppTheme.PopupMenu" parent="Theme.AppCompat.Light.DarkActionBar" />

    <style name="TextAppearance.Toolbar">
        <item name="android:textSize">@dimen/toolbar_title_size</item>
        <item name="android:textColor">@android:color/white</item>
        <!--<item name="font">Hind-Medium</item>-->
    </style>

    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/primary_text_material_dark</item>
        <item name="actionMenuTextColor">@color/primary_text_material_dark</item>
        <item name="android:textColorSecondary">@color/secondary_text_material_dark</item>
    </style>

    <style name="positive">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@string/ID_ROBOTO_MEDIUM</item>
        <item name="android:background">@color/fully_transparent</item>
    </style>
    <style name="SheroesActionButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_size_48</item>
        <item name="android:layout_marginLeft">@dimen/dp_size_10</item>
        <item name="android:layout_marginRight">@dimen/dp_size_10</item>
        <item name="android:layout_marginBottom">@dimen/dp_size_10</item>
        <item name="android:capitalize">sentences</item>
        <item name="android:background">@color/red</item>
        <item name="android:textSize">@dimen/dp_size_18</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:clickable">true</item>
    </style>
    <!--For Ripple effect-->
    <declare-styleable name="RippleView">
        <attr name="rv_alpha" format="integer" />
        <attr name="rv_framerate" format="integer" />
        <attr name="rv_rippleDuration" format="integer" />
        <attr name="rv_zoomDuration" format="integer" />
        <attr name="rv_color" format="color" />
        <attr name="rv_centered" format="boolean" />
        <attr name="rv_type" format="enum">
            <enum name="simpleRipple" value="0" />
            <enum name="doubleRipple" value="1" />
            <enum name="rectangle" value="2" />
        </attr>
        <attr name="rv_ripplePadding" format="dimension" />
        <attr name="rv_zoom" format="boolean" />
        <attr name="rv_zoomScale" format="float" />

    </declare-styleable>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/sp_size_11</item>
    </style>

    <style name="CheckBoxStyle">
        <item name="android:button">@drawable/check_box_selecter</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="ChallengeCheckBoxStyle">
        <item name="android:button">@drawable/challenge_check_box_selector</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <!--<item name="rippleColor">@android:color/white</item>-->
    </style>
    <style name="NavigationTabTextAppeareance" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@string/ID_ROBOTO_MEDIUM</item>
        <item name="android:textSize">@dimen/sp_size_14</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="SubtitleCollapsingToolbar"
        parent="@style/Widget.Design.CollapsingToolbar">
        <item name="android:gravity">right</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginLeft">@dimen/dp_size_50</item>
    </style>
    <style name="CollapsedSubtitleAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginLeft">@dimen/dp_size_50</item>
    </style>
    <style name="ExpandedSubtitleAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginLeft">@dimen/dp_size_50</item>
    </style>

    <style name="title" >
        <item name="android:textColor">#fff</item>
    </style>

    <style name="title.expanded">
        <item name="android:textSize">30dp</item>
    </style>
    <style name="title.collapsed">
        <item name="android:textSize">20dp</item>
    </style>




    <style name="subtitle_goodAT">
        <item name="android:textColor">@color/fully_transparent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">right</item><!-- I only change the color -->
        <item name="android:layout_marginLeft">@dimen/dp_size_50</item>
    </style>

    <style name="subtitle">
        <item name="android:textColor">@color/fully_transparent</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_gravity">right</item><!-- I only change the color -->
        <item name="android:layout_marginLeft">@dimen/dp_size_50</item>
    </style>

    <style name="subtitle_collapsed">
        <item  name="android:textColor">@color/white</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginLeft">@dimen/dp_size_50</item>
        <!-- I only change the color -->
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/grey2</item>
        <item name="colorControlActivated">@color/rating_color</item>
    </style>
    <style name="Theme.Material.Light.Dialog.NoMinWidth" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:windowMinWidthMinor">0dip</item>
        <item name="android:windowMinWidthMajor">0dip</item>
    </style>
    <style name="MyTextInputLayout" parent="AppTheme">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>


    <style name="CustomShowcaseTheme3" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#99000000</item>
        <item name="sv_showcaseColor">@color/feed_article_label</item>
        <item name="android:alpha">.7</item>
        <item name="sv_buttonText">Hide</item>
        <item name="sv_tintButtonColor">false</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle2</item>
        <item name="sv_detailTextAppearance">@style/CustomText2</item>
    </style>



    <style name="CustomTitle2" parent="TextAppearance.ShowcaseView.Title.Light">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/sp_size_20</item>
    </style>

    <style name="CustomText2" parent="TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@string/ID_ROBOTO_MEDIUM</item>
        <item name="android:textSize">@dimen/sp_size_16</item>
    </style>
</resources>
