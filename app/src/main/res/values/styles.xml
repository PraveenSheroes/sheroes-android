<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/status_bar</item>
        <item name="colorAccent">@color/toolbar_title_text</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="colorPrimaryDark">@color/email</item>
    </style>

    <style name="LoadMoreInfoStyle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="UnBlockTextStyle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="TextAppearance" />

    <style name="AppTheme.PopupMenu" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:homeAsUpIndicator">@drawable/vector_back_arrow</item>
    </style>

    <style name="TextAppearance.Toolbar">
        <item name="android:textSize">@dimen/toolbar_title_size</item>
        <item name="android:textColor">@color/toolbar_title</item>
        <item name="android:fontFamily">@font/noto_sans_bold</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/primary_text_material_dark</item>
        <item name="actionMenuTextColor">@color/toolbar_title_text</item>
        <item name="android:homeAsUpIndicator">@drawable/vector_back_arrow</item>
        <item name="android:textColorSecondary">@color/menu_icon</item>
    </style>

    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColor">@color/toolbar_title</item>
    </style>

    <!--For Ripple effect-->
    <declare-styleable name="RippleView">
        <attr name="rv_alpha" format="integer" />
        <attr name="rv_framerate" format="integer" />
        <attr name="rv_rippleDuration" format="integer" />
        <attr name="rv_zoomDuration" format="integer" />
        <attr name="rv_color" format="color" />
        <attr name="rv_centered" format="boolean" />
        <attr name="rv_type" format="enum">
            <enum name="simpleRipple" value="0" />
            <enum name="doubleRipple" value="1" />
            <enum name="rectangle" value="2" />
        </attr>
        <attr name="rv_ripplePadding" format="dimension" />
        <attr name="rv_zoom" format="boolean" />
        <attr name="rv_zoomScale" format="float" />

    </declare-styleable>

    <style name="CheckBoxStyle">
        <item name="android:button">@drawable/check_box_selecter</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <!--<item name="rippleColor">@android:color/white</item>-->
    </style>

    <style name="NavigationTabTextAppeareance" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/noto_sans_bold</item>
        <item name="android:textSize">@dimen/sp_size_14</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SubtitleCollapsingToolbar" parent="@style/Widget.Design.CollapsingToolbar">
        <item name="android:gravity">right</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginLeft">@dimen/dp_size_50</item>
    </style>

    <style name="CollapsedSubtitleAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginLeft">@dimen/dp_size_50</item>
    </style>

    <style name="ExpandedSubtitleAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginLeft">@dimen/dp_size_50</item>
    </style>

    <style name="title">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="title.expanded">
        <item name="android:textSize">30dp</item>
    </style>

    <style name="title.collapsed">
        <item name="android:textSize">20dp</item>
    </style>


    <style name="subtitle">
        <item name="android:textColor">@color/fully_transparent</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_gravity">right</item><!-- I only change the color -->
        <item name="android:layout_marginLeft">@dimen/dp_size_50</item>
    </style>

    <style name="subtitle_collapsed">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginLeft">@dimen/dp_size_50</item>
        <!-- I only change the color -->
    </style>

    <style name="Theme.Material.Light.Dialog.NoMinWidth" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:windowMinWidthMinor">0dip</item>
        <item name="android:windowMinWidthMajor">0dip</item>
    </style>

    <style name="MyTextInputLayout" parent="AppTheme">
        <item name="colorAccent">@color/gray_light</item>
    </style>


    <style name="CustomShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#E6000000</item>
        <item name="sv_showcaseColor">@color/feed_article_label</item>
        <item name="sv_tintButtonColor">false</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
        <item name="sv_detailTextAppearance">@style/CustomText</item>
    </style>

    <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textSize">@dimen/sp_size_20</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#000000</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="CustomText" parent="TextAppearance.ShowcaseView.Detail">
        <item name="android:textSize">@dimen/sp_size_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">#000000</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="Tooltip">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="backgroundColor">@color/feed_article_label</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:gravity">left</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/gray_light</item>
        <item name="colorControlActivated">@color/red</item>
    </style>

    <style name="PollProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/poll_progress_layer</item>
        <item name="android:minWidth">200dp</item>
    </style>

    <style name="ImagePollProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/poll_image_progress_layer</item>
        <item name="android:minWidth">200dp</item>
    </style>

    <!--Textview fonts-->
    <style name="TextViewRegular" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/noto_sans_regular</item>
    </style>

    <style name="TextViewBold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/noto_sans_bold</item>
    </style>

    <style name="TextViewMediumBold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/noto_sans_medium</item>
    </style>

    <style name="TextViewForStandardSizeColor" parent="TextViewRegular">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/comment_text</item>
    </style>

    <style name="TextView9spRegular" parent="TextViewRegular">
        <item name="android:textSize">9sp</item>
    </style>

    <style name="TextView12spRegular" parent="TextViewRegular">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextView16spRegular" parent="TextViewRegular">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextView14spRegular" parent="TextViewRegular">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextView18spRegular" parent="TextViewRegular">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextView22spRegular" parent="TextViewRegular">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextView20spRegular" parent="TextViewRegular">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextView32spRegular" parent="TextViewRegular">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TextView24spRegular" parent="TextViewRegular">
        <item name="android:textSize">24sp</item>
    </style>

    <!--Textview bold fonts-->
    <style name="TextView10spBold" parent="TextViewBold">
        <item name="android:textSize">10sp</item>
    </style>
    <style name="TextView14spBold" parent="TextViewBold">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TextView16spBold" parent="TextViewBold">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextView18spBold" parent="TextViewBold">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="TextView22spBold" parent="TextViewBold">
        <item name="android:textSize">22sp</item>
    </style>
    <style name="TextView24spBold" parent="TextViewBold">
        <item name="android:textSize">24sp</item>
    </style>

    <!--Textview mediumbold fonts-->
    <style name="TextView9spMediumBold" parent="TextViewMediumBold">
        <item name="android:textSize">9sp</item>
    </style>

    <style name="TextView10spMediumBold" parent="TextViewMediumBold">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextView12spMediumBold" parent="TextViewMediumBold">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextView14spMediumBold" parent="TextViewMediumBold">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextView16spMediumBold" parent="TextViewMediumBold">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextView18spMediumBold" parent="TextViewMediumBold">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextView22spMediumBold" parent="TextViewMediumBold">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextView20spMediumBold" parent="TextViewMediumBold">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextView24spMediumBold" parent="TextViewMediumBold">
        <item name="android:textSize">24sp</item>
    </style>

    <!-- Button text fonts-->
    <style name="ButtonRegular" parent="Base.Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/noto_sans_regular</item>
    </style>

    <style name="ButtonBold" parent="Base.Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/noto_sans_bold</item>
    </style>

    <style name="Button14spRegular" parent="ButtonRegular">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Button14spBold" parent="ButtonBold">
        <item name="android:textSize">14sp</item>
    </style>

    <!--Checkbox text fonts-->
    <style name="CheckBoxRegular" parent="Base.Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/noto_sans_regular</item>
    </style>

    <style name="CheckBox14spRegular" parent="CheckBoxRegular">
        <item name="android:textSize">14sp</item>
    </style>
</resources>
