<?xml version="1.0" encoding="UTF-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <stroke
                android:width="@dimen/dp_size_1"
                android:color="@color/spam_dialog_divider"/>
            <corners
                android:bottomLeftRadius="@dimen/dp_size_5"
                android:bottomRightRadius="@dimen/dp_size_5"
                android:topLeftRadius="@dimen/dp_size_5"
                android:topRightRadius="@dimen/dp_size_5"/>
            <gradient
                android:angle="270"
                android:centerColor="@color/white"
                android:endColor="@color/white"
                android:startColor="@color/white" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <stroke
                    android:width="@dimen/dp_size_1"
                    android:color="@color/spam_dialog_divider"/>
                <corners
                    android:bottomLeftRadius="@dimen/dp_size_5"
                    android:bottomRightRadius="@dimen/dp_size_5"
                    android:topLeftRadius="@dimen/dp_size_5"
                    android:topRightRadius="@dimen/dp_size_5"/>
                <gradient
                    android:angle="90"
                    android:endColor="@color/theme"
                    android:startColor="@color/theme" />
            </shape>
        </clip>
    </item>
</layer-list>