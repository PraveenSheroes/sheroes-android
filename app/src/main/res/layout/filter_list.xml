<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"

    android:layout_height="wrap_content">
<TextView
    android:id="@+id/tv_filter_nm"
    android:layout_marginTop="@dimen/dp_size_10"
    android:layout_width="wrap_content"
    android:textColor="@color/job_filter_type_color"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_size_42"
    android:layout_marginRight="@dimen/dp_size_42"
    android:textSize="@dimen/sp_size_11"
    android:fontFamily="@string/ID_ROBOTO_REGULAR"
    android:text="@string/ID_COMMUNITY_TYPE"/>
    <TextView
        android:id="@+id/tv_filter_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_size_42"
        android:layout_marginRight="@dimen/dp_size_42"
        android:textColor="@color/job_filter_desc_color"
        android:fontFamily="@string/ID_ROBOTO_REGULAR"
        android:textSize="@dimen/sp_size_11"
        android:layout_marginTop="@dimen/dp_size_8"
        android:text="@string/ID_DESCRIPTION"/>
    <LinearLayout
        android:id="@+id/lnr2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="@dimen/dp_size_10">
        <include
            android:id="@+id/li_feed_article_card_emoji_pop_up"
            layout="@layout/opportunity_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/sp_size_1"

        android:layout_marginLeft="@dimen/dp_size_42"
        android:layout_marginRight="@dimen/dp_size_42"
        android:background="@color/grey2"
        />
</LinearLayout>