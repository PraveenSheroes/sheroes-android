<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_community_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_size_5"
    android:layout_marginTop="@dimen/dp_size_3"
    app:cardElevation="@dimen/dp_size_2"
    app:layout_anchorGravity="bottom|center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_size_16"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_communities_detail"
                android:layout_width="@dimen/dp_size_50"
                android:layout_height="@dimen/dp_size_50"
                android:layout_gravity="left|top"
                android:background="@drawable/image_view_shap" />
            <LinearLayout
                android:id="@+id/li_communities_detail_header"
                android:layout_width="0dp"
                android:layout_weight="@integer/int_value_for_line_1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp_size_10"
                android:layout_marginRight="@dimen/dp_size_12"
                android:layout_marginTop="@dimen/dp_size_10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_community_name"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_size_16"
                    android:layout_marginRight="@dimen/dp_size_30"
                    android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                    android:gravity="left"
                    android:lineSpacingExtra="@dimen/dp_size_3"
                    android:textColor="@color/dashboard_text"
                    android:textSize="@dimen/sp_size_14" />

                <TextView
                    android:id="@+id/tv_community_related"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_size_16"
                    android:layout_marginTop="@dimen/dp_size_5"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:lineSpacingExtra="@dimen/dp_size_3"
                    android:textColor="@color/footer_icon_text"
                    android:textSize="@dimen/sp_size_12" />

            </LinearLayout>
            <TextView
                android:id="@+id/tv_next_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="right|center"
                android:layout_marginBottom="@dimen/dp_size_12"
                android:layout_marginRight="@dimen/dp_size_12"
                android:layout_marginTop="@dimen/dp_size_10"
                android:drawableRight="@drawable/ic_spinner_icon"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:gravity="right"
                android:rotation="@integer/int_value_270" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_join_view_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_size_15"
            android:layout_marginLeft="@dimen/dp_size_50"
            android:layout_marginRight="@dimen/dp_size_50"
            android:layout_marginTop="@dimen/dp_size_10"
            android:background="@drawable/rectangle_feed_commnity_join"
            android:fontFamily="@string/ID_ROBOTO_MEDIUM"
            android:gravity="center"
            android:padding="@dimen/dp_size_15"
            android:text="@string/ID_JOIN"
            android:textColor="@color/footer_icon_text"
            android:textSize="@dimen/sp_size_12"/>

    </LinearLayout>
</android.support.v7.widget.CardView>