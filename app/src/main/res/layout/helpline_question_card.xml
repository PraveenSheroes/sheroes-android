<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:vernacular="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/feed_back_color"
    card_view:cardCornerRadius="@dimen/helpline_card_corner_radius">

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/helpline_outer_layout_padding">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/LinearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/helpline_margin"
                android:background="@drawable/outgoing_shap"
                android:orientation="vertical"
                android:shadowColor="@color/green">

                <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
                    android:id="@+id/question"
                    style="@style/TextView14spRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_marginBottom="@dimen/helpline_margin"
                    android:layout_marginLeft="@dimen/helpline_margin"
                    android:layout_marginRight="@dimen/helpline_margin"
                    android:layout_marginTop="@dimen/helpline_margin"
                    android:enabled="true"
                    android:focusable="true"
                    android:gravity="left|center_horizontal"
                    android:linksClickable="true"
                    android:longClickable="true"
                    android:minHeight="@dimen/help_card_min_height"
                    android:textAllCaps="false"
                    android:textColor="@color/comment_text"
                    android:textColorLink="@color/view_more"
                    android:textIsSelectable="true"
                    vernacular:customTextFontFamily="@string/regular_font" />

            </LinearLayout>

            <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
                android:id="@+id/time_question"
                style="@style/TextView12spRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/LinearLayout2"
                android:layout_marginBottom="@dimen/helpline_time_margin"
                android:layout_marginRight="@dimen/helpline_time_margin"
                android:layout_marginTop="@dimen/helpline_time_margin"
                android:textAllCaps="false"
                android:textColor="@color/helpline_text_time_color"
                vernacular:customTextFontFamily="@string/regular_font" />

        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>