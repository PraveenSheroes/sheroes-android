<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_gradient1"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_size_15">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_team"
        android:textColor="@color/white"
        android:shadowRadius="@integer/int_value_for_line_4"
        android:text="TEAM "
        android:fontFamily="@string/ID_ROBOTO_REGULAR"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHEROES"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/tv_team"
            android:fontFamily="@string/ID_ROBOTO_BOLD"/>
    </RelativeLayout>
    <ScrollView
        android:id="@+id/sv_welcome_sheroes_boardinng"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_size_212"
                    android:src="@drawable/welcome_team" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_size_30"
                    android:layout_marginRight="@dimen/dp_size_30"
                    android:background="@drawable/rounded_shap"

                    android:layout_marginTop="@dimen/dp_size_165"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_size_20"
                        android:fontFamily="@string/ID_ROBOTO_REGULAR"
                        android:text="@string/ID_WELCOME"
                        android:textAllCaps="true"
                        android:textColor="@color/searchbox_text_color"
                        android:textSize="@dimen/sp_size_14" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_size_20"
                        android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                        android:textAllCaps="true"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/sp_size_18" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_size_20"
                        android:fontFamily="@string/ID_ROBOTO_REGULAR"
                        android:text="@string/ID_WELCOME_WOMEN"
                        android:lineSpacingExtra="@dimen/dp_size_4"
                        android:textAlignment="center"
                        android:layout_marginLeft="@dimen/dp_size_20"
                        android:layout_marginRight="@dimen/dp_size_20"
                        android:textColor="@color/text_color_follow"
                        android:textSize="@dimen/sp_size_13" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_size_25"
                        android:layout_marginTop="@dimen/dp_size_20"
                        android:fontFamily="@string/ID_ROBOTO_REGULAR"
                        android:layout_marginLeft="@dimen/dp_size_20"
                        android:layout_marginRight="@dimen/dp_size_20"
                        android:lineSpacingExtra="@dimen/dp_size_4"
                        android:text="@string/ID_WELCOME_DETAIL"
                        android:textAlignment="center"
                        android:textColor="@color/text_color_follow"
                        android:textSize="@dimen/sp_size_13" />
                </LinearLayout>
            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_size_50"
                android:layout_marginRight="@dimen/dp_size_50"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_size_14"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:layout_marginTop="@dimen/dp_size_30"
                android:text="@string/ID_TELL_ABOUT"/>
            <TextView
                android:id="@+id/iv_hey_success_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_52"
                android:layout_marginRight="@dimen/dp_size_52"
                android:padding="@dimen/dp_size_16"
                android:layout_marginTop="@dimen/dp_size_35"
                android:background="@drawable/facbook_ractangle"
                android:text="@string/ID_LETS_TALK"
                android:textSize="@dimen/sp_size_13"
                android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                android:textColor="@color/white"
                android:layout_marginBottom="@dimen/dp_size_35"
                android:layout_gravity="center"
                android:gravity="center"
                />
        </LinearLayout>
    </ScrollView>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
