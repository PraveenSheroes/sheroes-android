<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_gradiant_color"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_size_212"
                    android:src="@drawable/welcome_team" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_size_30"
                    android:layout_marginRight="@dimen/dp_size_30"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/dp_size_165"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_size_30"
                        android:fontFamily="@string/ID_ROBOTO_REGULAR"
                        android:text="@string/ID_WELCOME"
                        android:textAllCaps="true"
                        android:textColor="@color/searchbox_text_color"
                        android:textSize="@dimen/sp_size_16" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_size_15"
                        android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                        android:textAllCaps="true"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/sp_size_18" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_size_30"
                        android:fontFamily="@string/ID_ROBOTO_REGULAR"
                        android:text="@string/ID_WELCOME_WOMEN"
                        android:textAlignment="center"
                        android:layout_marginLeft="@dimen/dp_size_20"
                        android:layout_marginRight="@dimen/dp_size_20"
                        android:textAllCaps="true"
                        android:textColor="@color/text_color_follow"
                        android:textSize="@dimen/sp_size_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_size_25"
                        android:layout_marginTop="@dimen/dp_size_20"
                        android:fontFamily="@string/ID_ROBOTO_REGULAR"
                        android:layout_marginLeft="@dimen/dp_size_20"
                        android:layout_marginRight="@dimen/dp_size_20"
                        android:text="@string/ID_WELCOME_DETAIL"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/text_color_follow"
                        android:textSize="@dimen/sp_size_14" />
                </LinearLayout>
            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_size_50"
                android:layout_marginRight="@dimen/dp_size_50"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_size_16"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:layout_marginTop="@dimen/dp_size_30"
                android:text="@string/ID_TELL_ABOUT"/>
            <TextView
                android:id="@+id/iv_hey_success_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_54"
                android:layout_marginRight="@dimen/dp_size_54"
                android:padding="@dimen/dp_size_20"
                android:layout_marginTop="@dimen/dp_size_35"
                android:background="@drawable/facbook_ractangle"
                android:text="@string/ID_LETS_TALK"
                android:textSize="@dimen/sp_size_12"
                android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                android:textColor="@color/white"
                android:layout_marginBottom="@dimen/dp_size_35"
                android:layout_gravity="center"
                android:gravity="center"
                />
        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>
