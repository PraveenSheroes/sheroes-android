<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/r1_profile_profesional"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/home_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_size_65"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <include
                layout="@layout/setting_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/r1_profile_profesional">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:isScrollContainer="false"
            android:orientation="vertical">

            <appliedlife.pvtltd.SHEROES.views.cutomeviews.materialspinner.MaterialSpinner
                android:id="@+id/spinner_current_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:hint="@string/ID_CURRENT_STATUS"
                android:spinnerMode="dialog"
                android:textColorHint="@color/text_color_contactdetails_page"
                android:textSize="@dimen/sp_size_13">

            </appliedlife.pvtltd.SHEROES.views.cutomeviews.materialspinner.MaterialSpinner>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/et_sector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:focusableInTouchMode="true"
                android:padding="@dimen/dp_size_16">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:hint="@string/ID_SELF_EMP_SECTOR_HINT"
                    android:textColor="@color/count_char_text_color"
                    android:textColorHint="@color/text_color_setting_preference_basicdetails"
                    android:textSize="@dimen/sp_size_13" />

            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/tv_total_work_exp_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:padding="@dimen/dp_size_16"
                android:text="@string/ID_TOTAL_WORK_EXPERIENCE"
                android:textAllCaps="true"
                android:textColor="@color/text_color_setting_preference_basicdetails"
                android:textSize="@dimen/sp_size_13" />


            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:padding="@dimen/dp_size_16"
                android:text="@string/ID_DURECTION"
                android:textColor="@color/text_color_setting_preference_basicdetails"
                android:textSize="@dimen/sp_size_13" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/et_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_size_16"
                    android:background="@drawable/date_edittext_backgroundstyle"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:hint="@string/ID_YEARS"
                    android:paddingBottom="@dimen/dp_size_13"
                    android:paddingRight="@dimen/dp_size_16"
                    android:paddingTop="@dimen/dp_size_16"
                    android:textColor="@color/text_color_setting_preference_basicdetails"
                    android:textColorHint="@color/text_color_contactdetails_page"
                    android:textSize="@dimen/sp_size_13" />

                <EditText
                    android:id="@+id/et_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_size_16"
                    android:layout_toRightOf="@+id/et_year"
                    android:background="@drawable/date_edittext_backgroundstyle"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:hint="@string/ID_MONTHS"
                    android:paddingBottom="@dimen/dp_size_13"
                    android:paddingTop="@dimen/dp_size_16"
                    android:textColor="@color/text_color_setting_preference_basicdetails"
                    android:textColorHint="@color/text_color_contactdetails_page"
                    android:textSize="@dimen/sp_size_13" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:padding="@dimen/dp_size_16"
                android:text="@string/ID_LANGUAGE"
                android:textAllCaps="true"
                android:textColor="@color/text_color_setting_preference_basicdetails"
                android:textSize="@dimen/sp_size_13" />

            <include
                layout="@layout/add_language_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top" />

            <LinearLayout
                android:id="@+id/l2_project_add_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_size_15"
                android:background="@color/background_color_project_number"
                android:layout_marginBottom="@dimen/dp_size_60"
                android:gravity="right">

                <TextView
                    android:id="@+id/add_language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dp_size_10"
                    android:drawableRight="@drawable/ic_add_city_icon"
                    android:padding="@dimen/dp_size_16"
                    android:paddingRight="@dimen/dp_size_16"
                    android:textAllCaps="true"
                    android:text="@string/ID_LANGUAGE"
                    android:textSize="@dimen/dp_size_13" />

            </LinearLayout>


        </LinearLayout>


    </ScrollView>

    <Button
        android:id="@+id/btn_profile_professional_details"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/ID_SAVE"
        android:textColor="@color/white"
        android:fontFamily="@string/ID_ROBOTO_MEDIUM"
        android:background="@color/footer_icon_text"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
