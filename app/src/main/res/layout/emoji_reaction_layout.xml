<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_size_60"
    android:background="@drawable/ic_reaction_strip_background"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_reaction"
        android:layout_width="@dimen/dp_size_72"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_heart_emoji"
        android:fontFamily="@string/ID_ROBOTO_REGULAR"
        android:text="@string/ID_LOVE"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_size_12"
        android:gravity="center"
        android:layout_gravity="center"
        android:drawablePadding="@dimen/dp_size_4"
        android:paddingBottom="@dimen/dp_size_5"
        android:paddingTop="@dimen/dp_size_5"
        />
    <TextView
        android:id="@+id/tv_reaction1"
        android:layout_width="@dimen/dp_size_72"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_whistle"
        android:fontFamily="@string/ID_ROBOTO_REGULAR"
        android:text="@string/ID_WISHTLE"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_size_12"
        android:gravity="center"
        android:layout_gravity="center"
        android:drawablePadding="@dimen/dp_size_4"
        android:paddingBottom="@dimen/dp_size_5"
        android:paddingTop="@dimen/dp_size_5"
        />

    <TextView
        android:id="@+id/tv_reaction2"
        android:layout_width="@dimen/dp_size_72"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_xoxo"
        android:fontFamily="@string/ID_ROBOTO_REGULAR"
        android:text="@string/ID_XOXO"
        android:textSize="@dimen/sp_size_12"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center"
        android:drawablePadding="@dimen/dp_size_4"
        android:paddingBottom="@dimen/dp_size_5"
        android:paddingTop="@dimen/dp_size_5"/>


    <TextView
        android:id="@+id/tv_reaction3"
        android:layout_width="@dimen/dp_size_72"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_with_you"
        android:fontFamily="@string/ID_ROBOTO_REGULAR"
        android:text="@string/ID_LIKE"
        android:textSize="@dimen/sp_size_12"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center"
        android:drawablePadding="@dimen/dp_size_4"
        android:paddingBottom="@dimen/dp_size_5"
        android:paddingTop="@dimen/dp_size_5"/>
    <TextView
        android:id="@+id/tv_reaction4"
        android:layout_width="@dimen/dp_size_72"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_facepalm"
        android:fontFamily="@string/ID_ROBOTO_REGULAR"
        android:text="@string/ID_FACE_PALM"
        android:textSize="@dimen/sp_size_12"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center"
        android:drawablePadding="@dimen/dp_size_4"
        android:paddingBottom="@dimen/dp_size_5"
        android:paddingTop="@dimen/dp_size_5"/>

</LinearLayout>