<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_reaction_strip_background"
    android:alpha="1"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_reaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_heart_emoji"
        android:fontFamily="@string/ID_ROBOTO_REGULAR"
        android:text="@string/ID_LOVE"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_size_12"
        android:gravity="center"
        android:layout_gravity="center"
        android:drawablePadding="@dimen/dp_size_8"
        android:paddingLeft="@dimen/dp_size_28"
        android:paddingTop="@dimen/dp_size_12"
        android:paddingRight="@dimen/dp_size_14"
        android:paddingBottom="@dimen/dp_size_15"
        />
    <TextView
        android:id="@+id/tv_reaction1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_whistle"
        android:fontFamily="@string/ID_ROBOTO_REGULAR"
        android:text="@string/ID_WISHTLE"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_size_12"
        android:gravity="center"
        android:layout_gravity="center"
        android:drawablePadding="@dimen/dp_size_8"
        android:paddingLeft="@dimen/dp_size_14"
        android:paddingTop="@dimen/dp_size_12"
        android:paddingRight="@dimen/dp_size_14"
        android:paddingBottom="@dimen/dp_size_15"
        />

    <TextView
        android:id="@+id/tv_reaction2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_xoxo"
        android:fontFamily="@string/ID_ROBOTO_REGULAR"
        android:text="@string/ID_XOXO"
        android:textSize="@dimen/sp_size_12"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center"
        android:drawablePadding="@dimen/dp_size_8"
        android:paddingLeft="@dimen/dp_size_14"
        android:paddingTop="@dimen/dp_size_12"
        android:paddingRight="@dimen/dp_size_14"
        android:paddingBottom="@dimen/dp_size_15"/>


    <TextView
        android:id="@+id/tv_reaction3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_with_you"
        android:fontFamily="@string/ID_ROBOTO_REGULAR"
        android:text="@string/ID_LIKE"
        android:textSize="@dimen/sp_size_12"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center"
        android:drawablePadding="@dimen/dp_size_8"
        android:paddingLeft="@dimen/dp_size_15"
        android:paddingTop="@dimen/dp_size_12"
        android:paddingRight="@dimen/dp_size_15"
        android:paddingBottom="@dimen/dp_size_15"/>
    <TextView
        android:id="@+id/tv_reaction4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_facepalm"
        android:fontFamily="@string/ID_ROBOTO_REGULAR"
        android:text="@string/ID_FACE_PALM"
        android:textSize="@dimen/sp_size_12"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center"
        android:drawablePadding="@dimen/dp_size_8"
        android:paddingLeft="@dimen/dp_size_12"
        android:paddingTop="@dimen/dp_size_12"
        android:paddingRight="@dimen/dp_size_12"
        android:paddingBottom="@dimen/dp_size_15"/>

</LinearLayout>
