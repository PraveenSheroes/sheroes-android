<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:vernacular="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_community_single_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_132"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:id="@+id/rl_gradiant"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_50"
        android:layout_gravity="bottom"
        android:alpha=".8"
        android:background="@drawable/view_holder_gradiant"
        android:gravity="bottom"
        android:visibility="gone">

        <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
            android:id="@+id/tv_community_time_label"
            style="@style/TextView14spBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/dp_size_12"
            android:layout_marginLeft="@dimen/dp_size_16"
            android:drawableLeft="@drawable/vector_timer_icon"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_size_12"
            vernacular:customTextFontFamily="@string/medium_font" />

        <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
            android:id="@+id/tv_community_total_views"
            style="@style/TextView12spRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp_size_12"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="@dimen/dp_size_16"
            android:background="@drawable/rectangle_detail_round"
            android:paddingBottom="@dimen/dp_size_5"
            android:paddingLeft="@dimen/dp_size_10"
            android:paddingRight="@dimen/dp_size_10"
            android:paddingTop="@dimen/dp_size_5"
            android:textColor="@color/white"
            vernacular:customTextFontFamily="@string/regular_font" />
    </RelativeLayout>

</FrameLayout>
