<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/fl_shadow_image_with_landscap"
        android:layout_width="match_parent"
        android:background="@color/comment_box_edit_border"
        android:layout_height="wrap_content">
        <ProgressBar
            android:layout_width="@dimen/dp_size_30"
            android:layout_height="@dimen/dp_size_30"
            android:layout_gravity="center"
            android:indeterminateTint="@color/white"/>
    </FrameLayout>
        <ImageView
            android:id="@+id/iv_feed_community_post_first_landscape_with_two_images"
            android:layout_width="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:layout_height="@dimen/dp_size_300" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_size_3"
        android:weightSum="@integer/int_value_for_line_1"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_feed_community_post_second_image_landscape_with_two_images"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:visibility="gone"
            android:layout_height="@dimen/two_image_rectangle"
            android:scaleType="centerCrop"/>
        <FrameLayout
            android:id="@+id/fl_shadow_image_post_first_with_landscap"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="@dimen/two_image_rectangle"
            android:background="@color/comment_box_edit_border">
            <ProgressBar
                android:layout_width="@dimen/dp_size_30"
                android:layout_height="@dimen/dp_size_30"
                android:layout_gravity="center"
                android:indeterminateTint="@color/white"/>
        </FrameLayout>

        <ImageView
            android:id="@+id/iv_feed_community_post_third_image_landscape_with_two_images"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="@dimen/two_image_rectangle"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/dp_size_3"
            android:scaleType="centerCrop"/>
        <FrameLayout
            android:id="@+id/fl_shadow_image_post_second_with_landscap"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_marginLeft="@dimen/dp_size_3"
            android:layout_height="@dimen/two_image_rectangle"
            android:background="@color/comment_box_edit_border">
            <ProgressBar
                android:layout_width="@dimen/dp_size_30"
                android:layout_height="@dimen/dp_size_30"
                android:layout_gravity="center"
                android:indeterminateTint="@color/white"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
