<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/feed_community_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_size_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_size_16"
            android:gravity="top"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/li_feed_event_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_6"
                android:layout_marginRight="@dimen/dp_size_6"
                android:layout_marginTop="@dimen/dp_size_7"
                android:clickable="false"
                android:orientation="horizontal"
                android:saveEnabled="false">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_size_16"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_event_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/ID_ROBOTO_REGULAR"
                        android:text="JUN"
                        android:textColor="@color/footer_icon_text"
                        android:textSize="@dimen/sp_size_10" />

                    <TextView
                        android:id="@+id/tv_event_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/ID_ROBOTO_REGULAR"
                        android:text="01"
                        android:textColor="@color/faq_question_color"
                        android:textSize="@dimen/sp_size_18" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_event_title"
                    android:layout_width="@dimen/dp_size_200"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_size_30"
                    android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                    android:lineSpacingExtra="@dimen/dp_size_4"
                    android:text="Undergrind Death Metal fest with Dying Fetus"
                    android:textColor="@color/detail_page_text"
                    android:textSize="@dimen/sp_size_16" />


            </LinearLayout>

            <TextView
                android:id="@+id/tv_event_interested_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_70"
                android:layout_marginTop="@dimen/dp_size_6"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:text="40 people are interested"
                android:textColor="@color/event_text"
                android:textSize="@dimen/sp_size_10" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_size_16"
                android:layout_marginTop="@dimen/dp_size_16"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_event_interested_btn"
                    android:layout_width="@dimen/dp_size_105"
                    android:layout_height="@dimen/dp_size_30"
                    android:layout_marginRight="@dimen/dp_size_8"
                    android:background="@drawable/rectangle_feed_commnity_join"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:gravity="center"
                    android:text="@string/ID_INTERESTED"
                    android:textAllCaps="true"
                    android:textColor="@color/footer_icon_text"
                    android:textSize="@dimen/sp_size_12" />

                <TextView
                    android:id="@+id/tv_event_going_btn"
                    android:layout_width="@dimen/dp_size_90"
                    android:layout_height="@dimen/dp_size_30"
                    android:layout_marginRight="@dimen/dp_size_8"
                    android:background="@drawable/rectangle_feed_commnity_join"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:gravity="center"
                    android:text="@string/ID_GOING"
                    android:textAllCaps="true"
                    android:textColor="@color/footer_icon_text"
                    android:textSize="@dimen/sp_size_12" />

                <TextView
                    android:id="@+id/tv_event_share_btn"
                    android:layout_width="@dimen/dp_size_30"
                    android:layout_height="@dimen/dp_size_30"
                    android:layout_marginRight="@dimen/dp_size_52"
                    android:background="@drawable/rectangle_feed_commnity_join"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="@color/footer_icon_text"
                    android:textSize="@dimen/sp_size_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_65"
                android:gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_event_interested_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_size_8"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:gravity="center"
                    android:text="@string/ID_INTERESTED"
                    android:textColor="@color/event_text"
                    android:textSize="@dimen/sp_size_12" />

                <TextView
                    android:id="@+id/tv_event_going_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:gravity="center"
                    android:text="@string/ID_GOING"
                    android:textColor="@color/event_text"
                    android:textSize="@dimen/sp_size_12" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_size_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_size_16"
            android:gravity="top"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_6"
                android:layout_marginRight="@dimen/dp_size_6"
                android:layout_marginTop="@dimen/dp_size_7"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_start_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_job_date_time"
                    android:drawablePadding="@dimen/dp_size_35"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:text="Today at 3:00 PM - 6:00 PM"
                    android:textColor="@color/detail_page_text"
                    android:textSize="@dimen/sp_size_14" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_size_22"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_address_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_job_location"
                        android:drawablePadding="@dimen/dp_size_35"
                        android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                        android:text="SHEROES OFFICE"
                        android:textColor="@color/detail_page_text"
                        android:textSize="@dimen/sp_size_14" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_size_48"
                        android:layout_marginTop="@dimen/dp_size_8"
                        android:fontFamily="@string/ID_ROBOTO_REGULAR"
                        android:text="F- 213/C, 1 st floor, SIS House, Lado Sarai"
                        android:textColor="@color/event_text"
                        android:textSize="@dimen/sp_size_12" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_size_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_size_16"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ID_DETAIL_ABOUT_EVENT"
                android:textColor="@color/detail_page_text"
                android:textSize="@dimen/sp_size_16"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_40"
                android:fontFamily="@string/ID_ROBOTO_LIGHT"
                android:text="@string/ID_DETAIL_ABOUT_EVENT"
                android:textColor="@color/detail_page_text"
                android:textSize="@dimen/sp_size_12" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_size_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ID_SPEAKER"
            android:textColor="@color/detail_page_text"
            android:layout_marginLeft="@dimen/dp_size_16"
            android:layout_marginTop="@dimen/dp_size_16"
            android:textAllCaps="true"
            android:textSize="@dimen/sp_size_16"
            android:textStyle="bold" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_event_speaker_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_size_55"
            android:divider="@color/fully_transparent" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_size_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_size_16"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ID_SPONSORS"
                android:textAllCaps="true"
                android:textColor="@color/detail_page_text"
                android:textSize="@dimen/sp_size_16"
                android:textStyle="bold" />

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:weightSum="@integer/int_value_for_line_1">
              <FrameLayout
                  android:layout_width="0dp"
                  android:layout_weight=".5"
                  android:layout_height="wrap_content">
                  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:src="@drawable/ic_anonomous"/>
              </FrameLayout>
              <FrameLayout
                  android:layout_width="0dp"
                  android:layout_weight=".5"
                  android:layout_height="wrap_content">
                  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:src="@drawable/ic_anonomous"/>
              </FrameLayout>
          </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>