<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_size_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_size_16"
            android:gravity="top"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/li_feed_event_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_6"
                android:layout_marginRight="@dimen/dp_size_6"
                android:layout_marginTop="@dimen/dp_size_7"
                android:clickable="false"
                android:orientation="horizontal"
                android:saveEnabled="false">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_size_16"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_event_detail_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textAllCaps="true"
                        android:textColor="@color/footer_icon_text"
                        android:textSize="@dimen/sp_size_10" />

                    <TextView
                        android:id="@+id/tv_event_detail_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textColor="@color/faq_question_color"
                        android:textSize="@dimen/sp_size_18" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_event_detail_title"
                    android:layout_width="@dimen/dp_size_200"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_size_30"
                    android:lineSpacingExtra="@dimen/dp_size_4"
                    android:textColor="@color/detail_page_text"
                    android:textSize="@dimen/sp_size_16" />


            </LinearLayout>

            <TextView
                android:id="@+id/tv_event_detail_interested_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_70"
                android:layout_marginTop="@dimen/dp_size_6"

                android:text="Hosted by SHEROES"
                android:textColor="@color/event_text"
                android:textSize="@dimen/sp_size_10" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_size_16"
                android:layout_marginTop="@dimen/dp_size_16"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_event_detail_interested_btn"
                    android:layout_width="@dimen/dp_size_105"
                    android:layout_height="@dimen/dp_size_30"
                    android:layout_marginRight="@dimen/dp_size_8"
                    android:background="@drawable/rectangle_feed_commnity_join"

                    android:gravity="center"
                    android:text="@string/ID_INTERESTED"
                    android:textAllCaps="true"
                    android:textColor="@color/footer_icon_text"
                    android:textSize="@dimen/sp_size_12" />

                <TextView
                    android:id="@+id/tv_event_detail_going_btn"
                    android:layout_width="@dimen/dp_size_90"
                    android:layout_height="@dimen/dp_size_30"
                    android:layout_marginRight="@dimen/dp_size_8"
                    android:background="@drawable/rectangle_feed_commnity_join"

                    android:gravity="center"
                    android:text="@string/ID_GOING"
                    android:textAllCaps="true"
                    android:textColor="@color/footer_icon_text"
                    android:textSize="@dimen/sp_size_12" />

                <Button
                    android:id="@+id/tv_event_share_btn"
                    android:layout_width="@dimen/dp_size_30"
                    android:layout_height="@dimen/dp_size_30"
                    android:layout_marginRight="@dimen/dp_size_17"
                    android:background="@drawable/selector_event_share"

                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="@color/footer_icon_text"
                    android:textSize="@dimen/sp_size_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_70"
                android:gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_event_detail_going_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_size_8"
                    android:drawableLeft="@drawable/vector_going_check"

                    android:drawablePadding="@dimen/dp_size_5"
                    android:gravity="center"
                    android:textColor="@color/event_text"
                    android:textSize="@dimen/sp_size_12" />

                <TextView
                    android:id="@+id/tv_event_detail_interested_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:drawableLeft="@drawable/vector_interested_check"
                    android:drawablePadding="@dimen/dp_size_5"
                    android:gravity="center"
                    android:textColor="@color/event_text"
                    android:textSize="@dimen/sp_size_12" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_size_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_size_16"
            android:gravity="top"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_6"
                android:layout_marginRight="@dimen/dp_size_6"
                android:layout_marginTop="@dimen/dp_size_7"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_start_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/vector_job_date_time"
                    android:drawablePadding="@dimen/dp_size_35"

                    android:textColor="@color/detail_page_text"
                    android:textSize="@dimen/sp_size_14" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_size_22"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_event_address_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/vector_job_location"
                        android:drawablePadding="@dimen/dp_size_35"

                        android:textColor="@color/detail_page_text"
                        android:textSize="@dimen/sp_size_14" />

                    <TextView
                        android:id="@+id/tv_event_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_size_48"

                        android:textColor="@color/event_text"
                        android:textSize="@dimen/sp_size_12" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_size_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_size_16"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ID_DETAIL_ABOUT_EVENT"
                android:textColor="@color/detail_page_text"
                android:textSize="@dimen/sp_size_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_event_detail_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_40"
                android:lineSpacingExtra="@dimen/dp_size_3"
                android:textColor="@color/detail_page_text"
                android:textSize="@dimen/sp_size_12" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_speaker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_size_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_16"
            android:layout_marginTop="@dimen/dp_size_16"
            android:text="@string/ID_SPEAKER"
            android:textAllCaps="true"
            android:textColor="@color/detail_page_text"
            android:textSize="@dimen/sp_size_16"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_event_speaker_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_size_55"
            android:divider="@color/fully_transparent" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_sponsor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_size_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_16"
            android:layout_marginTop="@dimen/dp_size_16"
            android:text="@string/ID_SPONSORS"
            android:textAllCaps="true"
            android:textColor="@color/detail_page_text"
            android:textSize="@dimen/sp_size_16"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_event_sponsers_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_size_55"
            android:divider="@color/fully_transparent" />
    </android.support.v7.widget.CardView>
</LinearLayout>