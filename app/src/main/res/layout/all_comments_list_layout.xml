<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/li_list_comment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/dp_size_10">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView
                android:id="@+id/iv_list_comment_profile_pic"
                android:layout_width="@dimen/comment_icon"
                android:layout_height="@dimen/comment_icon"
                android:src="@drawable/ic_createc_ommunity_icon" />
            <ImageView
                android:id="@+id/iv_list_comment_profile_pic_verified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:visibility="gone"
                android:background="@drawable/ic_verified" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/li_user_comment_with_name"
            android:layout_width="@dimen/dp_size_290"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <appliedlife.pvtltd.SHEROES.views.cutomeviews.NoScrollTextView
                android:id="@+id/tv_list_user_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_10"
                android:textColorLink="@color/view_more"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:textColor="@color/detail_page_text"
                android:lineSpacingExtra="@dimen/dp_size_4"
                android:textSize="@dimen/sp_size_12"
                />

            <TextView
                android:id="@+id/tv_list_user_comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_10"
                android:layout_marginTop="@dimen/dp_size_4"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:layout_gravity="top"
                android:textColor="@color/detail_page_text"
                android:textSize="@dimen/sp_size_10" />

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/comment_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginLeft="@dimen/dp_size_10"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="@color/posted_in"
                android:text="Like"/>

            <TextView
                android:id="@+id/comment_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginLeft="@dimen/dp_size_10"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:text="-1"
                android:textColor="#90949c" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_user_comment_list_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_menu_dashboard"
            android:paddingLeft="@dimen/dp_size_10"
            android:paddingBottom="@dimen/dp_size_11"
            android:paddingTop="@dimen/dp_size_11"
            android:paddingRight="@dimen/dp_size_20"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_0.1"
        android:layout_marginLeft="@dimen/dp_size_50"
        android:layout_marginRight="@dimen/dp_size_10"
        android:layout_marginBottom="@dimen/dp_size_10"
        android:background="@color/line_color" />

</LinearLayout>
