<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/li_comment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_size_10"
        android:weightSum="1">

        <appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView
            android:id="@+id/iv_comment_profile_pic"
            android:layout_width="@dimen/dp_size_27"
            android:layout_height="@dimen/dp_size_27"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/ic_footer_button_icon" />

        <TextView
            android:id="@+id/tv_user_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:padding="@dimen/dp_size_10"

            android:textColor="@color/detail_page_text"
            android:text="@string/ID_ERROR_INVALID_EMAIL"
            android:textSize="@dimen/sp_size_12"
            android:textStyle="bold" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_0.1"
        android:layout_marginLeft="@dimen/dp_size_10"
        android:layout_marginRight="@dimen/dp_size_10"
        android:background="@color/line_color" />

</LinearLayout>
