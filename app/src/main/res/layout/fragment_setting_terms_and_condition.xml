<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/home_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_size_65"

                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                        <include
                            layout="@layout/setting_header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|top" />

                </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>
<ScrollView

    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
   >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_size_16"
    android:paddingRight="@dimen/dp_size_16"
    >

        <TextView
            android:id="@+id/tv_terms_and_cond"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:paddingTop="@dimen/dp_size_21"
            android:textSize="@dimen/sp_size_13"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:lineSpacingExtra="@dimen/sp_size_4"
            android:textColor="@color/text_color_about"
            android:text="@string/ID_TERMS_AND_COND"
            />


</LinearLayout>

</ScrollView>
</LinearLayout>