<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_compact_card"
    android:layout_width="300dp"
    android:layout_height="220dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp">

            <appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView
                android:id="@+id/user_image"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <ImageView
                android:id="@+id/profile_verified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:background="@drawable/ic_verified"
                android:visibility="gone" />
        </FrameLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/image">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="16dp"
            android:textColor="#dd3c3c3c"
            android:lineSpacingExtra="8sp" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textSize="14sp"
            android:drawableLeft="@drawable/ic_loc"
            android:drawablePadding="6dp"
            android:layout_below="@+id/name"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="#dd878787" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/count_detail_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:weightSum="1"
            android:layout_below="@id/image">

            <LinearLayout
                android:id="@+id/post_count_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.33"
                android:layout_marginLeft="8dp"
                android:gravity="center">


                <TextView
                    android:id="@+id/post_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:textColor="#3c3c3c"
                    tools:text="00" />

                <TextView
                    android:id="@+id/post_count_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:lines="1"
                    android:textColor="#878787"
                    tools:text="Posts" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/comments_count_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.33"
                android:layout_marginLeft="8dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/comments_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:textColor="#3c3c3c"
                    tools:text="00" />

                <TextView
                    android:id="@+id/comments_count_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:lines="1"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="#878787"
                    tools:text="Comments"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/followers_count_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.33"
                android:layout_marginLeft="8dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/follower_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:textColor="#3c3c3c"
                    tools:text="00" />

                <TextView
                    android:id="@+id/follower_count_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:lines="1"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="#878787"
                    tools:text="Followers"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/follow_button"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/rectangle_feed_commnity_join"
            android:fontFamily="@string/ID_ROBOTO_MEDIUM"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_size_7"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="@dimen/dp_size_16"
            android:paddingTop="@dimen/dp_size_7"
            android:layout_below="@id/count_detail_view"
            tools:text="FOLLOW"
            android:textAllCaps="true"
            android:textColor="@color/footer_icon_text"
            android:textSize="@dimen/sp_size_14" />
    </RelativeLayout>
</android.support.v7.widget.CardView>