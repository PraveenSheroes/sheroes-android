<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_compact_card"
    android:layout_width="300dp"
    android:layout_height="220dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp">

            <appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView
                android:id="@+id/user_image"
                android:src="@color/black"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <ImageView
                android:id="@+id/profile_verified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:background="@drawable/ic_verified"
                android:visibility="gone" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/count_detail_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/image"
            android:weightSum="@integer/int_value_for_line_1">

            <LinearLayout
                android:id="@+id/post_count_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight=".33">

                <TextView
                    android:id="@+id/post_count_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                    android:textStyle="bold"
                    android:textColor="@color/feed_article_label"
                    android:textSize="@dimen/sp_size_18" />

                <TextView
                    android:id="@+id/post_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:layout_gravity="center"
                    android:textColor="@color/recent_post_comment"
                    android:textSize="@dimen/sp_size_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/comments_count_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_size_6"
                android:layout_weight=".3">

                <TextView
                    android:id="@+id/comments_count_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="@color/feed_article_label"
                    android:textSize="@dimen/sp_size_18" />

                <TextView
                    android:id="@+id/comments_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:textColor="@color/recent_post_comment"
                    android:textSize="@dimen/sp_size_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/followers_count_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_size_6"
                android:layout_weight=".33">

                <TextView
                    android:id="@+id/follower_count_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="@color/feed_article_label"
                    android:textSize="@dimen/sp_size_18" />

                <TextView
                    android:id="@+id/follower_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:layout_gravity="center"
                    android:textColor="@color/recent_post_comment"
                    android:textSize="@dimen/sp_size_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/li_following"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_size_6"
                android:layout_weight=".33">

                <TextView
                    android:id="@+id/tv_mentor_following_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                    android:layout_gravity="center"
                    android:textColor="@color/feed_article_label"
                    android:textSize="@dimen/sp_size_18" />

                <TextView
                    android:id="@+id/tv_mentor_following_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:layout_gravity="center"
                    android:textColor="@color/recent_post_comment"
                    android:textSize="@dimen/sp_size_14" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/follow_button"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/rectangle_feed_commnity_join"
            android:fontFamily="@string/ID_ROBOTO_MEDIUM"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_size_7"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="@dimen/dp_size_16"
            android:paddingTop="@dimen/dp_size_7"
            android:layout_toRightOf="@+id/image"
            android:layout_below="@id/count_detail_view"
            tools:text="FOLLOW"
            android:textAllCaps="true"
            android:textColor="@color/footer_icon_text"
            android:textSize="@dimen/sp_size_14" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:layout_below="@+id/image"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="16dp"
            android:textColor="#dd3c3c3c"
            android:lineSpacingExtra="8sp"
            tools:text="Sairee Chahal" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textSize="14sp"
            android:layout_below="@+id/name"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="#dd878787"
            tools:text="New Delhi" />

        <TextView
            android:id="@+id/bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_below="@id/location"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="#dd3c3c3c"
            android:lineSpacingExtra="9sp"
            tools:text="It is a long established fact that a reader will be distracted by theâ€¦View More" />
    </RelativeLayout>
</android.support.v7.widget.CardView>