<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:background="@color/white"
    android:orientation="horizontal">
<TextView
    android:id="@+id/tv_cancel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:padding="@dimen/dp_size_18"
    android:textSize="@dimen/sp_size_13"
    android:background="@drawable/current_status_selector"
    android:layout_marginRight="@dimen/dp_size_12"
    android:fontFamily="@string/ID_ROBOTO_MEDIUM"
    android:textColor="@color/black"
    android:text="@string/ID_CANCEL"/>
    <TextView
        android:id="@+id/tv_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_size_18"
        android:layout_gravity="right"
        android:background="@drawable/current_status_selector"
        android:textSize="@dimen/sp_size_13"
        android:fontFamily="@string/ID_ROBOTO_MEDIUM"
        android:textColor="@color/black"
        android:text="@string/ID_DONE"/>
</LinearLayout>
