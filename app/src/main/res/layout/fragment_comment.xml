<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_fragment_comment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_size_50"
        android:orientation="vertical">

        <include
            android:id="@+id/user_comment_header"
            layout="@layout/reaction_comment_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/swipe_comment_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_comment_reaction_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/fully_transparent" />
        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb_comment_reaction_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <LinearLayout
        android:id="@+id/li_no_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_size_150"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="@dimen/dp_size_350"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@string/ID_ROBOTO_MEDIUM"
            android:padding="@dimen/dp_size_20"
            android:text="@string/ID_NO_REPLIES"
            android:textAlignment="center"
            android:textColor="@color/feed_article_comment"
            android:textSize="@dimen/sp_size_14" />
    </LinearLayout>

    <!--  <include
          layout="@layout/user_comment_section_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="end|bottom"
          android:visibility="gone" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/li_user_comment"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="bottom"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_size_1"
                android:background="@color/search_tab_unselected_text" />

            <LinearLayout
                android:id="@+id/li_edit_text_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:weightSum="1">

                <appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView
                    android:id="@+id/iv_user_comment_profile_pic"
                    android:layout_width="@dimen/comment_icon"
                    android:layout_height="@dimen/comment_icon"
                    android:layout_gravity="top"
                    android:layout_marginTop="@dimen/dp_size_12" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_size_8"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/et_user_comment_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/fully_transparent"
                        android:fontFamily="@string/ID_ROBOTO_REGULAR"
                        android:hint="@string/ID_JOIN_CONVERSATION"
                        android:inputType="textCapSentences|textMultiLine"
                        android:lineSpacingExtra="@dimen/dp_size_4"
                        android:minHeight="@dimen/dp_size_48"
                        android:textColor="@color/black"
                        android:textColorHint="@color/user_comment_text"
                        android:textSize="@dimen/sp_size_13" />

                </FrameLayout>

                <TextView
                    android:id="@+id/tv_post_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="@dimen/dp_size_8"
                    android:drawableLeft="@drawable/ic_post_comment"
                    android:padding="@dimen/dp_size_10"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/view_line_of_edit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_size_1"
            android:background="@color/search_tab_unselected_text" />

        <LinearLayout
            android:id="@+id/li_user_comment_post_type_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_13"
            android:layout_marginBottom="@dimen/dp_size_5"
            android:layout_marginTop="@dimen/dp_size_10"
            android:padding="@dimen/dp_size_5"
            android:clickable="false"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_post_as_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                android:text="@string/ID_POST"
                android:enabled="false"
                android:textColor="@color/detail_page_text"
                android:textSize="@dimen/sp_size_12" />

            <TextView
                android:id="@+id/tv_user_name_for_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_25"
                android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                android:text="@string/ID_OWNER"
                android:textAllCaps="true"
                android:textColor="@color/blue"
                android:textSize="@dimen/sp_size_12" />

            <TextView
                android:id="@+id/tv_owner_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_20"
                android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                android:text="@string/ID_OWNER"
                android:textAllCaps="true"
                android:textColor="@color/searchbox_text_color"
                android:textSize="@dimen/sp_size_12"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_anonymous_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_20"
                android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                android:text="@string/ID_ANONYMOUS"
                android:textAllCaps="true"
                android:textColor="@color/searchbox_text_color"
                android:textSize="@dimen/sp_size_12" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
