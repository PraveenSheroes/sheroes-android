<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="@dimen/dp_size_5">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ID_WHAT_LOOKING_FOR"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_size_32"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:textColor="@color/feed_article_label"
            android:textSize="@dimen/sp_size_16"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_looking_for_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_size_25" />
            <ProgressBar
                android:id="@+id/pb_how_can_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:visibility="gone" />
        </FrameLayout>
        <appliedlife.pvtltd.SHEROES.views.cutomeviews.RippleView
            android:id="@+id/ripple_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_size_10"
            android:layout_marginBottom="@dimen/dp_size_10"
            android:background="@drawable/rectangle_btn"
            android:layout_marginTop="@dimen/dp_size_32"
            android:layout_gravity="center"
            android:paddingBottom="@dimen/dp_size_10"
            android:paddingLeft="@dimen/dp_size_50"
            android:paddingRight="@dimen/dp_size_50">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ID_FINISH"
            android:textColor="@color/white"
            android:fontFamily="@string/ID_ROBOTO_MEDIUM"
            android:textSize="@dimen/sp_size_14"/>
        </appliedlife.pvtltd.SHEROES.views.cutomeviews.RippleView>

    </LinearLayout>
</android.support.v7.widget.CardView>
