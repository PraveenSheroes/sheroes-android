<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="appliedlife.pvtltd.SHEROES.views.fragments.ExperienceSelfEmployedFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_save_selfempolyment_details"
        android:background="@color/white"
        android:isScrollContainer="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_size_20">

            <include layout="@layout/layout_fragment_work_experience_common" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_30"
                android:theme="@style/MyTextInputLayout">

                <EditText
                    android:id="@+id/et_description_your_work"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:hint="@string/ID_SELF_EMP_DESCRIPTION_HINT"
                    android:textColor="@color/text_color_contactdetails_page"
                    android:textColorHint="@color/text_color_setting_preference_basicdetails"
                    android:textSize="@dimen/sp_size_13"

                    />

            </android.support.design.widget.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_size_15"
                android:background="@color/background_color_project_number"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dp_size_10"
                    android:drawableRight="@drawable/ic_add_city_icon"
                    android:padding="@dimen/dp_size_15"
                    android:paddingRight="@dimen/dp_size_16"
                    android:text="@string/ID_PROJECT"
                    android:textSize="@dimen/sp_size_13" />
            </LinearLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_size_20"
                android:focusableInTouchMode="true">

                <EditText
                    android:id="@+id/et_job_organization_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/date_edittext_backgroundstyle"
                    android:drawableRight="@drawable/ic_spinner_icon"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:hint="@string/ID_SELF_EMP_ORGANIZATION_TYPE_HINT"
                    android:padding="@dimen/dp_size_16"
                    android:textColor="@color/text_color_contactdetails_page"
                    android:textSize="@dimen/sp_size_13" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:focusableInTouchMode="true">

                <EditText
                    android:id="@+id/et_add_sector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/date_edittext_backgroundstyle"
                    android:drawableRight="@drawable/ic_spinner_icon"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:hint="@string/ID_SECTOR_HINT"
                    android:padding="@dimen/dp_size_16"
                    android:textColor="@color/text_color_contactdetails_page"
                    android:textSize="@dimen/sp_size_13" />


            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_save_selfempolyment_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:fontFamily="@string/ID_ROBOTO_MEDIUM"
        android:text="@string/ID_SAVE"
        android:textColor="@color/white" />
</RelativeLayout>
