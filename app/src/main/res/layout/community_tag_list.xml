<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/search_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:id="@+id/tv_back_community_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_back_black"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_35">

            <include layout="@layout/search_layout"/>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/ll_indecator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_1"
        android:layout_below="@+id/search_toolbar"
        android:orientation="horizontal"
        android:weightSum="1">

        <View
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sp_size_1"
            android:layout_weight="0.33"
            android:background="@color/grey2"/>

        <View
            android:id="@+id/view1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sp_size_1"
            android:layout_weight="0.33"
            android:background="@color/grey2"/>

        <View
            android:id="@+id/view2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sp_size_1"
            android:layout_weight="0.33"
            android:background="@color/grey2"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_no_of_tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_indecator"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_size_5"
        android:text="0/3"
        android:textColor="@color/popular_tag_color"
        android:textSize="@dimen/sp_size_13"/>

    <RelativeLayout
        android:id="@+id/rel_selected_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_no_of_tags"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_selected_tag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_size_5"
            android:background="@drawable/selected_tag_shap"
            android:textColor="@color/blue"
            android:textSize="@dimen/sp_size_13"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_selected_tag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_size_5"
            android:layout_toRightOf="@+id/tv_selected_tag1"
            android:background="@drawable/selected_tag_shap"
            android:textColor="@color/blue"
            android:textSize="@dimen/sp_size_13"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_selected_tag3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_size_5"
            android:layout_toRightOf="@+id/tv_selected_tag2"
            android:background="@drawable/selected_tag_shap"
            android:textColor="@color/blue"
            android:textSize="@dimen/sp_size_13"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_selected_tag1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_selected_tag"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_selected_tag4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_size_5"
            android:background="@drawable/selected_tag_shap"
            android:textColor="@color/blue"
            android:textSize="@dimen/sp_size_13"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_selected_tag5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_size_5"
            android:layout_toRightOf="@+id/tv_selected_tag4"
            android:background="@drawable/selected_tag_shap"
            android:textColor="@color/blue"
            android:textSize="@dimen/sp_size_13"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_selected_tag6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_size_5"
            android:layout_toRightOf="@+id/tv_selected_tag5"
            android:background="@drawable/selected_tag_shap"
            android:textColor="@color/blue"
            android:textSize="@dimen/sp_size_13"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_selected_tag2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_selected_tag1"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_selected_tag7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_size_5"
            android:background="@drawable/selected_tag_shap"
            android:textColor="@color/blue"
            android:textSize="@dimen/sp_size_13"
            android:visibility="gone"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_tag_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_selected_tag2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_size_30"
        android:text="@string/ID_POPULAR_TAG"
        android:textColor="@color/popular_tag_color"
        android:textSize="@dimen/sp_size_13"/>
    <TextView
        android:id="@+id/tv_tag_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_tag_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_size_5"
        android:text="@string/ID_TAG_TXT"
        android:textColor="@color/grey2"
        android:textSize="@dimen/sp_size_13"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_home_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_tag_text"
        android:layout_marginBottom="@dimen/dp_size_50"
        android:layout_marginTop="@dimen/dp_size_10"
        android:divider="#00000000"/>

    <TextView
        android:id="@+id/tv_community_tag_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_48"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp_size_30"
        android:background="@drawable/rect_btn"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_size_10"
        android:paddingTop="@dimen/dp_size_10"
        android:text="SAVE"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_size_12"/>
</RelativeLayout>