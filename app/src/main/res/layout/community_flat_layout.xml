<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:vernacular="http://schemas.android.com/apk/res-auto"
    android:id="@+id/community_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="@dimen/dp_size_16"
    android:paddingBottom="@dimen/dp_size_16">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_size_16"
        android:layout_marginRight="@dimen/dp_size_16">

        <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
            android:id="@+id/community_join"
            style="@style/TextView14spRegular"
            android:layout_width="@dimen/community_join_width"
            android:layout_height="@dimen/community_join_height"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_size_16"
            android:layout_marginLeft="@dimen/dp_size_16"
            android:gravity="center"
            android:letterSpacing="0.07"
            android:textAllCaps="true"
            android:textColor="@color/sheroes_red"
            tools:text="@string/ID_JOIN"
            vernacular:customTextFontFamily="@string/bold_font" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_toStartOf="@id/community_join"
            android:layout_toLeftOf="@id/community_join">

            <appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView
                android:id="@+id/community_icon"
                android:layout_width="@dimen/my_community_icon_width"
                android:layout_height="@dimen/my_community_icon_height"
                android:layout_marginRight="@dimen/dp_size_16"
                tools:src="@drawable/vector_champion_avatar" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
                    android:id="@+id/community_name"
                    style="@style/TextView14spRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_size_2"
                    android:ellipsize="end"
                    android:letterSpacing="0.04"
                    android:maxLines="@integer/int_value_for_line_1"
                    android:textColor="@color/sheroes_greyish_brown"
                    vernacular:customTextFontFamily="@string/medium_font" />

                <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
                    android:id="@+id/community_member_count"
                    style="@style/TextView12spRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_size_2"
                    android:drawableStart="@drawable/vector_member_icon"
                    android:drawableLeft="@drawable/vector_member_icon"
                    android:drawablePadding="@dimen/dp_size_8"
                    android:maxLines="@integer/int_value_for_line_1"
                    android:textColor="@color/sheroes_warm_grey"
                    vernacular:customTextFontFamily="@string/regular_font" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>

