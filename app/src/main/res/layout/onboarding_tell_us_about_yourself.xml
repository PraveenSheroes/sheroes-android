<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tell_us_gradient_page">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/ic_world_map" />

                <TextView
                    android:layout_width="@dimen/dp_size_150"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/dp_size_37"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:lineSpacingExtra="@dimen/sp_size_24"
                    android:text="@string/ID_TELL_US_ABOUT"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_size_23" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_20"
                android:layout_marginTop="@dimen/dp_size_5"
                android:alpha=".7"
                android:fontFamily="@string/ID_ROBOTO_BOLD"
                android:text="@string/ID_C_STATUS"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_size_14" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_size_50"
                android:layout_marginLeft="@dimen/dp_size_20"
                android:layout_marginRight="@dimen/dp_size_20"
                android:layout_marginTop="@dimen/dp_size_10"
                android:elevation="@dimen/dp_size_10">

                <TextView
                    android:id="@+id/tv_current_status_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableRight="@drawable/ic_spinner_icon"
                    android:paddingRight="@dimen/dp_size_20"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/dp_size_20"
                    android:textColor="@color/text_color_follow"
                    android:textSize="@dimen/sp_size_14" />
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_20"
                android:layout_marginTop="@dimen/dp_size_20"
                android:alpha=".7"
                android:fontFamily="@string/ID_ROBOTO_BOLD"
                android:text="@string/ID_LOCATION"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_size_14" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_size_50"
                android:layout_marginLeft="@dimen/dp_size_20"
                android:layout_marginRight="@dimen/dp_size_20"
                android:layout_marginTop="@dimen/dp_size_10"
                android:elevation="@dimen/dp_size_10">

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/text_color_follow"
                    android:textSize="@dimen/sp_size_14" />
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_20"
                android:layout_marginTop="@dimen/dp_size_20"
                android:alpha=".7"
                android:fontFamily="@string/ID_ROBOTO_BOLD"
                android:text="@string/ID_CELL_PHONE"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_size_14" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_size_50"
                android:layout_marginLeft="@dimen/dp_size_20"
                android:layout_marginRight="@dimen/dp_size_20"
                android:layout_marginTop="@dimen/dp_size_10"
                android:elevation="@dimen/dp_size_10">

                <TextView
                    android:id="@+id/tv_mobile_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/text_color_follow"
                    android:textSize="@dimen/sp_size_14" />
            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_size_74"
                android:layout_marginTop="@dimen/dp_size_14">

                <TextView
                    android:id="@+id/tv_tell_us_message"
                    android:layout_width="@dimen/dp_size_221"
                    android:layout_height="@dimen/dp_size_40"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dp_size_30"
                    android:layout_toLeftOf="@+id/fab_next"
                    android:layout_toStartOf="@+id/fab_next"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/dp_size_10"
                    android:text="@string/ID_TELL_US_MESSAGE"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_size_12" />

                <ImageView
                    android:id="@+id/fab_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="bottom|end"
                    android:layout_marginRight="@dimen/dp_size_20"
                    android:src="@drawable/ic_next"
                    app:layout_anchor="@id/app_bar_coomunities_detail"
                    app:layout_anchorGravity="bottom|center" />
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/pb_boarding_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="false" />
</FrameLayout>