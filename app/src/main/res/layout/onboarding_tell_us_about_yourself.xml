<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradiant_background"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_size_150"
                android:layout_marginLeft="@dimen/dp_size_11"
                android:layout_marginRight="@dimen/dp_size_11"
                android:layout_marginTop="@dimen/dp_size_23"
                android:background="@drawable/ic_world_map" />

            <TextView
                android:layout_width="@dimen/dp_size_150"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/dp_size_37"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:lineSpacingExtra="@dimen/sp_size_24"
                android:text="Tell Us About Yourself"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_size_18" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_11"
            android:layout_marginRight="@dimen/dp_size_11"
            android:layout_marginTop="@dimen/dp_size_2"
            android:fontFamily="@string/ID_ROBOTO_BOLD"
            android:text="CURRENT STATUS"
            android:textColor="@color/grey2" />

        <appliedlife.pvtltd.SHEROES.views.cutomeviews.materialspinner.MaterialSpinner
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_size_50"
            android:layout_marginLeft="@dimen/dp_size_11"
            android:layout_marginRight="@dimen/dp_size_11"
            android:layout_marginTop="@dimen/dp_size_5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_11"
            android:layout_marginRight="@dimen/dp_size_11"
            android:layout_marginTop="@dimen/dp_size_10"
            android:fontFamily="@string/ID_ROBOTO_BOLD"
            android:text="LOCATION"
            android:textColor="@color/grey2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_size_50"
            android:layout_marginLeft="@dimen/dp_size_11"
            android:layout_marginRight="@dimen/dp_size_11"
            android:layout_marginTop="@dimen/dp_size_5"
            android:background="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_11"
            android:layout_marginRight="@dimen/dp_size_11"
            android:layout_marginTop="@dimen/dp_size_10"
            android:fontFamily="@string/ID_ROBOTO_BOLD"
            android:text="CELL PHONE NUMBER"
            android:textColor="@color/grey2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_size_50"
            android:layout_marginLeft="@dimen/dp_size_11"
            android:layout_marginRight="@dimen/dp_size_11"
            android:layout_marginTop="@dimen/dp_size_5"
            android:background="@color/white" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_marginTop="@dimen/dp_size_50"
            android:src="@drawable/ic_next"
            app:backgroundTint="@color/communities_post_button_color"
            app:borderWidth="@dimen/dp_size_4"
            app:fabSize="auto"
            app:layout_anchor="@id/app_bar_coomunities_detail"
            app:layout_anchorGravity="bottom|center"
            app:pressedTranslationZ="@dimen/dp_size_12"
            app:rippleColor="@color/communities_post_button_color" />

    </LinearLayout>
    <ProgressBar
        android:id="@+id/pb_boarding_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />
</FrameLayout>