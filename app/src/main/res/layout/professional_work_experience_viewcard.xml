<?xml version="1.0" encoding="utf-8"?>



<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
<LinearLayout
    android:id="@+id/l1_job_add_card"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/dp_size_16"
    android:paddingRight="@dimen/dp_size_16"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_size_25"
        android:paddingRight="@dimen/dp_size_10">

    <TextView
        android:id="@+id/tv_work_exp_designation_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@string/ID_ROBOTO_MEDIUM"
        android:text="@string/ID_WORK_EXPERIENCE"
        android:textAllCaps="true"
        android:textColor="@color/text_color_contactdetails_page"
        android:textSize="@dimen/sp_size_13" />


        <TextView
            android:id="@+id/tv_edit_workexperience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/ic_edit_icon"
            />




    </RelativeLayout>



    <TextView
        android:id="@+id/tv_work_exp_date_details"
        android:layout_width="match_parent"
        android:paddingTop="@dimen/dp_size_10"
        android:layout_height="wrap_content"
        android:fontFamily="@string/ID_ROBOTO_REGULAR"
        android:text="@string/ID_DATE_OF_JOING"
        android:textColor="@color/text_color_date_view"
        android:textSize="@dimen/sp_size_12" />

    <TextView
        android:id="@+id/tv_work_exp_company_name"
        android:layout_width="match_parent"
        android:paddingTop="@dimen/dp_size_10"
        android:layout_height="wrap_content"
        android:fontFamily="@string/ID_ROBOTO_REGULAR"
        android:text="@string/ID_COMPANY_NAME"
        android:textColor="@color/blue"
        android:textSize="@dimen/sp_size_12" />

    <TextView
        android:id="@+id/tv_work_exp_about_company"
        android:layout_width="match_parent"
        android:paddingTop="@dimen/dp_size_10"
        android:paddingBottom="@dimen/dp_size_25"
        android:layout_height="wrap_content"
        android:fontFamily="@string/ID_ROBOTO_REGULAR"
        android:text="@string/ID_company_details"
        android:textColor="@color/text_color_date_view"
        android:textSize="@dimen/sp_size_12" />

</LinearLayout>
</android.support.v7.widget.CardView>