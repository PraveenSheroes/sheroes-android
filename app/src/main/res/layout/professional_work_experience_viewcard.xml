<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_size_10">

    <LinearLayout
        android:id="@+id/l1_job_add_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/dp_size_17"
        android:paddingLeft="@dimen/dp_size_16"
        android:paddingRight="@dimen/dp_size_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_size_20"
            android:paddingRight="@dimen/dp_size_10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="@integer/int_value_for_line_1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_work_exp_designation_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color_contactdetails_page"
                    android:textSize="@dimen/sp_size_13" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_size_3"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_work_exp_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/ID_ROBOTO_REGULAR"
                        android:text="@string/ID_JOB"
                        android:textColor="@color/text_color_date_view"
                        android:textSize="@dimen/sp_size_12" />

                    <TextView
                        android:id="@+id/tv_work_exp_date_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_size_10"
                        android:fontFamily="@string/ID_ROBOTO_REGULAR"
                        android:textColor="@color/text_color_date_view"
                        android:textSize="@dimen/sp_size_12" />
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/tv_edit_workexperience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/ic_edit_icon"
                android:padding="@dimen/dp_size_10" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_work_exp_company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_size_8"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:textColor="@color/blue"
            android:textSize="@dimen/sp_size_13" />

        <TextView
            android:id="@+id/tv_work_exp_about_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_size_8"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:textColor="@color/job_filter_desc_color"
            android:textSize="@dimen/sp_size_13" />
    </LinearLayout>
</android.support.v7.widget.CardView>