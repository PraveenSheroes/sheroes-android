<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/al_community_open_about"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/cl_community_open_about"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_size_200"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_size_200"
                android:scaleType="centerCrop"
                android:fitsSystemWindows="true"
                android:background="@drawable/community"

                android:id="@+id/iv_community_cover_img"
                app:layout_collapseMode="parallax" />


            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin" >

                <TextView
                    android:id="@+id/tv_about_community_back"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/ID_ROBOTO_LIGHT"
                    android:paddingTop="@dimen/dp_size_1"
                    android:paddingBottom="@dimen/dp_size_1"
                    android:paddingLeft="@dimen/dp_size_10"
                    android:paddingRight="@dimen/dp_size_10"

                    android:drawableLeft="@drawable/ic_back_white"
                    android:layout_marginTop="@dimen/dp_size_10"
                    android:layout_marginLeft="@dimen/dp_size_18"
                    android:textColor="@color/text_color_about"
                    android:textSize="@dimen/sp_size_24"
                    />


                    <TextView
                        android:id="@+id/tv_about_community_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_gravity="right"
                        android:drawableRight="@drawable/ic_share_icon"
                        android:drawablePadding="@dimen/dp_size_10"
                        android:paddingRight="@dimen/dp_size_38"
                        android:paddingTop="@dimen/dp_size_3"
                        android:paddingBottom="@dimen/dp_size_3"
                        android:paddingLeft="@dimen/dp_size_10"
                        android:layout_marginTop="@dimen/dp_size_10"
                        />
                </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fb_about_community_logo"
        android:layout_width="@dimen/dp_size_60"
        android:layout_height="@dimen/dp_size_60"
        android:layout_margin="@dimen/fab_margin"
        android:src="@android:drawable/ic_media_play"
        app:layout_anchor="@id/al_community_open_about"
        app:layout_anchorGravity="bottom|center" />
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffe5e5e5"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_size_4">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_size_30">
                <TextView
                    android:id="@+id/tv_community_name"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/ID_COMMUNITY_NAME"
                    android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                    android:text="Ranigarh Womenâ€™s Empowerment and Development Group"
                    android:layout_gravity="center"
                    android:minLines="2"
                    android:gravity="center"
                    android:textSize="@dimen/sp_size_12"
                    android:maxLines="2" />

                <ImageView
                    android:id="@+id/iv_about_community"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_size_5"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/dp_size_20"
                    android:src="@drawable/ic_menu_dashboard"/>
            </FrameLayout>
            <TextView
                android:id="@+id/tv_community_organisation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ID_ORGANISATION"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:textSize="@dimen/sp_size_12"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/red_oval_shap"
                android:maxLines="1" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_12"
                android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_community_requested"
                    android:layout_width="@dimen/dp_size_100"
                    android:layout_height="@dimen/dp_size_25"
                    android:hint="@string/COMMUNITY_TYPE"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:textSize="@dimen/sp_size_12"
                    android:text="@string/ID_COMMUNITY_REQUESTED"
                    android:layout_marginLeft="@dimen/dp_size_12"
                    android:textColor="@color/white"
                    android:background="@drawable/grey_oval_shap"
                    android:gravity="center"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:id="@+id/tv_community_members"
                    android:layout_width="@dimen/dp_size_100"
                    android:layout_height="@dimen/dp_size_25"
                    android:hint="@string/COMMUNITY_TYPE"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:textSize="@dimen/sp_size_12"
                    android:text="@string/ID_COMMUNITY_MEMBER"
                    android:textColor="@color/white"
                    android:background="@drawable/red_oval_shap"
                    android:gravity="center"
                    android:layout_gravity="center_vertical|center_horizontal" />
                <TextView
                    android:id="@+id/tv_community_invite"
                    android:layout_width="@dimen/dp_size_81"
                    android:layout_height="@dimen/dp_size_35"
                    android:layout_gravity="right|center_vertical"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/dp_size_12"
                    android:background="@drawable/invite_color_btn_shap"
                    android:textColor="@color/white"
                    android:text="@string/ID_INVITE"/>
            </FrameLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/grey2"
                android:layout_marginRight="@dimen/dp_size_12"
                android:layout_marginLeft="@dimen/dp_size_12"
                android:layout_marginTop="@dimen/dp_size_18"/>
            <TextView
                android:id="@+id/tv_about_community_tag"
                android:layout_width="@dimen/dp_size_100"
                android:layout_height="@dimen/dp_size_20"
                android:text="@string/ID_TAGS"
                android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                android:textSize="@dimen/sp_size_12"
                android:layout_marginTop="@dimen/dp_size_17"
                android:textColor="@color/teg_text_color"
                android:gravity="center"
                android:layout_gravity="center"
                android:maxLines="1" />
            <TextView
                android:id="@+id/tv_community_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ID_TAG_TEXT"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:textSize="@dimen/sp_size_13"
                android:layout_gravity="center"
                android:textColor="@color/text_color_teg_text"
                android:layout_marginTop="@dimen/dp_size_7"
                android:gravity="center"
                android:maxLines="1" />
            <TextView
                android:id="@+id/tv_about_community_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ID_ABOUT_COMMUNITY"
                android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                android:textSize="@dimen/sp_size_12"
                android:textColor="@color/teg_text_color"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_size_15"
                android:gravity="center"
                android:maxLines="1" />
            <TextView
                android:id="@+id/tv_about_community_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ID_ABOUT_COMMUNITY_DES"
                android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                android:textSize="@dimen/sp_size_12"
                android:textColor="@color/teg_text_color"
                android:layout_marginTop="@dimen/dp_size_7"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/dp_size_12"
                android:layout_marginRight="@dimen/dp_size_12"
                android:gravity="center"
                android:maxLines="1100" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/grey2"
                android:layout_marginRight="@dimen/dp_size_12"
                android:layout_marginLeft="@dimen/dp_size_12"
                android:layout_marginTop="@dimen/dp_size_17"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_7"
                >
                <TextView
                    android:id="@+id/tv_community_owner_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ID_OWNER"
                    android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                    android:textSize="@dimen/sp_size_12"
                    android:textColor="@color/teg_text_color"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_size_12"
                    android:layout_marginRight="@dimen/dp_size_12"
                    android:gravity="center"
                    android:maxLines="1100" />
                <TextView
                    android:id="@+id/tv_community_add_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_community_owner_more"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/dp_size_17"
                    android:gravity="center"

                    />
            </FrameLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_about_community_owner_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_size_17"

                android:divider="#00000000" />



        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>