<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cordinate_community_open_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/al_community_open_about"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/cl_community_open_about"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_size_200"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/iv_community_cover_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_size_200"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />


            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin">

                <TextView
                    android:id="@+id/tv_about_community_back"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_size_18"
                    android:layout_marginTop="@dimen/dp_size_10"
                    android:drawableLeft="@drawable/ic_back_white"
                    android:fontFamily="@string/ID_ROBOTO_LIGHT"
                    android:paddingBottom="@dimen/dp_size_1"

                    android:paddingLeft="@dimen/dp_size_10"
                    android:paddingRight="@dimen/dp_size_10"
                    android:paddingTop="@dimen/dp_size_1"
                    android:textColor="@color/text_color_about"
                    android:textSize="@dimen/sp_size_24" />


                <TextView
                    android:id="@+id/tv_about_community_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:drawablePadding="@dimen/dp_size_10"
                    android:drawableRight="@drawable/ic_share_icon"
                    android:paddingBottom="@dimen/dp_size_10"
                    android:paddingLeft="@dimen/dp_size_10"
                    android:paddingRight="@dimen/dp_size_20"
                    android:paddingTop="@dimen/dp_size_10" />
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>
    <!--
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fb_about_community_logo"
            android:layout_width="@dimen/dp_size_60"
            android:layout_height="@dimen/dp_size_60"
            android:layout_margin="@dimen/fab_margin"
            android:src="@android:drawable/ic_media_play"
            app:layout_anchor="@id/al_community_open_about"
            app:backgroundTint="@color/colorPrimary"
            app:fabSize="normal"
            android:scaleType="centerCrop"
            app:borderWidth="@dimen/dp_size_4"
            app:pressedTranslationZ="@dimen/dp_size_12"
            app:layout_anchorGravity="bottom|center" />
    -->

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_size_4">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_community_post_icon"
                    android:layout_width="@dimen/dp_size_60"
                    android:layout_height="@dimen/dp_size_60"
                    android:layout_gravity="left"
                    android:layout_margin="@dimen/dp_size_16"
                    android:background="@drawable/image_view_shap" />

                <TextView
                    android:id="@+id/tv_community_name"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@+id/iv_community_post_icon"
                    android:drawablePadding="@dimen/dp_size_10"
                    android:drawableRight="@drawable/ic_lock"
                    android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                    android:gravity="left"
                    android:maxLines="2"
                    android:minLines="2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_size_14" />

                <ImageView
                    android:id="@+id/iv_about_community"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_size_10"
                    android:paddingBottom="@dimen/dp_size_5"
                    android:paddingLeft="@dimen/dp_size_10"
                    android:paddingRight="@dimen/dp_size_10"
                    android:paddingTop="@dimen/dp_size_5"
                    android:src="@drawable/ic_menu_dashboard"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_community_organisation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_community_name"
                    android:layout_marginTop="@dimen/dp_size_50"
                    android:layout_toRightOf="@+id/iv_community_post_icon"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:maxLines="1"
                    android:textColor="@color/red_oval_shap"
                    android:textSize="@dimen/sp_size_12" />
            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_size_12">

                <TextView
                    android:id="@+id/tv_community_requested"
                    android:layout_width="@dimen/dp_size_100"
                    android:layout_height="@dimen/dp_size_25"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_size_12"
                    android:background="@drawable/grey_oval_shap"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:gravity="center"
                    android:text="@string/ID_COMMUNITY_REQUESTED"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_size_12" />

                <TextView
                    android:id="@+id/tv_community_members"
                    android:layout_width="@dimen/dp_size_100"
                    android:layout_height="@dimen/dp_size_25"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:background="@drawable/red_oval_shap"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_size_12" />

                <TextView
                    android:id="@+id/tv_community_join_invite"
                    android:layout_width="@dimen/dp_size_81"
                    android:layout_height="@dimen/dp_size_35"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/dp_size_12"
                    android:background="@drawable/invite_color_btn_shap"
                    android:gravity="center"
                    android:visibility="gone"
                    android:text="@string/ID_INVITE"
                    android:textColor="@color/white" />
            </FrameLayout>

            <ProgressBar
                android:id="@+id/pb_communities_open_about_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp_size_12"
                android:layout_marginRight="@dimen/dp_size_12"
                android:layout_marginTop="@dimen/dp_size_18"
                android:background="@color/grey2" />

            <TextView
                android:id="@+id/tv_about_community_tag"
                android:layout_width="@dimen/dp_size_100"
                android:layout_height="@dimen/dp_size_20"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_size_17"
                android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/ID_TAGS"
                android:textAllCaps="true"
                android:textColor="@color/teg_text_color"
                android:textSize="@dimen/sp_size_12" />

            <TextView
                android:id="@+id/tv_community_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_size_7"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:gravity="center"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/text_color_teg_text"
                android:textSize="@dimen/sp_size_13" />

            <TextView
                android:id="@+id/tv_about_community_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_size_15"
                android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/ID_ABOUT_COMMUNITY"
                android:textColor="@color/teg_text_color"
                android:textSize="@dimen/sp_size_12" />

            <TextView
                android:id="@+id/tv_about_community_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/dp_size_12"
                android:layout_marginRight="@dimen/dp_size_12"
                android:layout_marginTop="@dimen/dp_size_7"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:gravity="center"
                android:maxLines="1100"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_size_12" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp_size_12"
                android:layout_marginRight="@dimen/dp_size_12"
                android:layout_marginTop="@dimen/dp_size_17"
                android:background="@color/grey2" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_7">

                <TextView
                    android:id="@+id/tv_community_owner_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_size_12"
                    android:layout_marginRight="@dimen/dp_size_12"
                    android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                    android:gravity="center"
                    android:maxLines="1100"
                    android:text="@string/ID_OWNER"
                    android:textAllCaps="true"
                    android:textColor="@color/teg_text_color"
                    android:textSize="@dimen/sp_size_12" />

                <TextView
                    android:id="@+id/tv_community_add_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/dp_size_17"
                    android:background="@drawable/ic_community_owner_more"
                    android:gravity="center"
                    android:visibility="gone"

                    />
            </FrameLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_about_community_owner_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_size_17"

                android:divider="#00000000" />


        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>