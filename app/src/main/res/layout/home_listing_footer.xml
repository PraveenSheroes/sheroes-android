<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:vernacular="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fl_home_footer_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/rectangle_grey_round_corner"
        android:elevation="@dimen/dp_size_5"
        android:orientation="horizontal"
        android:weightSum="1">


        <ImageView
            android:id="@+id/tv_home"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginLeft="48dp"
            android:background="@drawable/vector_home_selected_icon"
            android:gravity="bottom|center_horizontal" />

        <ImageView
            android:id="@+id/tv_search"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginLeft="97dp"
            android:background="@drawable/vector_home_selected_icon"
            android:gravity="bottom|center_horizontal" />

        <ImageView
            android:id="@+id/tv_communities"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:background="@drawable/vector_community_unselected_icon"
            android:gravity="bottom|center_horizontal" />

    </LinearLayout>
</FrameLayout>


