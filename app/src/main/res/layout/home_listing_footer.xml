<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_home_footer_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="@dimen/dp_size_20"
        android:background="@drawable/rectangle_grey_round_corner"
        android:elevation="@dimen/dp_size_5"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/tv_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".5"
            android:drawablePadding="@dimen/dp_size_4"
            android:drawableTop="@drawable/ic_home_selected_icon"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:gravity="bottom|center_horizontal"
            android:text="@string/home_lable"
            android:textColor="@color/comment_text"
            android:textSize="@dimen/sp_size_12" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/spam_dialog_divider" />

        <TextView
            android:id="@+id/tv_communities"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/dp_size_5"
            android:layout_weight=".5"
            android:drawableTop="@drawable/ic_community_unselected_icon"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:gravity="bottom|center_horizontal"
            android:text="@string/ID_COMMUNITIES"
            android:textColor="@color/feed_card_time"
            android:textSize="@dimen/sp_size_12" />

    </LinearLayout>
</FrameLayout>


