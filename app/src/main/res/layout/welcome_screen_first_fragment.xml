<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_welcome_screen"
        android:layout_width="wrap_content"
        android:layout_above="@+id/tv_welcome_text"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_size_32"
         />
    <TextView
        android:id="@+id/tv_welcome_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_size_20"
        android:layout_marginLeft="@dimen/dp_size_20"
        android:fontFamily="@string/ID_ROBOTO_REGULAR"
        android:maxLines="@integer/int_value_for_line_2"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"
        android:textColor="@color/recent_post_comment"
        android:textSize="@dimen/sp_size_16" />
</RelativeLayout>
