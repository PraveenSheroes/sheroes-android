<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:vernacular="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center">

    <ImageView
        android:id="@+id/iv_welcome_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_welcome_text"
        android:layout_marginBottom="@dimen/welcome_screen_bottom_margin"
        android:layout_marginLeft="@dimen/welcome_screen_left_right_margin"
        android:layout_marginRight="@dimen/welcome_screen_left_right_margin"
        android:layout_marginTop="@dimen/welcome_screen_top_margin" />

    <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
        android:id="@+id/tv_welcome_text"
        style="@style/TextView18spRegular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/welcome_text_left_right_margin"
        android:layout_marginRight="@dimen/welcome_text_left_right_margin"
        android:maxLines="@integer/max_line_welcome_text"
        android:textAlignment="center"
        android:textColor="@color/feed_article_label"
        vernacular:customTextFontFamily="@string/regular_font" />
</RelativeLayout>
