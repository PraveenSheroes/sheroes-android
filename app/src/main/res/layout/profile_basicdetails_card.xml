<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_size_10"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_size_16">


            <TextView
                android:id="@+id/tv_profile_basic_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:text="@string/ID_BASICDETAILS"
                android:textAllCaps="true"
                android:textColor="@color/dashboard_fed_text"
                android:textSize="@dimen/sp_size_13" />


            <TextView
                android:id="@+id/tv_edit_basic_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/ic_edit_icon"
                android:padding="@dimen/dp_size_3" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_current_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:paddingBottom="@dimen/dp_size_16"
                    android:paddingLeft="@dimen/dp_size_16"
                    android:paddingStart="@dimen/dp_size_16"
                    android:paddingTop="@dimen/dp_size_16"
                    android:text="@string/ID_CURRENT_LOCATION"
                    android:textColor="@color/dashboard_fed_text"
                    android:textSize="@dimen/sp_size_13" />


                <TextView
                    android:id="@+id/tv_current_location_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:padding="@dimen/dp_size_16"
                    android:text=""
                    android:textColor="@color/searchbox_hint_text_color"
                    android:textSize="@dimen/sp_size_13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">


                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:paddingBottom="@dimen/dp_size_16"
                    android:paddingLeft="@dimen/dp_size_16"
                    android:paddingStart="@dimen/dp_size_16"
                    android:paddingTop="@dimen/dp_size_16"
                    android:text="@string/ID_PROMPT_EMAIL"
                    android:textColor="@color/dashboard_fed_text"
                    android:textSize="@dimen/sp_size_13" />


                <TextView
                    android:id="@+id/tv_email_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:ellipsize="end"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:maxLines="1"
                    android:padding="@dimen/dp_size_16"
                    android:text=""
                    android:textColor="@color/searchbox_hint_text_color"
                    android:textSize="@dimen/sp_size_13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_contact_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:paddingBottom="@dimen/dp_size_16"
                    android:paddingLeft="@dimen/dp_size_16"
                    android:paddingStart="@dimen/dp_size_16"
                    android:paddingTop="@dimen/dp_size_16"
                    android:text="@string/ID_CONTACT_NUMBER"
                    android:textColor="@color/dashboard_fed_text"
                    android:textSize="@dimen/sp_size_13" />


                <TextView
                    android:id="@+id/tv_contact_number_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:ellipsize="end"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:maxLines="1"
                    android:padding="@dimen/dp_size_16"
                    android:text=""
                    android:textColor="@color/searchbox_hint_text_color"
                    android:textSize="@dimen/sp_size_13" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:paddingBottom="@dimen/dp_size_16"
                    android:paddingLeft="@dimen/dp_size_16"
                    android:paddingStart="@dimen/dp_size_16"
                    android:paddingTop="@dimen/dp_size_16"
                    android:text="@string/ID_RELATIONSHIP_STATUS"
                    android:textColor="@color/dashboard_fed_text"
                    android:textSize="@dimen/sp_size_13" />


                <TextView
                    android:id="@+id/tv_status_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:ellipsize="end"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:maxLines="1"
                    android:padding="@dimen/dp_size_16"
                    android:text=""
                    android:textColor="@color/searchbox_hint_text_color"
                    android:textSize="@dimen/sp_size_13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_child_no"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:paddingBottom="@dimen/dp_size_16"
                    android:paddingLeft="@dimen/dp_size_16"
                    android:paddingStart="@dimen/dp_size_16"
                    android:paddingTop="@dimen/dp_size_16"
                    android:text="@string/ID_CHILD_NO"
                    android:textColor="@color/dashboard_fed_text"
                    android:textSize="@dimen/sp_size_13" />


                <TextView
                    android:id="@+id/tv_child_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:ellipsize="end"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:maxLines="1"
                    android:padding="@dimen/dp_size_16"
                    android:text=""
                    android:textColor="@color/searchbox_hint_text_color"
                    android:textSize="@dimen/sp_size_13" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>
