<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:vernacular="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="appliedlife.pvtltd.SHEROES.views.activities.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_login_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|top"
                android:drawableLeft="@drawable/vector_back_arrow"
                android:padding="@dimen/dp_size_20" />

            <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
                style="@style/TextView22spBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginTop="@dimen/dp_size_18"
                android:text="@string/login_with_email"
                android:textColor="@color/comment_text"
                vernacular:customTextFontFamily="@string/bold_font" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_16">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_size_28"
                    android:background="@color/search_shortcut_icon_color"
                    android:orientation="vertical">

                    <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
                        android:id="@+id/tv_email_description"
                        style="@style/TextView14spRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/dp_size_16"
                        android:layout_marginLeft="@dimen/dp_size_16"
                        android:layout_marginRight="@dimen/dp_size_16"
                        android:layout_marginTop="@dimen/dp_size_25"
                        android:gravity="center"
                        android:text="@string/ID_LOGIN_MSG"
                        android:textColor="@color/recent_post_comment"
                        vernacular:customTextFontFamily="@string/regular_font" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_boarding_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:src="@drawable/vector_login_icon" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_16"
                android:layout_marginRight="@dimen/dp_size_16"
                android:layout_marginTop="@dimen/dp_size_16"
                android:background="@drawable/rectangle_pop_border">

                <appliedlife.pvtltd.SHEROES.vernacular.FontEditText
                    android:id="@+id/email"
                    style="@style/TextView14spRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:hint="@string/ID_PROMPT_EMAIL"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/dp_size_16"
                    android:textColor="@color/pure_black"
                    vernacular:customEditTextFontFamily="@string/regular_font" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_size_16"
                android:layout_marginRight="@dimen/dp_size_16"
                android:layout_marginTop="@dimen/dp_size_8"
                android:background="@drawable/rectangle_pop_border"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_size_16">

                <appliedlife.pvtltd.SHEROES.vernacular.FontEditText
                    android:id="@+id/password"
                    style="@style/TextView14spRegular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_size_8"
                    android:layout_weight="@integer/int_value_for_line_1"
                    android:backgroundTint="@color/white"
                    android:hint="@string/ID_PROMPT_PASSWORD"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textColor="@color/pure_black"
                    vernacular:customEditTextFontFamily="@string/regular_font" />

                <ImageView
                    android:id="@+id/iv_password_eye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingBottom="@dimen/dp_size_8"
                    android:paddingLeft="@dimen/dp_size_16"
                    android:paddingRight="@dimen/dp_size_16"
                    android:paddingTop="@dimen/dp_size_8"
                    android:src="@drawable/vector_password_eye" />
            </LinearLayout>
            <!-- Login progress -->

            <appliedlife.pvtltd.SHEROES.vernacular.FontButton
                android:id="@+id/email_sign_in_button"
                style="@style/Button14spBold"
                android:layout_width="@dimen/dp_size_150"
                android:layout_height="@dimen/dp_size_38"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_size_24"
                android:background="@drawable/rectangle_feed_community_joined_active"
                android:text="@string/ID_ACTION_LOG_IN_SHORT"
                android:textColor="@color/white"
                vernacular:customEditTextFontFamily="@string/medium_font" />

            <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
                android:id="@+id/forgot_password"
                style="@style/TextView14spMediumBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginTop="@dimen/dp_size_4"
                android:clickable="true"
                android:padding="@dimen/dp_size_20"
                android:text="@string/ID_FORGOT_PASSWORD_TEXT"
                android:textColor="@color/view_more"
                vernacular:customEditTextFontFamily="@string/medium_font" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
