<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:vernacular="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_size_20"
    android:background="@color/fully_transparent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_search_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_search_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center"
        android:background="@drawable/vector_search_icon"
        android:importantForAccessibility="no"
        android:padding="@dimen/dp_size_10" />

    <appliedlife.pvtltd.SHEROES.vernacular.FontEditText
        android:id="@+id/et_search_edit_text"
        style="@style/TextView16spRegular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fully_transparent"
        android:hint="@string/ID_SEARCH"
        android:inputType="text"
        android:padding="@dimen/dp_size_10"
        android:textColor="@color/searchbox_hint_text_color"
        android:textColorHint="@color/searchbox_icon_tint"
        vernacular:customEditTextFontFamily="@string/regular_font" />
</LinearLayout>

