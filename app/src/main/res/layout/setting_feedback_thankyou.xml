<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

              <include
                layout="@layout/setting_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top" />



    </android.support.design.widget.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:paddingTop="@dimen/dp_size_80"

        android:orientation="vertical">


        <ImageView
            android:layout_width="@dimen/dp_size_120"
            android:layout_height="@dimen/dp_size_120"
            android:layout_gravity="center"
            android:background="@drawable/ic_happy_face" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_size_20"
            android:fontFamily="@string/ID_ROBOTO_LIGHT"
            android:layout_gravity="center"
            android:text="@string/ID_THANK_YOU"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_size_18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingBottom="@dimen/dp_size_50"
            android:layout_gravity="center"
            android:text="@string/Lke_Text_APP"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_size_15" />

        <TextView
            android:layout_width="fill_parent"
            android:padding="@dimen/dp_size_30"
            android:layout_height="@dimen/dp_size_1"
            android:background="@color/line_color"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_size_20"
            android:layout_gravity="center"
            android:text="@string/ID_FOLLOW_US"
            android:textColor="@color/text_color_follow"
            android:textSize="@dimen/sp_size_12" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding= "@dimen/dp_size_15"
            android:weightSum="3">

            <ImageView
                android:id="@+id/iv_feeback_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_fb_icon" />

            <ImageView
                android:id="@+id/iv_feead_back_instragram"
                android:layout_width="@dimen/dp_size_30"
                android:layout_height="@dimen/dp_size_30"
                android:layout_marginLeft="@dimen/dp_size_50"
                android:layout_marginRight="@dimen/dp_size_50"
                android:layout_weight="1"
                android:background="@drawable/instagram_img" />

            <ImageView
                android:id="@+id/iv_feedback_twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_twitter_icon" />
        </LinearLayout>

    </LinearLayout>

    </ScrollView>

</LinearLayout>