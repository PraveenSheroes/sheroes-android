<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/fl_shadow_image_with_multiple_landscap"
        android:layout_width="match_parent"
        android:background="@color/comment_box_edit_border"
        android:layout_height="wrap_content">
        <ProgressBar
            android:layout_width="@dimen/dp_size_30"
            android:layout_height="@dimen/dp_size_30"
            android:layout_gravity="center"
            android:indeterminateTint="@color/white"/>
    </FrameLayout>
    <ImageView
        android:id="@+id/iv_feed_community_post_first_landscape"
        android:layout_width="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:layout_height="@dimen/dp_size_300"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_size_3"
        android:weightSum="@integer/int_value_for_line_1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_feed_community_post_second_image_landscape"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:visibility="gone"
            android:layout_height="@dimen/multiple_image_rectangle"
            android:scaleType="centerCrop" />
        <FrameLayout
            android:id="@+id/fl_shadow_image_post_second_landscap_multiple"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:layout_height="@dimen/multiple_image_rectangle"
            android:background="@color/comment_box_edit_border">
            <ProgressBar
                android:layout_width="@dimen/dp_size_30"
                android:layout_height="@dimen/dp_size_30"
                android:layout_gravity="center"
                android:indeterminateTint="@color/white"/>
        </FrameLayout>

        <ImageView
            android:id="@+id/iv_feed_community_post_third_image_landscape"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:visibility="gone"
            android:layout_height="@dimen/multiple_image_rectangle"
            android:layout_marginLeft="@dimen/dp_size_3"
            android:scaleType="centerCrop" />
        <FrameLayout
            android:id="@+id/fl_shadow_image_post_third_landscap_multiple"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:layout_marginLeft="@dimen/dp_size_3"
            android:layout_height="@dimen/multiple_image_rectangle"
            android:background="@color/comment_box_edit_border">
            <ProgressBar
                android:layout_width="@dimen/dp_size_30"
                android:layout_height="@dimen/dp_size_30"
                android:layout_gravity="center"
                android:indeterminateTint="@color/white"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:layout_height="@dimen/multiple_image_rectangle"
            android:layout_marginLeft="@dimen/dp_size_3">

            <ImageView
                android:id="@+id/iv_feed_community_post_fourth_image_landscape"
                android:layout_width="match_parent"
                android:layout_height="@dimen/multiple_image_rectangle"
                android:scaleType="centerCrop" />
            <FrameLayout
                android:id="@+id/fl_shadow_image_post_fourth_landscap_multiple"
                android:layout_width="match_parent"
                android:layout_height="@dimen/multiple_image_rectangle"
                android:background="@color/comment_box_edit_border">
                <ProgressBar
                    android:layout_width="@dimen/dp_size_30"
                    android:layout_height="@dimen/dp_size_30"
                    android:layout_gravity="center"
                    android:indeterminateTint="@color/white"/>
            </FrameLayout>
            <TextView
                android:id="@+id/tv_feed_community_image_more"
                android:layout_width="match_parent"
                android:layout_height="@dimen/multiple_image_rectangle"
                android:alpha=".7"
                android:background="@color/black"
                android:gravity="center"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_feed_community_post_landscape_total_images"
                android:layout_width="match_parent"
                android:layout_height="@dimen/multiple_image_rectangle"
                android:fontFamily="@string/ID_ROBOTO_LIGHT"
                android:gravity="center"
                android:text="@string/ID_TOTAL_IMAGES"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_size_35"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
