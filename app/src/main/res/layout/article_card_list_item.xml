<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_size_5"
    app:cardElevation="@dimen/dp_size_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:baselineAligned="false"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_size_12"
            android:gravity="center"
            android:weightSum="1">

            <appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView
                android:id="@+id/iv_article_circle_icon"
                android:layout_width="@dimen/feed_profile_icon_size"
                android:layout_height="@dimen/feed_profile_icon_size"
                android:src="@drawable/ic_footer_button_icon" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_12"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_article_card_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/ID_ROBOTO_BOLD"
                    android:text="Sheroes"
                    android:textColor="@color/feed_article_label"
                    android:textSize="@dimen/sp_size_14"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_article_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_size_3"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:text="5 hr ago"
                    android:textColor="@color/feed_article_label"
                    android:textSize="@dimen/sp_size_12" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_article_trending_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_size_20"
                android:drawablePadding="@dimen/dp_size_20"
                android:paddingRight="@dimen/dp_size_12"
                android:paddingTop="@dimen/dp_size_12"
                android:paddingBottom="@dimen/dp_size_12"
                android:drawableRight="@drawable/ic_bookmark_active"
                android:fontFamily="@string/ID_ROBOTO_BOLD"
                android:text="@string/ID_TRENDING"
                android:textColor="@color/dashboard_label"
                android:textSize="@dimen/sp_size_12"
                android:textStyle="italic" />


            <TextView
                android:id="@+id/tv_article_menu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:drawableRight="@drawable/ic_menu_dashboard" />

            <Spinner
                android:id="@+id/sp_article_menu"
                android:layout_width="@dimen/dp_size_15"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:background="@color/fully_transparent"
                android:dropDownSelector="@color/fully_transparent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/li_article_cover_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/li_article_decription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_size_12"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_article_description_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@string/ID_ROBOTO_BOLD"
                android:lines="@integer/int_value_for_line_1"
                android:text="@string/IDS_STR_NETWORK_TIME_OUT_DESCRIPTION"
                android:textColor="@color/dashboard_text"
                android:textSize="@dimen/sp_size_15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_article_description_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_12"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:lineSpacingExtra="@dimen/dp_size_5"
                android:text="@string/IDS_STR_NETWORK_TIME_OUT_DESCRIPTION"
                android:textColor="@color/dashboard_fed_text"
                android:textSize="@dimen/sp_size_14" />

            <LinearLayout
                android:id="@+id/li_feature_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_12"
                android:layout_marginRight="@dimen/dp_size_12"
                android:layout_marginTop="@dimen/dp_size_20"
                android:orientation="horizontal"
                android:weightSum="@integer/int_value_for_line_1">

                <TextView
                    android:id="@+id/tv_article_tag"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/int_value_for_line_1"
                    android:text="Tags: Health,Education"
                    android:textColor="@color/feed_article_label"
                    android:textSize="@dimen/sp_size_12" />

                <TextView
                    android:id="@+id/tv_article_join"
                    android:layout_width="@dimen/dp_size_80"
                    android:layout_height="@dimen/dp_size_30"
                    android:background="@drawable/rectangle_feed_commnity_join"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:gravity="center"
                    android:text="@string/ID_JOIN"
                    android:textColor="@color/footer_icon_text"
                    android:textSize="@dimen/sp_size_12" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
