<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_size_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:baselineAligned="false"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_size_16"
            android:layout_marginTop="@dimen/dp_size_11"
            android:layout_marginBottom="@dimen/dp_size_11"
            android:layout_marginRight="@dimen/dp_size_12"
            android:gravity="center"
            android:weightSum="1">

            <appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView
                android:id="@+id/iv_article_circle_icon"
                android:layout_width="@dimen/comment_icon"
                android:layout_height="@dimen/comment_icon" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_12"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_article_card_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                    android:textColor="@color/feed_article_label"
                    android:textSize="@dimen/sp_size_12" />

                <TextView
                    android:id="@+id/tv_article_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_size_1"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:textColor="@color/button_color"
                    android:textSize="@dimen/sp_size_12" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_article_trending_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/ID_ROBOTO_BOLD"
                android:paddingBottom="@dimen/dp_size_12"
                android:paddingTop="@dimen/dp_size_12"
                android:text="@string/ID_TRENDING"
                android:textAllCaps="true"
                android:layout_marginRight="@dimen/dp_size_10"
                android:textColor="@color/dashboard_label"
                android:textSize="@dimen/sp_size_14"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tv_article_bookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_size_10"
                android:drawableRight="@drawable/ic_bookmark_in_active"
                android:fontFamily="@string/ID_ROBOTO_BOLD"
                android:paddingBottom="@dimen/dp_size_12"
                android:paddingRight="@dimen/dp_size_15"
                android:paddingTop="@dimen/dp_size_12" />


            <TextView
                android:id="@+id/tv_article_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:drawableRight="@drawable/ic_share_card"
                android:paddingLeft="@dimen/dp_size_10"
                android:paddingRight="@dimen/dp_size_10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/li_article_cover_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_size_185"
            android:background="@color/white"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/li_article_decription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_article_description_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                android:layout_marginLeft="@dimen/dp_size_16"
                android:layout_marginTop="@dimen/dp_size_16"
                android:layout_marginRight="@dimen/dp_size_16"
                android:textColor="@color/dashboard_text"
                android:textSize="@dimen/sp_size_16" />

            <TextView
                android:id="@+id/tv_article_description_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_10"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:lineSpacingExtra="@dimen/dp_size_5"
                android:lines="@integer/int_value_for_line_2"
                android:layout_marginLeft="@dimen/dp_size_16"
                android:layout_marginRight="@dimen/dp_size_16"
                android:textColor="@color/dashboard_fed_text"
                android:textSize="@dimen/sp_size_12" />
            <TextView
                android:id="@+id/tv_article_view_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_16"
                android:layout_marginRight="@dimen/dp_size_16"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:layout_gravity="right"
                android:background="@color/white"
                android:gravity="right"
                android:layout_marginTop="@dimen/dp_size_minus_22"
                android:textColor="@color/feed_job_card_new"
                android:text="@string/ID_VIEW_MORE"
                android:textSize="@dimen/sp_size_12" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_size_0.5"
                android:layout_marginTop="@dimen/dp_size_10"
                android:layout_marginLeft="@dimen/dp_size_13"
                android:layout_marginRight="@dimen/dp_size_13"
                android:background="@color/search_tab_unselected_text" />

            <TextView
                android:id="@+id/tv_article_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:textColor="@color/feed_article_label"
                android:layout_marginTop="@dimen/dp_size_10"
                android:layout_marginLeft="@dimen/dp_size_16"
                android:layout_marginBottom="@dimen/dp_size_10"
                android:textSize="@dimen/sp_size_12" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
