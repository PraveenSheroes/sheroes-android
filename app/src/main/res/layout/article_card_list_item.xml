<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:vernacular="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_size_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:baselineAligned="false"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp_size_8"
            android:layout_marginLeft="@dimen/dp_size_16"
            android:layout_marginRight="@dimen/dp_size_16"
            android:layout_marginTop="@dimen/dp_size_16"
            android:gravity="center"
            android:weightSum="1">

            <appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView
                android:id="@+id/iv_article_circle_icon"
                android:layout_width="@dimen/feed_profile_icon_size"
                android:layout_height="@dimen/feed_profile_icon_size" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_12"
                android:layout_weight="1"
                android:orientation="vertical">

                <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
                    android:id="@+id/tv_article_card_title"
                    style="@style/TextView12spBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/comment_text"
                    vernacular:customTextFontFamily="@string/medium_font" />

                <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
                    android:id="@+id/tv_article_time"
                    style="@style/TextView12spRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_size_3"
                    android:textColor="@color/feed_card_time"
                    vernacular:customTextFontFamily="@string/regular_font" />
            </LinearLayout>

            <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
                android:id="@+id/tv_article_trending_label"
                style="@style/TextView14spBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_size_10"
                android:paddingBottom="@dimen/dp_size_12"
                android:paddingTop="@dimen/dp_size_12"
                android:text="@string/ID_TRENDING"
                android:textAllCaps="true"
                android:textColor="@color/dashboard_label"
                android:textStyle="italic"
                vernacular:customTextFontFamily="@string/bold_font" />

            <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
                android:id="@+id/tv_article_bookmark"
                style="@style/TextView14spBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_size_10"
                android:drawableRight="@drawable/vector_bookmark_in_active"
                android:paddingBottom="@dimen/dp_size_12"
                android:paddingRight="@dimen/dp_size_15"
                android:paddingTop="@dimen/dp_size_12"
                vernacular:customTextFontFamily="@string/bold_font" />


            <TextView
                android:id="@+id/tv_article_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/vector_share_card"
                android:paddingLeft="@dimen/dp_size_10"
                android:paddingRight="@dimen/dp_size_10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/li_article_cover_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_size_185"
            android:background="@color/comment_box_edit_border"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/li_article_decription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
                android:id="@+id/tv_article_description_header"
                style="@style/TextView16spBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_16"
                android:layout_marginRight="@dimen/dp_size_16"
                android:layout_marginTop="@dimen/dp_size_16"
                android:textColor="@color/comment_text"
                vernacular:customTextFontFamily="@string/medium_font" />

            <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
                android:id="@+id/tv_article_description_text"
                style="@style/TextView14spRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_16"
                android:layout_marginRight="@dimen/dp_size_16"
                android:layout_marginTop="@dimen/dp_size_8"
                android:lineSpacingExtra="@dimen/dp_size_5"
                android:maxLines="@integer/int_value_for_line_4"
                android:textColor="@color/recent_post_comment"
                vernacular:customTextFontFamily="@string/regular_font" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_size_0.5"
                android:layout_marginLeft="@dimen/dp_size_13"
                android:layout_marginRight="@dimen/dp_size_13"
                android:layout_marginTop="@dimen/dp_size_8"
                android:background="@color/search_tab_unselected_text" />

            <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
                android:id="@+id/tv_article_tag"
                style="@style/TextView12spRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_size_10"
                android:layout_marginLeft="@dimen/dp_size_16"
                android:layout_marginRight="@dimen/dp_size_16"
                android:layout_marginTop="@dimen/dp_size_8"
                android:textColor="@color/comment_text"
                vernacular:customTextFontFamily="@string/regular_font" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
