<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/dp_size_16"
    android:paddingRight="@dimen/dp_size_16">

    <RelativeLayout
        android:id="@+id/l1"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_size_16"
        >

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ID_PORTFOLIO_LINK"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/sp_size_13"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ID_PORTFOLIOS"
            android:textColor="@color/text_color_setting_preference_basicdetails"
            android:layout_marginTop="@dimen/dp_size_15"
            android:textSize="@dimen/sp_size_12"
            android:id="@+id/text2"
            android:layout_below="@+id/text1"

            />


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_size_1"
            android:layout_marginTop="@dimen/dp_size_15"
            android:background="@color/line_color"
            android:layout_below="@+id/text2"
            android:id="@+id/text3"

            />

        <Spinner
            android:id="@+id/spinner_workexp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/l2"
        android:layout_below="@+id/l1"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_size_16"
        >

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ID_UPLOADED_IMAGES"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/sp_size_13"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ID_ADD_SECTION"
            android:textColor="@color/text_color_setting_preference_basicdetails"
            android:layout_marginTop="@dimen/dp_size_15"
            android:textSize="@dimen/sp_size_12"
            android:layout_below="@+id/text4"
            android:id="@+id/text5" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_size_1"
            android:layout_marginTop="@dimen/dp_size_15"
            android:background="@color/line_color"
            android:layout_below="@+id/text5"
            />
        <Spinner
            android:id="@+id/spinner_workexp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            />


    </RelativeLayout>

</LinearLayout>