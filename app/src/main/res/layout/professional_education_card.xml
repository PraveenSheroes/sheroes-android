<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="@dimen/dp_size_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/r1_add_education_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_size_16">

            <TextView
                android:id="@+id/tv_job_language_number"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:text="@string/ID_EDUCATION"
                android:textAllCaps="true"
                android:textColor="@color/dashboard_fed_text"
                android:textSize="@dimen/sp_size_13" />

            <TextView
                android:id="@+id/tv_add_education"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/dp_size_3"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/ic_add_icon_grey" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_degree1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/ID_ROBOTO_MEDIUM"
            android:paddingLeft="@dimen/dp_size_16"
            android:textColor="@color/searchbox_hint_text_color"
            android:textSize="@dimen/dp_size_13" />
        <TextView
            android:id="@+id/tv_degree11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:paddingLeft="@dimen/dp_size_16"
            android:layout_below="@+id/tv_degree1"
            android:textColor="@color/searchbox_hint_text_color"
            android:textSize="@dimen/dp_size_13" />
        <TextView
            android:id="@+id/tv_degree12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:paddingLeft="@dimen/dp_size_16"
            android:layout_below="@+id/tv_degree11"
            android:visibility="gone"

            android:textColor="@color/searchbox_hint_text_color"
            android:textSize="@dimen/dp_size_13" />
        <TextView
            android:id="@+id/tv_date1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="@string/ID_ROBOTO_MEDIUM"
            android:padding="@dimen/dp_size_16"
            android:textColor="@color/text_color_date_view"
            android:textSize="@dimen/dp_size_13" />
        <TextView
            android:id="@+id/tv_degree2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_degree12"
            android:fontFamily="@string/ID_ROBOTO_MEDIUM"
            android:paddingLeft="@dimen/dp_size_16"
            android:paddingTop="@dimen/dp_size_16"
            android:textColor="@color/searchbox_hint_text_color"
            android:textSize="@dimen/dp_size_13" />
        <TextView
            android:id="@+id/tv_degree21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:paddingLeft="@dimen/dp_size_16"
            android:layout_below="@+id/tv_degree2"
            android:textColor="@color/searchbox_hint_text_color"
            android:textSize="@dimen/dp_size_13" />
        <TextView
            android:id="@+id/tv_degree22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:paddingLeft="@dimen/dp_size_16"
            android:layout_below="@+id/tv_degree21"
            android:textColor="@color/searchbox_hint_text_color"
            android:visibility="gone"
            android:textSize="@dimen/dp_size_13" />
        <TextView
            android:id="@+id/tv_date2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_date1"
            android:fontFamily="@string/ID_ROBOTO_MEDIUM"
            android:padding="@dimen/dp_size_16"
            android:textColor="@color/text_color_date_view"
            android:textSize="@dimen/dp_size_13" />
        <TextView
            android:id="@+id/tv_education_saperate_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_size_1"
            android:layout_marginRight="@dimen/dp_size_18"
            android:layout_below="@+id/tv_degree22"
            android:layout_marginTop="@dimen/dp_size_16"
            android:layout_marginLeft="@dimen/dp_size_16"
            android:background="@color/text_education_line"
            />
        <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_below="@+id/tv_education_saperate_line"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:fontFamily="@string/ID_ROBOTO_MEDIUM"
            android:padding="@dimen/dp_size_16"
            android:text="@string/ID_MORE"
            android:textColor="@color/blue"
            android:textSize="@dimen/dp_size_13" />

    </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
