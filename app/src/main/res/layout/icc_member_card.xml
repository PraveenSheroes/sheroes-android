<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/icc_member_card"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_size_16"
        android:layout_marginRight="@dimen/dp_size_16"
        android:orientation="horizontal">

        <appliedlife.pvtltd.SHEROES.views.cutomeviews.RoundedImageView
            android:layout_width="@dimen/dp_size_50"
            android:layout_height="@dimen/dp_size_50"
            android:id="@+id/tv_icc_member_photo"
            android:scaleType="center"
            android:layout_gravity="center"
            app:riv_border_width="@dimen/dp_size_6"
            app:riv_corner_radius="@dimen/dp_size_12"
            app:riv_oval="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_20"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_icc_name"
                android:layout_marginTop="@dimen/dp_size_16"
                android:textSize="@dimen/sp_size_14"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:id="@+id/tv_icc_description"
                android:layout_marginTop="@dimen/dp_size_10"
                android:layout_marginBottom="@dimen/dp_size_16"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_1"
        android:background="@color/comment_box_edit_border">
    </View>
    </LinearLayout>
</android.support.v7.widget.CardView>