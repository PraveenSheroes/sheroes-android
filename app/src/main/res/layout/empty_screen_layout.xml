<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:vernacular="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="@dimen/empty_screen_image_dimensions"
            android:layout_height="@dimen/empty_screen_image_dimensions"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/empty_screen_image_margin_bottom" />

        <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
            android:id="@+id/tv_no_results_title"
            style="@style/TextView18spBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_image"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/empty_screen_title_margin"
            android:layout_marginRight="@dimen/empty_screen_title_margin"
            android:layout_marginBottom="@dimen/empty_screen_title_margin_bottom"
            android:gravity="center"
            android:textColor="@color/sheroes_greyish_brown"
            android:textSize="@dimen/empty_screen_title_size"
            tools:text="No communities found."
            vernacular:customTextFontFamily="@string/bold_font" />


        <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
            android:id="@+id/tv_no_results_subtitle"
            style="@style/TextView14spRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_no_results_title"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/empty_screen_subtitle_margin"
            android:layout_marginRight="@dimen/empty_screen_subtitle_margin"
            android:gravity="center"
            android:textColor="@color/sheroes_warm_grey"
            android:textSize="@dimen/empty_screen_subtitle_size"
            tools:text="No results found. Try searching for something else."
            vernacular:customTextFontFamily="@string/regular_font" />

    </RelativeLayout>


</LinearLayout>
