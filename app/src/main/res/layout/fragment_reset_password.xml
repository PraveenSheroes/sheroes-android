<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="appliedlife.pvtltd.SHEROES.views.fragments.ResetPasswordFragment"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/fully_transparent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <appliedlife.pvtltd.SHEROES.views.cutomeviews.CustomeCollapsableToolBar.CustomCollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:collapsedSubtitleAppearance="@style/subtitle_collapsed"
            app:collapsedTitleTextAppearance="@style/title.collapsed"
            app:contentScrim="@color/colorAccent"
            app:expandedSubtitleAppearance="@style/subtitle"
            app:expandedTitleGravity="bottom|center_horizontal"
            app:expandedTitleTextAppearance="@style/title.expanded"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="center"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
                <TextView
                    android:id="@+id/iv_login_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|top"
                    android:layout_marginLeft="@dimen/dp_size_14"
                    android:padding="@dimen/dp_size_10"
                    android:drawableLeft="@drawable/ic_back_black"/>

                <TextView
                    android:id="@+id/reset_pwd_status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ID_RESET_PASSWORD_ERROR_TEXT"
                    android:layout_gravity="center"
                    android:textSize="@dimen/sp_size_12"
                    android:animateLayoutChanges="true"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

            </android.support.v7.widget.Toolbar>
        </appliedlife.pvtltd.SHEROES.views.cutomeviews.CustomeCollapsableToolBar.CustomCollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ID_RESET_PASSWORD_TITLE"
        android:layout_gravity="center"
        android:textColor="@color/noConnection"
        android:textSize="@dimen/sp_size_14"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_size_120"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_sms"
        android:layout_marginTop="@dimen/dp_size_35"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_size_24"
        android:layout_marginLeft="@dimen/dp_size_45"
        android:layout_marginRight="@dimen/dp_size_45">

        <EditText
            android:id="@+id/input_email_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textSize="@dimen/sp_size_14"
            android:hint="@string/ID_RESET_PASSWORD_INPUT_BOX_TEXT" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="@dimen/dp_size_238"
        android:layout_height="wrap_content"
        android:text="@string/ID_RESET_PASSWORD_INPUT_BOX_BOTTOM_TEXT"
        android:layout_marginTop="@dimen/dp_size_24"
        android:textSize="@dimen/sp_size_14"
        android:textColor="@color/searchbox_text_color"
        android:layout_gravity="center"
        android:textAlignment="center" />


    <TextView
        android:id="@+id/tv_forgot_password_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ID_SUBMIT"
        android:textSize="@dimen/sp_size_14"
        android:textColor="@color/chat_incomming_text_color"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_size_24" />

    </LinearLayout>
    <ProgressBar
        android:id="@+id/pb_reset_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center" />
</FrameLayout>
