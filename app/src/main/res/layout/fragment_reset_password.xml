<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:vernacular="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="appliedlife.pvtltd.SHEROES.views.fragments.ResetPasswordFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/iv_login_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|top"
                android:drawableLeft="@drawable/vector_back_arrow"
                android:padding="@dimen/dp_size_20" />

            <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
                android:id="@+id/reset_pwd_status_text"
                style="@style/TextView12spRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:animateLayoutChanges="true"
                android:textColor="@color/recent_post_comment"
                android:textStyle="bold"
                vernacular:customTextFontFamily="@string/regular_font" />
        </LinearLayout>

        <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
            style="@style/TextView14spRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_size_50"
            android:text="@string/ID_RESET_PASSWORD_TITLE"
            android:textColor="@color/noConnection"
            android:textStyle="bold"
            vernacular:customTextFontFamily="@string/regular_font" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_size_35"
            android:src="@drawable/vector_sms" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_45"
            android:layout_marginRight="@dimen/dp_size_45"
            android:layout_marginTop="@dimen/dp_size_24"
            android:background="@drawable/rectangle_pop_border">

            <appliedlife.pvtltd.SHEROES.vernacular.FontEditText
                android:id="@+id/input_email_id"
                style="@style/TextView14spRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:hint="@string/ID_RESET_PASSWORD_INPUT_BOX_TEXT"
                android:inputType="textEmailAddress"
                android:textColor="@color/pure_black"
                vernacular:customEditTextFontFamily="@string/regular_font"/>
        </LinearLayout>

        <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
            style="@style/TextView14spRegular"
            android:layout_width="@dimen/dp_size_238"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_size_24"
            android:text="@string/ID_RESET_PASSWORD_INPUT_BOX_BOTTOM_TEXT"
            android:textAlignment="center"
            android:textColor="@color/searchbox_text_color"
            vernacular:customTextFontFamily="@string/regular_font" />


        <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
            android:id="@+id/tv_forgot_password_submit"
            style="@style/TextView14spRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/dp_size_20"
            android:text="@string/ID_SUBMIT"
            android:textColor="@color/chat_incomming_text_color"
            vernacular:customTextFontFamily="@string/regular_font" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb_reset_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />
</FrameLayout>
