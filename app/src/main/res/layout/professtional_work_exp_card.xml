<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_size_10"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/r1_add_education_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_size_16">

            <TextView
                android:id="@+id/tv_work_exp_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:textAllCaps="true"
                android:textColor="@color/dashboard_fed_text"
                android:textSize="@dimen/sp_size_13" />

            <TextView
                android:id="@+id/tv_add_work_exp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/ic_add_icon_grey"
                android:padding="@dimen/dp_size_10" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_position"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/int_value_for_line_1"
                android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                android:paddingLeft="@dimen/dp_size_16"
                android:textColor="@color/searchbox_hint_text_color"
                android:textSize="@dimen/dp_size_13" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_size_16"
                android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                android:textColor="@color/text_color_date_view"
                android:textSize="@dimen/dp_size_13" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_commany_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:paddingLeft="@dimen/dp_size_16"
            android:textColor="@color/text_color_about"
            android:textSize="@dimen/dp_size_13" />


        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:paddingLeft="@dimen/dp_size_16"
            android:textColor="@color/text_color_date_view"
            android:textSize="@dimen/dp_size_13" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_size_1"
            android:layout_below="@+id/tv_degree22"
            android:layout_marginTop="@dimen/dp_size_16"
            android:layout_marginLeft="@dimen/dp_size_16"
            android:layout_marginRight="@dimen/dp_size_16"
            android:background="@color/text_education_line"
            />
        <TextView
            android:id="@+id/tv_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_education_saperate_line"
            android:fontFamily="@string/ID_ROBOTO_MEDIUM"
            android:gravity="center"
            android:padding="@dimen/dp_size_10"
            android:text="@string/ID_MORE"
            android:textColor="@color/blue"
            android:textSize="@dimen/dp_size_13" />
    </LinearLayout>

</android.support.v7.widget.CardView>
