<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_size_10"
    app:cardElevation="@dimen/dp_size_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:baselineAligned="false"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_article_detail_suggested_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_12"
            android:layout_marginRight="@dimen/dp_size_12"
            android:layout_marginTop="@dimen/dp_size_13"
            android:fontFamily="@string/ID_ROBOTO_BOLD"
            android:text="@string/ID_RELATED_ARTICLES"
            android:textColor="@color/suggested_text"
            android:textAllCaps="true"
            android:textSize="@dimen/sp_size_13"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_article_detail_suggested_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_size_20"
            android:divider="#00000000" />

            <TextView
                android:id="@+id/tv_suggested_article_detail_see_more_like"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:text="@string/ID_SEE_MORE"
                android:layout_margin="@dimen/dp_size_12"
                android:textColor="@color/suggested_text"
                android:textSize="@dimen/sp_size_12" />

    </LinearLayout>
</android.support.v7.widget.CardView>