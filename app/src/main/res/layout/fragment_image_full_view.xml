<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/iv_full_image_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_size_20"
            android:drawableLeft="@drawable/ic_back_white"
            android:gravity="center"
            android:padding="@dimen/dp_size_20" />

        <TextView
            android:id="@+id/tv_total_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_200"
            android:layout_marginTop="@dimen/dp_size_20"
            android:rotation="270"
            android:drawableRight="@drawable/ic_spinner_icon"
            android:layout_toRightOf="@+id/iv_full_image_back"
            android:gravity="right"
            android:textColor="@color/white" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_full_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
