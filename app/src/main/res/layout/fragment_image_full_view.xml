<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/iv_full_image_back"
            android:layout_width="@dimen/dp_size_25"
            android:layout_height="@dimen/dp_size_23"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dp_size_20"
            android:layout_marginStart="18dp"
            android:layout_marginTop="@dimen/dp_size_45"
            android:background="@drawable/ic_back_white"
            android:gravity="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_total_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_105"
            android:layout_marginTop="@dimen/dp_size_45"
            android:layout_toRightOf="@+id/iv_full_image_back"
            android:textColor="@color/white" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_full_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
