<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fb="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ractangle_welcome_footer_"
        android:layout_marginLeft="@dimen/dp_size_25"
        android:layout_marginRight="@dimen/dp_size_20"
        android:orientation="vertical">

        <com.facebook.login.widget.LoginButton
            android:id="@+id/click_to_join"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_size_50"
            android:layout_marginLeft="@dimen/dp_size_20"
            android:layout_marginRight="@dimen/dp_size_20"
            android:layout_marginTop="@dimen/dp_size_30"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:background="@drawable/rectangle_search_bar"
            android:drawableLeft="@color/search_tab_text"
            android:backgroundTint="@color/search_tab_text"
            android:gravity="center"
            fb:login_text="@string/ID_CONTINUE_WITH_FACEBOOK"
            fb:logout_text="@string/ID_FACEBOOK_LONGING"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/tv_other_login_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="@dimen/dp_size_10"
            android:layout_marginTop="@dimen/dp_size_10"
            android:paddingBottom="@dimen/dp_size_20"
            android:paddingLeft="@dimen/dp_size_10"
            android:paddingRight="@dimen/dp_size_10"
            android:fontFamily="@string/ID_ROBOTO_MEDIUM"
            android:gravity="center"
            android:text="@string/ID_WELCOME_TEXT4"
            android:textColor="@color/text_color_date_birth"
            android:textSize="@dimen/sp_size_12" />
    </LinearLayout>
</LinearLayout>