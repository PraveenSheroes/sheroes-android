<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <ScrollView
        android:id="@+id/scroll_view_welcome"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <android.support.v4.view.ViewPager
                android:id="@+id/welcome_view_pager"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="@dimen/dp_size_16"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_size_32"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_welcome_first"
                    android:layout_width="@dimen/dp_size_10"
                    android:layout_height="@dimen/dp_size_10"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_circle_red" />

                <ImageView
                    android:id="@+id/iv_welcome_second"
                    android:layout_width="@dimen/dp_size_10"
                    android:layout_height="@dimen/dp_size_10"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_size_16"
                    android:src="@drawable/ic_circle_w" />

                <ImageView
                    android:id="@+id/iv_welcome_third"
                    android:layout_width="@dimen/dp_size_10"
                    android:layout_height="@dimen/dp_size_10"
                    android:layout_marginLeft="@dimen/dp_size_16"
                    android:src="@drawable/ic_circle_w" />
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_size_24"
                android:elevation="@dimen/dp_size_5"
                android:gravity="center"
                app:cardElevation="@dimen/dp_size_5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_size_10"
                        android:layout_marginRight="@dimen/dp_size_10"
                        android:layout_marginTop="@dimen/dp_size_10"
                        android:fontFamily="@string/ID_ROBOTO_REGULAR"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/ID_INFORMATION_WARNING"
                        android:textColor="@color/recent_post_comment"
                        android:textSize="@dimen/sp_size_14" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_size_16"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/click_to_join_fb_signup"
                            android:layout_width="124dp"
                            android:layout_height="36dp"
                            android:background="@drawable/ic_facebook"
                            android:fontFamily="@string/ID_ROBOTO_REGULAR"
                            android:paddingLeft="@dimen/dp_size_48"
                            android:text="@string/ID_LOGIN_TEXT"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_size_14"
                            android:textStyle="normal" />

                        <Button
                            android:id="@+id/btn_login_google"
                            android:layout_width="124dp"
                            android:layout_height="36dp"
                            android:layout_marginLeft="@dimen/dp_size_16"
                            android:background="@drawable/ic_google_plus"
                            android:clickable="true"
                            android:paddingLeft="@dimen/dp_size_48"
                            android:text="@string/ID_LOGIN_TEXT"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_size_14" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_other_login_option"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_size_16"
                        android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                        android:gravity="center"
                        android:padding="@dimen/dp_size_10"
                        android:text="@string/ID_LOGIN_WITH_EMAIL"
                        android:textColor="@color/email"
                        android:textSize="@dimen/sp_size_14" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_size_15"
                        android:layout_marginLeft="@dimen/dp_size_10"
                        android:layout_marginRight="@dimen/dp_size_10"
                        android:fontFamily="@string/ID_ROBOTO_REGULAR"
                        android:gravity="center"
                        android:text="@string/ID_ONLY_FOR_EXISTING_USER"
                        android:textColor="@color/recent_post_comment"
                        android:textSize="@dimen/sp_size_14" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>
