<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fb="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <ScrollView
        android:id="@+id/scroll_view_welcome"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v4.view.ViewPager
                android:id="@+id/welcome_view_pager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_size_380"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_size_17"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_welcome_first"
                    android:layout_width="@dimen/dp_size_10"
                    android:layout_height="@dimen/dp_size_10"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_circle_red" />

                <ImageView
                    android:id="@+id/iv_welcome_second"
                    android:layout_width="@dimen/dp_size_10"
                    android:layout_height="@dimen/dp_size_10"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_size_10"
                    android:src="@drawable/ic_circle_w" />

                <ImageView
                    android:id="@+id/iv_welcome_third"
                    android:layout_width="@dimen/dp_size_10"
                    android:layout_height="@dimen/dp_size_10"
                    android:layout_marginLeft="@dimen/dp_size_10"
                    android:src="@drawable/ic_circle_w" />
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_32"
                app:cardElevation="@dimen/dp_size_40"
                android:elevation="@dimen/dp_size_40">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_size_56"
                    android:layout_marginRight="@dimen/dp_size_56"
                    android:layout_marginTop="@dimen/dp_size_10"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_size_10"
                        android:layout_marginRight="@dimen/dp_size_10"
                        android:layout_marginTop="@dimen/dp_size_10"
                        android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                        android:gravity="center"
                        android:text="@string/ID_INFORMATION_WARNING"
                        android:textColor="@color/event_text"
                        android:textSize="@dimen/sp_size_12" />
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:weightSum="@integer/int_value_for_line_1"
                       android:layout_marginTop="@dimen/dp_size_16"
                       android:orientation="horizontal">
                       <Button
                           android:id="@+id/click_to_join_fb_signup"
                           android:layout_width="0dp"
                           android:layout_weight=".5"
                           android:layout_height="wrap_content"
                           android:paddingTop="@dimen/dp_size_8"
                           android:paddingBottom="@dimen/dp_size_8"
                           android:fontFamily="@string/ID_ROBOTO_REGULAR"
                           android:textColor="@color/white"
                           android:textSize="@dimen/sp_size_16"
                           android:textStyle="normal"
                           android:textAllCaps="true"
                           android:background="@drawable/com_facebook_button_background"
                           android:drawableLeft="@drawable/com_facebook_button_icon"
                           android:paddingLeft="18dp"
                           android:paddingRight="18dp"
                           android:text="@string/ID_LOGIN_TEXT"/>

                       <Button
                           android:id="@+id/btn_login_google"
                           android:layout_width="0dp"
                           android:layout_weight=".5"
                           android:layout_height="wrap_content"
                           android:background="@drawable/ic_google_plus"
                           android:layout_marginLeft="@dimen/dp_size_16"
                           android:paddingLeft="@dimen/sp_size_14"
                           android:text="@string/ID_LOGIN_TEXT"
                           android:textAllCaps="true"
                           android:clickable="true"
                           android:drawableLeft="@drawable/common_google_signin_btn_icon_light"
                           android:textColor="@color/white"
                           android:textSize="@dimen/sp_size_16" />

                       </LinearLayout>
                    <TextView
                        android:id="@+id/tv_other_login_option"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_size_10"
                        android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                        android:gravity="center"
                        android:text="@string/ID_LOGIN_WITH_EMAIL"
                        android:textColor="@color/challenge"
                        android:textSize="@dimen/sp_size_14" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_size_10"
                        android:layout_marginRight="@dimen/dp_size_10"
                        android:layout_marginTop="@dimen/dp_size_10"
                        android:layout_marginBottom="@dimen/dp_size_15"
                        android:fontFamily="@string/ID_ROBOTO_REGULAR"
                        android:gravity="center"
                        android:text="@string/ID_ONLY_FOR_EXISTING_USER"
                        android:textColor="@color/event_text"
                        android:textSize="@dimen/sp_size_14" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>
