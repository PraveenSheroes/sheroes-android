<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:baselineAligned="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dp_size_16"
        android:layout_marginLeft="@dimen/dp_size_16"
        android:layout_marginRight="@dimen/dp_size_16"
        android:layout_marginTop="@dimen/dp_size_16"
        android:gravity="top">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView
                android:id="@+id/iv_feed_review_post_author_icon"
                android:layout_width="@dimen/feed_profile_icon_size"
                android:layout_height="@dimen/feed_profile_icon_size" />

            <ImageView
                android:id="@+id/iv_review_author_is_mentor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:background="@drawable/ic_verified"
                android:visibility="gone" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_8"
            android:layout_marginRight="@dimen/dp_size_2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_feed_review_card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                android:textColor="@color/comment_text"
                android:textSize="@dimen/sp_size_12" />

            <TextView
                android:id="@+id/tv_feed_review_card_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_3"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:textColor="@color/feed_card_time"
                android:textSize="@dimen/sp_size_12" />
        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_size_16"
        android:layout_marginRight="@dimen/dp_size_16">

        <TextView
            android:id="@+id/tv_feed_review_post_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:lineSpacingExtra="@dimen/dp_size_3"
            android:textColor="@color/comment_text"
            android:textColorLink="@color/view_more"
            android:textSize="@dimen/sp_size_14" />

        <TextView
            android:id="@+id/tv_feed_orgnization_view_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/dp_size_2"
            android:background="@color/white"
            android:text="@string/ID_VIEW_MORE"
            android:textColor="@color/view_more"
            android:visibility="gone" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/rl_org_company_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_size_8"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_company_icon"
            android:layout_width="@dimen/dp_size_65"
            android:layout_height="@dimen/dp_size_42"
            android:layout_marginLeft="@dimen/dp_size_16"
            android:layout_marginTop="@dimen/dp_size_8" />

        <TextView
            android:id="@+id/tv_review_company_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_10"
            android:layout_marginTop="@dimen/dp_size_10"
            android:layout_toEndOf="@id/iv_company_icon"
            android:layout_toLeftOf="@+id/review_post_img_heart"
            android:layout_toRightOf="@id/iv_company_icon"
            android:layout_toStartOf="@+id/review_post_img_heart"
            android:fontFamily="@string/ID_ROBOTO_BOLD"
            android:textColor="@color/comment_text"
            android:textSize="@dimen/sp_size_16" />

        <TextView
            android:id="@+id/tv_review_company_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/review_post_img_heart"
            android:layout_alignBottom="@+id/review_post_img_heart"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_size_16"
            android:textSize="@dimen/sp_size_14" />

        <TextView
            android:id="@+id/review_post_img_heart"
            android:layout_width="@dimen/dp_size_28"
            android:layout_height="@dimen/dp_size_20"
            android:layout_alignTop="@id/tv_review_company_title"
            android:layout_toLeftOf="@id/tv_review_company_rating"
            android:layout_toStartOf="@id/tv_review_company_rating"
            android:drawableLeft="@drawable/ic_star_rating"
            android:gravity="top" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_0.5"
        android:layout_marginLeft="@dimen/dp_size_16"
        android:layout_marginRight="@dimen/dp_size_16"
        android:layout_marginTop="@dimen/dp_size_8"
        android:background="@color/search_tab_unselected_text" />

    <LinearLayout
        android:id="@+id/ll_org_upvote_share_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_size_8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_review_upvote_reacted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_14"
                android:drawableLeft="@drawable/ic_upvote_active"
                android:padding="@dimen/dp_size_10" />

            <TextView
                android:id="@+id/tv_no_of_upvotes"
                android:layout_width="@dimen/dp_size_70"
                android:layout_height="@dimen/dp_size_15"
                android:layout_gravity="center"
                android:fontFamily="@string/ID_ROBOTO_LIGHT"
                android:textColor="@color/comment_text"
                android:textSize="@dimen/sp_size_12" />

            <TextView
                android:id="@+id/tv_feed_review_post_user_share_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_size_15"
                android:drawableRight="@drawable/ic_share_card"
                android:gravity="center"
                android:padding="@dimen/dp_size_10" />

            <TextView
                android:id="@+id/tv_review_post_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_size_5"
                android:fontFamily="@string/ID_ROBOTO_LIGHT"
                android:text="@string/ID_SHARE_ON_WHATS_APP"
                android:textColor="@color/share_color"
                android:textSize="@dimen/sp_size_12" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>