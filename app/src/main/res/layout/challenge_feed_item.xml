<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:vernacular="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_challenge"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_size_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/feature_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/feature_image"
            android:background="@drawable/challenge_holder_gradient">

            <ImageView
                android:id="@+id/author_image"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp" />

            <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
                android:id="@+id/author_name"
                style="@style/TextView16spMediumBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/author_image"
                android:letterSpacing="0.07"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textStyle="normal"
                vernacular:customTextFontFamily="@string/medium_font" />

            <ImageView
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="8dp"
                android:padding="@dimen/dp_size_6"
                android:src="@drawable/vector_share_white_24dp"
                android:tint="@color/white" />
        </RelativeLayout>

        <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
            android:id="@+id/contest_tag"
            style="@style/TextView14spMediumBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/feature_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:letterSpacing="0.07"
            android:textColor="#90949c"
            android:textStyle="normal"
            vernacular:customTextFontFamily="@string/medium_font" />

        <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
            android:id="@+id/title"
            style="@style/TextView16spMediumBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contest_tag"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:letterSpacing="0.07"
            android:maxLines="2"
            android:textColor="#3c3c3c"
            android:textStyle="normal"
            vernacular:customTextFontFamily="@string/medium_font" />

        <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
            android:id="@+id/contest_end_text"
            style="@style/TextView12spRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:letterSpacing="0.07"
            android:textColor="#90949c"
            android:textStyle="normal"
            vernacular:customTextFontFamily="@string/regular_font" />

        <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
            android:id="@+id/contest_status"
            style="@style/TextView12spMediumBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/title"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:letterSpacing="0.07"
            android:text="@string/contest.status.ongoing"
            android:textAllCaps="true"
            android:textColor="@color/red"
            android:textStyle="normal"
            vernacular:customTextFontFamily="@string/medium_font" />

        <ImageView
            android:id="@+id/live_dot"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignBottom="@id/contest_status"
            android:layout_below="@+id/title"
            android:layout_marginRight="7dp"
            android:layout_marginTop="16dp"
            android:layout_toLeftOf="@id/contest_status"
            android:src="@drawable/vector_live_dot" />

        <View
            android:id="@+id/divider_top"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/contest_end_text"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/lighter_grey" />

        <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
            android:id="@+id/join_challenge_text"
            style="@style/TextView14spMediumBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider_top"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:textAllCaps="true"
            android:textColor="#dc4541"
            android:textStyle="normal"
            tools:text="@string/join_challenge"
            vernacular:customTextFontFamily="@string/medium_font" />

        <View
            android:id="@+id/divider_bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/join_challenge_text"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/lighter_grey" />

        <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
            android:id="@+id/response_view_count"
            style="@style/TextView14spRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider_bottom"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:textColor="#90949c"
            vernacular:customTextFontFamily="@string/regular_font" />

        <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
            style="@style/TextView12spRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/divider_bottom"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:text="@string/not_interested"
            android:textColor="#90949c"
            android:textStyle="normal"
            android:visibility="gone"
            vernacular:customTextFontFamily="@string/regular_font" />
    </RelativeLayout>
</android.support.v7.widget.CardView>