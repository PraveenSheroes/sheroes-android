<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/rl_setting_header"
        layout="@layout/setting_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/rl_setting_header"
        android:background="@color/white"
        android:isScrollContainer="false">

        <LinearLayout
            android:id="@+id/li_spinner_iten"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/ID_tvreason"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/setting_errormessage_backgroung"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:gravity="center"
                android:text="@string/ID_ERROR_REASION"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_size_12"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/deactive_text1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/setting_selector_background"
                    android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_size_25"
                    android:text="@string/ID_DEACTIVATE"
                    android:textColor="@color/searchbox_hint_text_color"
                    android:textSize="@dimen/sp_size_13" />

              <!-- <CheckBox
                    android:id="@+id/deactive_check_box1"
                    style="@style/CheckBoxStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_size_15"

                    />-->

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/deactive_text1a"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/setting_selector_background"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:layout_marginLeft="@dimen/dp_size_16"
                    android:padding="@dimen/dp_size_25"
                    android:text="@string/ID_NOTFINDTEXT"
                    android:textColor="@color/searchbox_hint_text_color"
                    android:textSize="@dimen/sp_size_13" />


                <CheckBox
                    android:id="@+id/deactive_check_box1a"
                    android:layout_marginRight="@dimen/dp_size_16"
                    style="@style/CheckBoxStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_size_15" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <TextView
                    android:id="@+id/deactive_text1b"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/setting_selector_background"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:layout_marginLeft="@dimen/dp_size_16"

                    android:padding="@dimen/dp_size_25"
                    android:text="@string/ID_SPAMMED"
                    android:textColor="@color/searchbox_hint_text_color"
                    android:textSize="@dimen/sp_size_13" />


                <CheckBox
                    android:id="@+id/deactive_check_box1b"
                    style="@style/CheckBoxStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_size_16"

                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_size_15" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <TextView
                    android:id="@+id/deactive_text1c"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/setting_selector_background"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:padding="@dimen/dp_size_25"
                    android:text="@string/ID_PRIVACY"
                    android:layout_marginLeft="@dimen/dp_size_16"


                    android:textColor="@color/searchbox_hint_text_color"
                    android:textSize="@dimen/sp_size_13" />


                <CheckBox
                    android:id="@+id/deactive_check_box1c"
                    style="@style/CheckBoxStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_size_16"

                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_size_15" />

            </RelativeLayout>
            <ProgressBar
                android:id="@+id/progress_bar_first_load"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/added_member_text"
                android:layout_gravity="center"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <TextView
                    android:id="@+id/deactive_text1d"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/setting_selector_background"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:padding="@dimen/dp_size_25"
                    android:text="@string/ID_OTHER"
                    android:layout_marginLeft="@dimen/dp_size_16"
                    android:textColor="@color/searchbox_hint_text_color"
                    android:textSize="@dimen/sp_size_13" />



                <CheckBox
                    android:id="@+id/deactive_check_box1d"
                    style="@style/CheckBoxStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_size_16"

                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_size_15" />


            </RelativeLayout>


            <EditText
                android:id="@+id/et_edit_text_reson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/ID_WRITE_RESON"
                android:paddingBottom="@dimen/dp_size_10"
                android:layout_marginLeft="@dimen/dp_size_35"

                android:layout_marginRight="@dimen/dp_size_35"
                android:textColorHint="@color/button_color"
                android:background="@drawable/edit_text_create_community_style"
                android:visibility="gone"
                android:textSize="@dimen/dp_size_12"
                android:maxLines="7"
                android:maxHeight="@dimen/dp_size_200"
                android:lineSpacingExtra="@dimen/dp_size_16"
                />

            <TextView
                android:id="@+id/tv_reson_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_size_1"
                android:layout_marginLeft="@dimen/dp_size_38"
                android:layout_marginRight="@dimen/dp_size_38"
                android:background="@color/grey2"/>


        </LinearLayout>

    </ScrollView>

    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/preferences_deactiveaccount_button"
        android:layout_width="fill_parent"
        android:background="@color/grey2"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:fontFamily="@string/ID_ROBOTO_MEDIUM"
        android:text="@string/ID_CONFIRM"
        android:enabled="false"

        android:textColor="@color/white" />

</RelativeLayout>