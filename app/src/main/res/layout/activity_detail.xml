<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="@dimen/dp_size_50"
            app:expandedTitleMarginEnd="@dimen/dp_size_54"
            android:fitsSystemWindows="true">

            <appliedlife.pvtltd.SHEROES.views.cutomeviews.SquareImageView
                android:id="@+id/iv_article_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_size_13"
                android:layout_gravity="end|bottom">
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_timer_icon"
                    android:textSize="@dimen/sp_size_12"
                    android:paddingLeft="@dimen/dp_size_5"
                    android:textColor="@color/white"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:text="@string/ID_ERROR_FIELD_REQUIRED"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/rectangle_detail_round"
                    android:paddingLeft="@dimen/dp_size_10"
                    android:paddingRight="@dimen/dp_size_10"
                    android:paddingTop="@dimen/dp_size_5"
                    android:paddingBottom="@dimen/dp_size_5"
                    android:alpha=".8"
                    android:textSize="@dimen/sp_size_10"
                    android:textColor="@color/white"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:text="200 views"/>
                </FrameLayout>
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="right"
                android:gravity="right"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin">
                <TextView
                    android:id="@+id/tv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:drawablePadding="@dimen/dp_size_10"
                    android:paddingRight="@dimen/dp_size_38"
                    android:drawableLeft="@drawable/ic_share_icon"/>
                <TextView
                    android:id="@+id/tv_bookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:drawablePadding="@dimen/dp_size_10"
                    android:paddingRight="@dimen/dp_size_20"
                    android:drawableLeft="@drawable/ic_bookmark_in_active"/>
                </android.support.v7.widget.Toolbar>


        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_size_13"
                        android:layout_marginRight="@dimen/dp_size_13"
                        android:layout_marginTop="@dimen/dp_size_20"
                        android:textSize="@dimen/sp_size_15"
                        android:textStyle="bold"
                        android:textColor="@color/dashboard_text"
                        android:fontFamily="@string/ID_ROBOTO_BOLD"/>

                    <TextView
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_size_13"
                        android:text="@string/ID_ARTICLE_TEXT"
                        android:textSize="@dimen/sp_size_14"
                        android:textColor="@color/detail_page_text"
                        android:lineSpacingExtra="@dimen/dp_size_8"
                        android:fontFamily="@string/ID_ROBOTO_REGULAR"/>

                </LinearLayout>


        </FrameLayout>

    </android.support.v4.widget.NestedScrollView>

    <!--<android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        app:layout_anchor="@id/app_bar_layout"
        app:layout_anchorGravity="bottom|right|end"
        style="@style/FabStyle"/>-->

</android.support.design.widget.CoordinatorLayout>