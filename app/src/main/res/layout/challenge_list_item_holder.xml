<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_size_5"
    android:background="@drawable/challenge_gradiant_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dp_size_11"
        android:layout_marginLeft="@dimen/dp_size_16"
        android:layout_marginRight="@dimen/dp_size_12"
        android:layout_marginTop="@dimen/dp_size_11"
        android:gravity="center"
        android:weightSum="1">

        <appliedlife.pvtltd.SHEROES.views.cutomeviews.RoundedImageView
            android:id="@+id/iv_challenge_icon"
            android:layout_width="@dimen/feed_profile_icon_size"
            android:layout_height="@dimen/feed_profile_icon_size"
            android:layout_gravity="top"
            app:riv_border_width="@dimen/dp_size_0.5"
            app:riv_corner_radius="@dimen/dp_size_10"
            app:riv_oval="false" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_12"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                android:text="@string/ID_ABOUT"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_size_12" />

            <TextView
                android:id="@+id/tv_challenged"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_1"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:text="@string/ID_CHALLENGES_YOU"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_size_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                android:text="@string/ID_CHALLENGE"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_size_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_1"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:text="@string/ID_YOUR_FRIENDS"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_size_12" />
        </LinearLayout>


        <ImageView
            android:id="@+id/iv_fb_share"
            android:layout_width="@dimen/dp_size_20"
            android:layout_height="@dimen/dp_size_20"
            android:layout_gravity="center"
            android:background="@drawable/ic_anonomous"
            android:fontFamily="@string/ID_ROBOTO_BOLD"
            android:paddingBottom="@dimen/dp_size_12"
            android:paddingRight="@dimen/dp_size_15"
            android:paddingTop="@dimen/dp_size_12" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_challenge_name_update_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_size_18"
        android:layout_marginRight="@dimen/dp_size_20"
        android:fontFamily="@string/ID_ROBOTO_MEDIUM"
        android:text="@string/ID_SERVER_PROBLEM"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_size_12"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tv_timer_count_challenge_update_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_size_18"
        android:drawablePadding="@dimen/dp_size_10"
        android:drawableRight="@drawable/ic_cross"
        android:fontFamily="@string/ID_ROBOTO_MEDIUM"
        android:text="01:18:29"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_size_12" />

    <TextView
        android:id="@+id/tv_challenge_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_size_30"
        android:layout_marginRight="@dimen/dp_size_20"
        android:layout_marginTop="@dimen/dp_size_30"
        android:fontFamily="@string/ID_ROBOTO_MEDIUM"
        android:text="@string/ID_SERVER_PROBLEM"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_size_15"
        android:textStyle="italic"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_timer_count_challenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_size_30"
        android:drawablePadding="@dimen/dp_size_10"
        android:drawableRight="@drawable/ic_cross"
        android:fontFamily="@string/ID_ROBOTO_MEDIUM"
        android:text="01:18:29"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_size_15"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/li_update_status_design"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_size_16"
        android:layout_marginRight="@dimen/dp_size_12"
        android:layout_marginTop="@dimen/dp_size_5"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_share_job" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_circle_w" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:gravity="center"
                android:text="@string/ID_JUST_STARTED"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_size_10" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_1"
        android:layout_marginLeft="@dimen/dp_size_13"
        android:layout_marginRight="@dimen/dp_size_13"
        android:layout_marginTop="@dimen/dp_size_10"
        android:background="@color/search_tab_unselected_text" />

    <LinearLayout
        android:id="@+id/li_total_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_size_11"
        android:layout_marginLeft="@dimen/dp_size_16"
        android:layout_marginRight="@dimen/dp_size_12"
        android:layout_marginTop="@dimen/dp_size_5"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/tv_challenge_accepted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:text="@string/ID_CHALLENGE_ACCEPTED"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_size_12"
            android:textStyle="italic" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_size_20"
            android:background="@drawable/challenge_count_background"
            android:padding="@dimen/dp_size_5">

            <TextView
                android:id="@+id/tv_count_in_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:gravity="center"
                android:text="11k"
                android:textColor="@color/communities_post_icon"
                android:textSize="@dimen/sp_size_10" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_size_5"
            android:fontFamily="@string/ID_ROBOTO_MEDIUM"
            android:gravity="center"
            android:text="In India"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_size_12" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_size_10"
            android:background="@drawable/challenge_count_background"
            android:padding="@dimen/dp_size_5">

            <TextView
                android:id="@+id/tv_count_in_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:gravity="center"
                android:text="11k"
                android:textColor="@color/communities_post_icon"
                android:textSize="@dimen/sp_size_10" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_country_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_size_5"
            android:fontFamily="@string/ID_ROBOTO_MEDIUM"
            android:gravity="center"
            android:text="In Delhi NCR"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_size_12" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/accept_challenge_background"
        android:fontFamily="@string/ID_ROBOTO_MEDIUM"
        android:gravity="center"
        android:padding="@dimen/dp_size_10"
        android:text="@string/ID_ACCEPT_CHALLENGE"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_size_14" />
</LinearLayout>