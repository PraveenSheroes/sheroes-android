<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/li_feed_album"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_first"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/photo_placeholder"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/li_holder"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_size_2"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_second"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>
        <FrameLayout
            android:id="@+id/fl_third_image_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_size_2"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_third"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/tv_feed_community_more_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha=".7"
                android:text="+3"
                android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                android:textAlignment="center"
                android:gravity="center"
                android:visibility="gone"
                android:textSize="@dimen/sp_size_24"
                android:textColor="@color/white"
                android:background="@color/black"/>
        </FrameLayout>

    </LinearLayout>
</LinearLayout>