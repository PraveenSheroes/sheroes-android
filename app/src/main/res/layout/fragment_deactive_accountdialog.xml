<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    android:orientation="vertical"
    >

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    android:background="@drawable/search_rounded_corners"
    android:layout_gravity="center_vertical">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/dp_size_54"
        android:layout_height="@dimen/dp_size_54"
        android:layout_marginTop="@dimen/dp_size_13"
        android:background="@drawable/ic_sad_face"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_size_12"
        android:layout_gravity="center"
        android:textSize="@dimen/sp_size_14"
        android:textColor="@color/text_color_dialog"
        android:text="@string/ID_DEACTIVE_TEXT"

        />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_size_6"
        android:layout_gravity="center"
        android:textSize="@dimen/sp_size_13"
        android:textColor="@color/text_color_follow"
        android:text="@string/ID_DEACTIVE_TEXT1"

        />

    <TextView
        android:id="@+id/tv_dialog_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/ID_CLOSE"
        android:textSize="@dimen/sp_size_12"
        android:textColor="@color/text_color_close"
        android:layout_marginRight="@dimen/dp_size_25"
        android:layout_marginBottom="@dimen/dp_size_13"

        />

</LinearLayout>

</RelativeLayout>