<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_feature_communities"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_size_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/li_featured_community_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_size_16"
            android:gravity="top"
            android:orientation="horizontal">

            <appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView
                android:id="@+id/iv_featured_community_card_circle_icon"
                android:layout_width="@dimen/feed_profile_icon_size"
                android:layout_height="@dimen/feed_profile_icon_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_16"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_featured_community_card_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                    android:textColor="@color/feed_article_label"
                    android:textSize="@dimen/sp_size_14" />

                <TextView
                    android:id="@+id/tv_featured_community_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_size_3"
                    android:drawablePadding="@dimen/dp_size_5"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:textColor="@color/footer_icon_text"
                    android:textSize="@dimen/sp_size_12" />
            </LinearLayout>


        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_size_16"
            android:layout_marginRight="@dimen/dp_size_16"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_featured_community_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:lineSpacingExtra="@dimen/dp_size_3"
                android:textColorLink="@color/view_more"
                android:textColor="@color/comment_text"
                android:textSize="@dimen/sp_size_14" />
            <TextView
                android:id="@+id/tv_feature_communities_view_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ID_VIEW_MORE"
                android:background="@color/white"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/dp_size_2"
                android:layout_gravity="bottom|right"
                android:textColor="@color/view_more"/>
        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_size_0.5"
            android:layout_marginLeft="@dimen/dp_size_13"
            android:layout_marginRight="@dimen/dp_size_13"
            android:layout_marginTop="@dimen/dp_size_10"
            android:background="@color/search_tab_unselected_text" />

        <LinearLayout
            android:id="@+id/li_featured_community_tags"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_size_12"
            android:layout_marginLeft="@dimen/dp_size_16"
            android:layout_marginRight="@dimen/dp_size_16"
            android:layout_marginTop="@dimen/dp_size_10"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_5"
                android:layout_weight="@integer/int_value_for_line_1">

                <TextView
                    android:id="@+id/tv_featured_community_tag_lable"
                    android:layout_width="@dimen/dp_size_250"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/feed_article_comment"
                    android:textSize="@dimen/sp_size_12" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_featured_community_join"
                android:layout_width="@dimen/dp_size_80"
                android:layout_height="@dimen/dp_size_30"
                android:background="@drawable/rectangle_feed_commnity_join"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:gravity="center"
                android:text="@string/ID_JOIN"
                android:textAllCaps="true"
                android:textColor="@color/footer_icon_text"
                android:textSize="@dimen/sp_size_12"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>