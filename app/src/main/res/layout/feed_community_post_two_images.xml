<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_gravity="center"
android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="@integer/int_value_for_line_1"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_feed_community_post_first"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:visibility="gone"
            android:layout_height="@dimen/two_image_rectangle"
            android:scaleType="centerCrop" />
        <FrameLayout
            android:id="@+id/fl_shadow_image_post_first"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="@dimen/two_image_rectangle"
            android:background="@color/comment_box_edit_border"
            android:scaleType="centerCrop">
            <ProgressBar
                android:layout_width="@dimen/dp_size_30"
                android:layout_height="@dimen/dp_size_30"
                android:layout_gravity="center"
                android:indeterminateTint="@color/white"/>
        </FrameLayout>
        <ImageView
            android:id="@+id/iv_feed_comunity_post_second"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:visibility="gone"
            android:layout_height="@dimen/two_image_rectangle"
            android:layout_marginLeft="@dimen/dp_size_2"
            android:scaleType="centerCrop" />
        <FrameLayout
            android:id="@+id/fl_shadow_image_post_second"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="@dimen/two_image_rectangle"
            android:layout_marginLeft="@dimen/dp_size_2"
            android:background="@color/comment_box_edit_border"
            android:scaleType="centerCrop">
            <ProgressBar
                android:layout_width="@dimen/dp_size_30"
                android:layout_height="@dimen/dp_size_30"
                android:layout_gravity="center"
                android:indeterminateTint="@color/white"/>
        </FrameLayout>
    </LinearLayout>

</FrameLayout>
