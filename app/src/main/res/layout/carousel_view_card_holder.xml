<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:vernacular="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_size_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:baselineAligned="false"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_size_16"
            android:layout_marginRight="@dimen/dp_size_16"
            android:layout_marginTop="@dimen/dp_size_16"
            android:gravity="top"
            android:orientation="horizontal"
            android:weightSum="@integer/int_value_for_line_1">

            <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
                android:id="@+id/title"
                style="@style/TextView18spMediumBold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/int_value_for_line_1"
                android:text="@string/ID_GET_EXPERT_ADVICE"
                android:textColor="@color/comment_text"
                vernacular:customTextFontFamily="@string/medium_font" />

            <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
                android:id="@+id/show_more"
                style="@style/TextView14spMediumBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_16"
                android:background="@drawable/rectangle_feed_commnity_join"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_size_8"
                android:paddingLeft="@dimen/dp_size_16"
                android:paddingRight="@dimen/dp_size_16"
                android:paddingTop="@dimen/dp_size_8"
                android:text="@string/ID_MENTOR_VIEW_ALL"
                android:textAllCaps="true"
                android:textColor="@color/footer_icon_text"
                android:visibility="visible"
                vernacular:customTextFontFamily="@string/medium_font" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/carousel_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_size_22"
            android:layout_marginTop="@dimen/dp_size_14"
            android:divider="@color/fully_transparent" />
    </LinearLayout>
</android.support.v7.widget.CardView>
