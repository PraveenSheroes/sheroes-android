<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView
        android:id="@+id/iv_event_speaker_circle_icon"
        android:layout_width="@dimen/feed_profile_icon_size"
        android:layout_height="@dimen/feed_profile_icon_size"
        android:src="@drawable/ic_anonomous" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_size_16"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_event_speaker_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@string/ID_ROBOTO_MEDIUM"
            android:text="speaker"
            android:textColor="@color/faq_question_color"
            android:textSize="@dimen/sp_size_15" />

        <TextView
            android:id="@+id/tv_event_speaker_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_size_5"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:text="sheroes.com"
            android:textColor="@color/detail_page_text"
            android:textSize="@dimen/sp_size_12" />
    </LinearLayout>

</LinearLayout>

