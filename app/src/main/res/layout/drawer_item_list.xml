<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_drawer_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_size_48">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/tv_drawer_image"
        android:layout_width="@dimen/dp_size_22"
        android:layout_height="@dimen/dp_size_22"
        android:layout_marginBottom="@dimen/dp_size_11"
        android:layout_marginLeft="@dimen/dp_size_16"
        android:layout_marginStart="@dimen/dp_size_16"
        android:layout_marginTop="@dimen/dp_size_12" />

    <TextView
        android:layout_toRightOf="@+id/tv_drawer_image"
        android:layout_toEndOf="@+id/tv_drawer_image"
        android:id="@+id/tv_drawer_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_size_32"
        android:layout_marginStart="@dimen/dp_size_32"
        android:layout_marginBottom="@dimen/dp_size_12"
        android:layout_marginTop="@dimen/dp_size_12"
        android:fontFamily="@string/ID_ROBOTO_REGULAR"
        android:lineSpacingExtra="10sp"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_size_13" />

    <TextView
        android:id="@+id/new_feature"
        android:visibility="gone"
       android:layout_margin="@dimen/dp_size_10"
        android:textColor="@color/white"
        android:padding="@dimen/dp_size_2"
        android:layout_centerVertical="true"
        android:text="@string/new_feature"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:fontFamily="@string/ID_ROBOTO_REGULAR"
        android:minHeight="@dimen/dp_size_30"
        android:minWidth="@dimen/dp_size_30"
        android:background="@drawable/rectangle_boarding_active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
