<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_size_42"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lnr_filter_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <include layout="@layout/community_header" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_30"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:text="@string/ID_OPPORTUNITY_TYPE"
                android:textAllCaps="true"
                android:textColor="@color/text_color_setting_preference_basicdetails"
                android:textSize="@dimen/sp_size_12" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_filter_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lnr_filter_header"
                android:layout_marginTop="@dimen/dp_size_10"
                android:divider="@color/fully_transparent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_30"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:text="@string/ID_LOCATION"
                android:textAllCaps="true"
                android:textColor="@color/text_color_setting_preference_basicdetails"
                android:textSize="@dimen/sp_size_12" />

            <TextView
                android:id="@+id/tv_location_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_10"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:textAllCaps="true"
                android:textColor="@color/job_filter_desc_color"
                android:textSize="@dimen/sp_size_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_30"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:text="@string/ID_SELF_EMP_FUNCTIONAL_HINT"
                android:textAllCaps="true"
                android:textColor="@color/text_color_setting_preference_basicdetails"
                android:textSize="@dimen/sp_size_12" />

            <TextView
                android:id="@+id/tv_functional_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_10"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:textAllCaps="true"
                android:textColor="@color/job_filter_desc_color"
                android:textSize="@dimen/sp_size_12" />

            <TextView
                android:id="@+id/tv_filter_exp_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rv_filter_list"
                android:layout_marginTop="@dimen/dp_size_30"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:text="@string/ID_EXP"
                android:textColor="@color/text_color_setting_preference_basicdetails"
                android:textSize="@dimen/sp_size_12" />

            <TextView
                android:id="@+id/tv_filter_exp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_filter_exp_txt"
                android:layout_marginTop="@dimen/dp_size_10"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:textColor="@color/job_filter_desc_color"
                android:textSize="@dimen/sp_size_12" />

            <appliedlife.pvtltd.SHEROES.utils.RangeSeekBar
                android:id="@+id/rangeSeekbar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_filter_exp"
                android:layout_marginRight="@dimen/dp_size_30" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rangeSeekbar"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_size_42"
                    android:text="5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_size_42"
                    android:text="10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_size_42"
                    android:text="15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_size_42"
                    android:text="20" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_size_42"
                    android:text="25" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_save_job_filter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_50"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rect_btn"
        android:gravity="center"
        android:fontFamily="@string/ID_ROBOTO_MEDIUM"
        android:textAllCaps="true"
        android:text="@string/ID_I_M_DONE"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_size_13" />
</RelativeLayout>