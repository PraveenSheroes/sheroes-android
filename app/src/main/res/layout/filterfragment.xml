<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rsb="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent" android:layout_height="match_parent">
<ScrollView
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">
<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <LinearLayout
        android:id="@+id/lnr_filter_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <include
            layout="@layout/community_header"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_filter_list"
        android:layout_marginTop="@dimen/dp_size_10"
        android:layout_below="@+id/lnr_filter_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/fully_transparent" />
    <TextView
        android:id="@+id/tv_filter_exp_txt"
        android:layout_marginTop="@dimen/dp_size_10"
        android:layout_below="@+id/rv_filter_list"
        android:layout_width="wrap_content"
        android:textColor="@color/job_filter_type_color"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_size_42"
        android:layout_marginRight="@dimen/dp_size_42"
        android:textSize="@dimen/sp_size_11"
        android:fontFamily="@string/ID_ROBOTO_REGULAR"
        android:text="@string/ID_EXP"/>
    <TextView
        android:id="@+id/tv_filter_exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_filter_exp_txt"
        android:textColor="@color/job_filter_desc_color"
        android:fontFamily="@string/ID_ROBOTO_REGULAR"
        android:textSize="@dimen/sp_size_11"
        android:layout_marginTop="@dimen/dp_size_8"
        android:layout_marginLeft="@dimen/dp_size_42"
        android:text="0-1 Year"/>

    <appliedlife.pvtltd.SHEROES.utils.RangeSeekBar
        android:id="@+id/rangeSeekbar"
        android:layout_width="fill_parent"
        android:layout_marginLeft="@dimen/dp_size_42"
        android:layout_marginRight="@dimen/dp_size_42"

        android:layout_below="@+id/tv_filter_exp"
        android:layout_height="wrap_content"

        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_size_42"
        android:layout_below="@+id/rangeSeekbar"
        android:background="@color/white"
        android:layout_marginRight="@dimen/dp_size_42"
        android:layout_marginBottom="@dimen/dp_size_100"
        android:weightSum="5"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:gravity="right"
            android:paddingLeft="@dimen/dp_size_13"
            android:layout_weight="0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:gravity="right"
            android:paddingLeft="@dimen/dp_size_13"

            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:gravity="right"
            android:paddingLeft="@dimen/dp_size_13"

            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15"
            android:gravity="right"
            android:paddingLeft="@dimen/dp_size_8"

            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:gravity="right"
            android:paddingLeft="@dimen/dp_size_8"

            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25"
            android:gravity="right"
            android:paddingRight="@dimen/dp_size_8"
            android:layout_weight="1"/>
    </LinearLayout>


</RelativeLayout>
</ScrollView>

    <TextView
        android:id="@+id/tv_save_job_filter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_48"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp_size_30"
        android:background="@drawable/rect_btn"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_size_10"
        android:paddingTop="@dimen/dp_size_10"
        android:text="SAVE"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_size_12"
        />
 </RelativeLayout>