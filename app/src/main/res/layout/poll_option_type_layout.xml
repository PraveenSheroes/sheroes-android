<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:vernacular="http://schemas.android.com/apk/res-auto"
    android:id="@+id/li_text_poll_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <appliedlife.pvtltd.SHEROES.vernacular.NoScrollEditText
        android:id="@+id/et_text_poll"
        style="@style/TextView18spRegular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="@integer/et_text_poll_weight"
        android:background="@drawable/rectangle_border"
        android:inputType="textMultiLine"
        android:maxLength="@integer/text_poll_input_option_char_limit"
        android:maxLines="@integer/image_poll_option_line"
        android:padding="@dimen/option_poll_padding"
        android:scrollbars="vertical"
        android:textColor="@color/comment_text"
        android:textColorHint="@color/on_board_work"
        android:textCursorDrawable="@drawable/cursor_line"
        vernacular:customEditTextFontFamily="@string/regular_font" />

    <ImageView
        android:id="@+id/iv_delete_text_poll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/option_poll_delete_padding"
        android:src="@drawable/ic_cross"
        android:visibility="gone" />
</LinearLayout>

