<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tooltip_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_tool_tip_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_weight="@integer/int_value_for_line_1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_16"
            android:layout_marginRight="@dimen/dp_size_16"
            android:layout_marginTop="@dimen/dp_size_16"
            android:layout_marginBottom="@dimen/dp_size_16"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:gravity="left"
            android:lineSpacingExtra="@dimen/dp_size_5"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_size_14" />

        <TextView
            android:id="@+id/got_it"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/ID_ROBOTO_MEDIUM"
            android:layout_gravity="bottom"
            android:padding="@dimen/dp_size_10"
            android:text="@string/ID_GOT_IT"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_size_14" />

    </LinearLayout>
</RelativeLayout>