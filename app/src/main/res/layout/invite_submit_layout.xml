<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_added_member"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_30"
        android:layout_gravity="bottom"
        android:background="@color/added_member"
        android:gravity="center"
        android:textSize="@dimen/sp_size_12"
        android:textAllCaps="true"
        android:textColor="@color/added_member_text" />
    <TextView
        android:id="@+id/tv_invite_post_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_50"
        android:background="@drawable/rectangle_grey_round_corner"
        android:layout_gravity="bottom"
        android:backgroundTint="@color/footer_icon_text"
        android:text="@string/ID_DONE"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="@color/white" />
</LinearLayout>
