<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:vernacular="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="appliedlife.pvtltd.SHEROES.views.fragments.dialogfragment.ResetPasswordSuccessDialogFragment">

    <TextView
        android:id="@+id/iv_login_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:layout_marginLeft="@dimen/dp_size_14"
        android:drawableLeft="@drawable/vector_back_arrow"
        android:padding="@dimen/dp_size_10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
            style="@style/TextView18spRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_size_120"
            android:text="@string/ID_RESET_PASSWORD_TITLE"
            android:textColor="@color/text_color_follow"
            android:textStyle="bold"
            vernacular:customTextFontFamily="@string/regular_font" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_size_54"
            android:src="@drawable/vector_checks" />

        <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
            android:id="@+id/reset_pwd_success_text"
            style="@style/TextView14spRegular"
            android:layout_width="@dimen/dp_size_254"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_size_54"
            android:text="@string/ID_RESET_PASSWORD_SUCCESS_TEXT"
            android:textAlignment="center"
            vernacular:customTextFontFamily="@string/regular_font" />

        <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
            android:id="@+id/back_login"
            style="@style/TextView14spRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_size_4"
            android:clickable="true"
            android:padding="@dimen/dp_size_20"
            android:text="@string/ID_RESET_PASSWORD_SUCCESS_LINK_TEXT"
            android:textAlignment="center"
            android:textColor="@color/chat_incomming_text_color"
            vernacular:customTextFontFamily="@string/regular_font" />
    </LinearLayout>
</FrameLayout>
