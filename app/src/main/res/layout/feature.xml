<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/dp_size_2"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingRight="@dimen/dp_size_1"
        android:paddingLeft="@dimen/dp_size_1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/dp_size_8"
            android:weightSum="1">

            <ImageView
                android:id="@+id/iv_dashboard_icon"
                android:layout_width="@dimen/dp_size_50"
                android:layout_height="@dimen/dp_size_50"
                android:visibility="invisible"
                android:background="@drawable/ic_footer_button_icon" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_size_5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_dashboard_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/ID_ROBOTO_BOLD"
                    android:text="@string/ID_APP_NAME"
                    android:visibility="invisible"
                    android:textSize="@dimen/sp_size_15"
                    android:textColor="@color/dashboard_text"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_dashboard_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:textColor="@color/dashboard_fed_text"
                    android:text="5 hrs ago"
                    android:visibility="invisible"
                    android:textSize="@dimen/sp_size_14" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_dashboard_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_size_20"
                android:drawableRight="@drawable/ic_bookmark_active"
                android:fontFamily="@string/ID_ROBOTO_BOLD"
                android:text="@string/ID_TRENDING"
                android:visibility="invisible"
                android:textColor="@color/dashboard_label"
                android:layout_marginRight="@dimen/dp_size_10"
                android:textSize="@dimen/sp_size_12"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/iv_dashboard_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_20"
                android:background="@drawable/ic_menu_dashboard" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_dashboard"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_size_160"
                android:scaleType="fitXY" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/dp_size_12"
                android:layout_marginLeft="@dimen/dp_size_13"
                android:layout_marginRight="@dimen/dp_size_13"
                android:drawableLeft="@drawable/ic_timer_icon"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:paddingLeft="@dimen/dp_size_5"
                android:text="1 Min Read"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_size_12" />

            <TextView
                android:id="@+id/tv_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="@dimen/dp_size_12"
                android:layout_marginRight="@dimen/dp_size_13"
                android:visibility="invisible"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:background="@drawable/rectangle_detail_round"
                android:paddingLeft="@dimen/dp_size_10"
                android:paddingRight="@dimen/dp_size_10"
                android:paddingTop="@dimen/dp_size_5"
                android:alpha=".8"
                android:paddingBottom="@dimen/dp_size_5"
                android:text="200 views"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_size_10" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/li_dashboard_decription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_size_13"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@string/ID_ROBOTO_BOLD"
                android:textSize="@dimen/sp_size_15"
                android:textColor="@color/dashboard_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:layout_marginTop="@dimen/dp_size_13"
                android:textColor="@color/dashboard_fed_text"
                android:lineSpacingExtra="@dimen/dp_size_5"
                android:lines="2"
                android:textSize="@dimen/sp_size_14" />
            <TextView
                android:id="@+id/tv_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:layout_marginTop="@dimen/dp_size_13"
                android:text="Tag: Health, Education"
                android:textColor="@color/dashboard_text"
                android:textStyle="bold"
                android:textSize="@dimen/sp_size_14" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>