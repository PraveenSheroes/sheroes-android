<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_home_footer_list"
    android:layout_width="match_parent"
    android:elevation="@dimen/dp_size_40"
    app:cardElevation="@dimen/dp_size_40"
    android:visibility="visible"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/tv_mentor_see_insight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".5"
            android:elevation="@dimen/dp_size_5"
            android:textAllCaps="true"
            android:background="@drawable/rectangle_boarding_active"
            android:fontFamily="@string/ID_ROBOTO_MEDIUM"
            android:gravity="bottom|center_horizontal"
            android:text="@string/ID_SEE_INSIGHT"
            android:textColor="@color/white"
            android:paddingTop="@dimen/dp_size_20"
            android:paddingBottom="@dimen/dp_size_20"
            android:drawablePadding="@dimen/dp_size_4"
            android:textSize="@dimen/sp_size_14" />
        <View
            android:id="@+id/view_footer"
            android:layout_width="@dimen/dp_size_1"
            android:layout_height="match_parent"
            android:background="@color/footer_icon_text"/>
        <TextView
            android:id="@+id/tv_mentor_ask_question"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".5"
            android:elevation="@dimen/dp_size_5"
            android:textAllCaps="true"
            android:background="@drawable/rectangle_boarding_active"
            android:fontFamily="@string/ID_ROBOTO_MEDIUM"
            android:gravity="bottom|center_horizontal"
            android:text="@string/ID_ASK_QUESTION"
            android:textColor="@color/white"
            android:paddingTop="@dimen/dp_size_20"
            android:paddingBottom="@dimen/dp_size_20"
            android:drawablePadding="@dimen/dp_size_4"
            android:textSize="@dimen/sp_size_14" />
    </LinearLayout>
</android.support.v7.widget.CardView>

