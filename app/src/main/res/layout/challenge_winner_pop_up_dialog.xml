<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:vernacular="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/fully_transparent"
    android:minWidth="@dimen/winner_min_width"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_winner_dialog_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_cross" />

    <LinearLayout
        android:id="@+id/li_winner_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_winner_dialog_close"
        android:background="@color/white"
        android:orientation="vertical">

        <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
            android:id="@+id/tv_winner_dialog_title"
            style="@style/TextView20spBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/winner_title_margin"
            android:layout_marginRight="@dimen/winner_title_margin"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="@dimen/sp_size_winner_dialog_title_line_space"
            android:textColor="@color/comment_text"
            android:textSize="@dimen/sp_size_winner_dialog_title"
            vernacular:customTextFontFamily="@string/medium_font" />

        <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
            android:id="@+id/tv_winner_dialog_intro"
            style="@style/TextView16spRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/winner_intro_margin"
            android:layout_marginRight="@dimen/winner_intro_margin"
            android:layout_marginTop="@dimen/winner_intro_margin"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="@dimen/sp_size_winner_dialog_intro_line_space"
            android:textColor="@color/comment_text"
            android:textStyle="normal"
            vernacular:customTextFontFamily="@string/regular_font" />

        <ImageView
            android:layout_width="@dimen/winner_heart_height_width"
            android:layout_height="@dimen/winner_heart_height_width"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_size_16"
            android:src="@drawable/ic_heart_active" />

        <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
            android:id="@+id/tv_winner_dialog_msg"
            style="@style/TextView14spBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/winner_msg_margin"
            android:layout_marginRight="@dimen/winner_msg_margin"
            android:layout_marginTop="@dimen/winner_msg_margin"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="@dimen/sp_size_winner_dialog_intro_line_space"
            android:text="@string/winner_msg"
            android:textColor="@color/comment_text"
            vernacular:customTextFontFamily="@string/medium_font" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/winner_copy_scroll_height"
            android:layout_marginLeft="@dimen/winner_copy_text_margin"
            android:layout_marginRight="@dimen/winner_copy_text_margin"
            android:layout_marginTop="@dimen/winner_copy_text_margin"
            android:background="@drawable/dash_border">

            <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
                android:id="@+id/tv_cover_text_view"
                style="@style/TextView14spRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/winner_copy_text_padding"
                android:textColor="@color/posted_in"
                android:textStyle="normal"
                vernacular:customTextFontFamily="@string/regular_font" />
        </ScrollView>

        <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
            android:id="@+id/tv_copy"
            style="@style/TextView14spBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/winner_copy_margin"
            android:layout_marginTop="8dp"
            android:text="@string/copy"
            android:textAllCaps="true"
            android:textColor="@color/footer_icon_text"
            android:visibility="visible"
            vernacular:customTextFontFamily="@string/medium_font" />

        <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
            android:id="@+id/tv_winner_dialog_button"
            style="@style/TextView14spBold"
            android:layout_width="match_parent"
            android:layout_height="@dimen/winner_play_store_height"
            android:layout_margin="@dimen/winner_play_store_margin"
            android:background="@drawable/rectangle_grey_winner_dialog"
            android:gravity="center"
            android:text="@string/paste_on_playstore"
            android:textAllCaps="true"
            android:textColor="@color/white"
            vernacular:customTextFontFamily="@string/medium_font" />
    </LinearLayout>

</RelativeLayout>
