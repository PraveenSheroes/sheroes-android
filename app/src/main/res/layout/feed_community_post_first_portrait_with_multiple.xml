<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal"
    android:weightSum="1">

    <ImageView
        android:id="@+id/iv_feed_community_post_first_portrait"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".5"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:id="@+id/iv_feed_community_post_second_portrait"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".33"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/iv_feed_community_post_third_portrait"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_size_1"
            android:layout_weight=".33"
            android:scaleType="fitXY"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_size_1"
            android:layout_weight=".33"
            android:scaleType="fitXY">

            <ImageView
                android:id="@+id/iv_feed_community_post_fourth_portrait"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />
            <TextView
                android:id="@+id/tv_feed_community_post_portrait_total_images"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/ID_TOTAL_IMAGES"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/sp_size_35"
                android:background="@drawable/ic_reaction_strip_background"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
