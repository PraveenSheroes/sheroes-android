<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/recatnagle_home_spinner">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_spinner_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_size_5"
        android:layout_marginRight="@dimen/dp_size_5"
        android:divider="@color/fully_transparent" />

    <ProgressBar
        android:id="@+id/pb_spinner_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center" />
    <include
        android:id="@+id/spinner_footer"
        layout="@layout/spinner_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />
</FrameLayout>