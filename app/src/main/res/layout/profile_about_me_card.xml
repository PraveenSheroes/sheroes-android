<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="@dimen/dp_size_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/r1_add_education_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_size_16">

            <TextView
                android:id="@+id/tv_lookinfor_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:text="@string/ID_ABOUT_ME"
                android:textAllCaps="true"
                android:textColor="@color/dashboard_fed_text"
                android:textSize="@dimen/sp_size_13" />


            <TextView
                android:id="@+id/tv_add_about_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/ic_edit_icon"
                android:drawableEnd="@drawable/ic_edit_icon"
                android:padding="@dimen/dp_size_3" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_lookingfor_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                android:padding="@dimen/dp_size_16"
                android:visibility="gone"
                android:text="@string/ID_OPP_SEARCh"
                android:textColor="@color/searchbox_hint_text_color"
                android:textSize="@dimen/dp_size_13" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_about_me"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                    android:maxLines="@integer/int_value_for_line_2"
                    android:paddingBottom="@dimen/dp_size_16"
                    android:paddingLeft="@dimen/dp_size_16"
                    android:paddingTop="@dimen/dp_size_16"
                    android:textColor="@color/searchbox_hint_text_color"
                    android:textSize="@dimen/dp_size_13" />

                <TextView
                    android:id="@+id/tv_looking_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                    android:padding="@dimen/dp_size_16"
                    android:text="@string/ID_MORE"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/dp_size_13" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
