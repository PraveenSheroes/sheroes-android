<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:background="@color/text_color_close"
android:id="@+id/rl_search_box"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal">

<ImageView
    android:padding="@dimen/dp_size_16"
    android:id="@+id/iv_back_profile"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginLeft="@dimen/dp_size_21"
    android:layout_marginStart="@dimen/dp_size_21"
    android:layout_gravity="center|left"
    android:src="@drawable/ic_back_white"/>

<TextView
    android:textStyle="bold"
    android:id="@+id/tv_profile_tittle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="@string/ID_ROBOTO_REGULAR"
    android:layout_marginLeft="@dimen/dp_size_72"
    android:layout_marginStart="@dimen/dp_size_72"
    android:textAllCaps="true"
    android:layout_centerVertical="true"
    android:layerType="software"
    android:textColor="@color/white"
    android:textSize="@dimen/sp_size_14"
    />

<TextView
    android:id="@+id/tv_profile_tittle1"
    android:layout_below="@+id/tv_profile_tittle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_size_25"
    android:fontFamily="@string/ID_ROBOTO_LIGHT"
    android:layout_marginLeft="@dimen/dp_size_72"
    android:layout_marginStart="@dimen/dp_size_72"
    android:layerType="software"
    android:textColor="@color/text_color_setting_header"
    android:textSize="@dimen/sp_size_14"
    android:layout_marginBottom="@dimen/dp_size_3"
    />

</RelativeLayout>
