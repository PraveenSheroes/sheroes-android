<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/dp_size_2"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingRight="@dimen/dp_size_1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/dp_size_5"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView
                android:id="@+id/iv_feed_job_icon"
                android:layout_width="@dimen/dp_size_50"
                android:layout_height="@dimen/dp_size_50"
                android:src="@drawable/ic_footer_button_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_dashboard_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                    android:text="Marketing Product Manager Business Developer New"
                    android:textColor="@color/searchbox_hint_text_color"
                    android:textSize="@dimen/sp_size_14"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_dashboard_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:text="Company.com"
                    android:textColor="@color/dashboard_fed_text"
                    android:textSize="@dimen/sp_size_12" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_dashboard_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_20"
                android:background="@drawable/ic_search_proffesion_icon" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_size_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_job_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_job_type"
                android:drawablePadding="@dimen/dp_size_10"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:padding="@dimen/dp_size_5"
                android:text="Work from home | Part Time"
                android:textColor="@color/searchbox_hint_text_color"
                android:textSize="@dimen/sp_size_12" />

            <TextView
                android:id="@+id/tv_job_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_job_name"
                android:drawablePadding="@dimen/dp_size_10"
                android:ellipsize="end"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:lines="1"
                android:padding="@dimen/dp_size_5"
                android:text="@string/IDS_STR_NETWORK_TIME_OUT_DESCRIPTION"
                android:textColor="@color/searchbox_hint_text_color"
                android:textSize="@dimen/sp_size_12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_job_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_job_date_time"
                    android:drawablePadding="@dimen/dp_size_10"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:padding="@dimen/dp_size_5"
                    android:text="Work from home | Part Time"
                    android:textColor="@color/searchbox_hint_text_color"
                    android:textSize="@dimen/sp_size_12" />

                <TextView
                    android:id="@+id/tv_job_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_job_location"
                    android:drawablePadding="@dimen/dp_size_10"
                    android:ellipsize="end"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:lines="1"
                    android:padding="@dimen/dp_size_5"
                    android:text="@string/IDS_STR_NETWORK_TIME_OUT_DESCRIPTION"
                    android:textColor="@color/searchbox_hint_text_color"
                    android:textSize="@dimen/sp_size_12" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/li_user_reactions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:padding="@dimen/dp_size_5">

            <TextView
                android:id="@+id/tv_user_bookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_bookmark_active"
                android:drawablePadding="@dimen/dp_size_50"
                android:padding="@dimen/dp_size_15" />

            <TextView
                android:id="@+id/tv_user_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/dp_size_5"
                android:drawablePadding="@dimen/dp_size_50"
                android:drawableRight="@drawable/ic_menu_dashboard" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>