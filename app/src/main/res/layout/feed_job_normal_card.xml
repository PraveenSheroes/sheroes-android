<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_size_5"
    app:cardElevation="@dimen/dp_size_2">

    <LinearLayout
        android:id="@+id/li_feed_job_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="@dimen/dp_size_16"
            android:orientation="horizontal"
            android:weightSum="1">

            <appliedlife.pvtltd.SHEROES.views.cutomeviews.RoundedImageView
                android:id="@+id/iv_feed_job_icon"
                android:layout_width="@dimen/feed_profile_icon_size"
                android:layout_height="@dimen/feed_profile_icon_size"
                app:riv_corner_radius="@dimen/dp_size_10"
                app:riv_border_width="@dimen/dp_size_0.5"
                android:scaleType="center"
                app:riv_oval="false"
                android:src="@drawable/ic_footer_button_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_size_16"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_feed_job_card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                    android:text="Marketing Product Manager Business Developer New"
                    android:textColor="@color/searchbox_hint_text_color"
                    android:textSize="@dimen/sp_size_15"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_feed_job_group_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:text="Company.com"
                    android:layout_marginTop="@dimen/dp_size_3"
                    android:textColor="@color/dashboard_fed_text"
                    android:textSize="@dimen/sp_size_12" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_feed_job_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_size_5"
                android:background="@drawable/ic_search_proffesion_icon" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_60"
            android:layout_marginRight="@dimen/dp_size_16"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_feed_job_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_job_type"
                android:drawablePadding="@dimen/dp_size_10"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:text="Work from home | Part Time"
                android:textColor="@color/searchbox_hint_text_color"
                android:textSize="@dimen/sp_size_12" />

            <TextView
                android:id="@+id/tv_feed_job_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_16"
                android:drawableLeft="@drawable/ic_job_name"
                android:drawablePadding="@dimen/dp_size_10"
                android:ellipsize="end"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:lines="1"
                android:text="@string/IDS_STR_NETWORK_TIME_OUT_DESCRIPTION"
                android:textColor="@color/searchbox_hint_text_color"
                android:textSize="@dimen/sp_size_12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_16"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_feed_job_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_job_date_time"
                    android:drawablePadding="@dimen/dp_size_10"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:text="31 Jan 2017"
                    android:textColor="@color/searchbox_hint_text_color"
                    android:textSize="@dimen/sp_size_12" />

                <TextView
                    android:id="@+id/tv_feed_job_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_job_location"
                    android:drawablePadding="@dimen/dp_size_10"
                    android:ellipsize="end"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:lines="1"
                    android:layout_marginLeft="@dimen/dp_size_15"
                    android:text="Gurgaon India"
                    android:textColor="@color/searchbox_hint_text_color"
                    android:textSize="@dimen/sp_size_12" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_size_0.5"
            android:layout_marginLeft="@dimen/dp_size_12"
            android:layout_marginRight="@dimen/dp_size_12"
            android:layout_marginTop="@dimen/dp_size_12"
            android:background="@color/search_tab_unselected_text" />
        <LinearLayout
            android:id="@+id/li_feed_job_user_reactions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginLeft="@dimen/dp_size_16"
            android:layout_marginTop="@dimen/dp_size_16"
            android:layout_marginBottom="@dimen/dp_size_12"
            android:layout_marginRight="@dimen/dp_size_16">
            <TextView
                android:id="@+id/tv_feed_job_applied"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:textColor="@color/search_tab_text"
                android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                android:textSize="@dimen/sp_size_14"
                android:text="@string/ID_APPLIED" />
            <TextView
                android:id="@+id/tv_feed_job_user_bookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_bookmark_in_active"
                android:drawablePadding="@dimen/dp_size_15"
                android:paddingTop="@dimen/dp_size_10"
                android:paddingBottom="@dimen/dp_size_10"
                android:paddingRight="@dimen/dp_size_20"/>

            <TextView
                android:id="@+id/tv_feed_job_user_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_size_30"
                android:paddingTop="@dimen/dp_size_10"
                android:paddingBottom="@dimen/dp_size_10"
                android:paddingRight="@dimen/dp_size_10"
                android:drawableRight="@drawable/ic_menu_dashboard" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>