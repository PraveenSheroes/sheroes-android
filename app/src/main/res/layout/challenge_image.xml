<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_feed_challenge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/challenge_post"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginLeft="@dimen/dp_size_20"
        android:layout_marginRight="@dimen/dp_size_20"
        android:layout_marginTop="@dimen/dp_size_90"
        android:orientation="vertical"
        android:layout_gravity="top|center">
        <TextView
            android:id="@+id/tv_just_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/challenge_post"
            android:textSize="@dimen/sp_size_12"
            android:textStyle="italic"
            android:visibility="gone"
            android:layout_gravity="center"
            android:fontFamily="@string/ID_ROBOTO_MEDIUM"
            android:text="@string/ID_JUST"/>
        <TextView
            android:id="@+id/tv_started_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_size_5"
            android:textColor="@color/challenge_post"
            android:textSize="@dimen/sp_size_20"
            android:textStyle="italic|bold"
            android:visibility="gone"
            android:layout_gravity="center"
            android:fontFamily="@string/ID_ROBOTO_MEDIUM"
            android:text="@string/ID_STARTED"/>
        <TextView
            android:id="@+id/tv_challenge_name_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_20"
            android:layout_marginRight="@dimen/dp_size_20"
            android:textColor="@color/challenge_post"
            android:textSize="@dimen/sp_size_20"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/dp_size_5"
            android:textStyle="italic"
            android:fontFamily="@string/ID_ROBOTO_MEDIUM"/>
    </LinearLayout>

</FrameLayout>
