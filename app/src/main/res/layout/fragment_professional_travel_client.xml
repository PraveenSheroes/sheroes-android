<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/r1_add_work_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <include

            layout="@layout/setting_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top" />


    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/add_city_scrool"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/r1_add_work_relative"
        android:background="@color/white"
        android:isScrollContainer="false">

        <LinearLayout
            android:id="@+id/l1_professional_worklike_page"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_travel_heading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/dp_size_35"
                android:text="@string/ID_TRAVEL_LIKE"
                android:textColor="@color/blue"
                android:textSize="@dimen/sp_size_15" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_no"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_circle_inactive"
                    android:drawablePadding="@dimen/dp_size_10"
                    android:padding="@dimen/dp_size_35"
                    android:text="@string/ID_NO"
                    android:textColor="@color/text_color_work_list"
                    android:textSize="@dimen/sp_size_13" />

                <TextView

                    android:id="@+id/tv_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/tv_no"
                    android:drawableLeft="@drawable/ic_circle_inactive"
                    android:drawablePadding="@dimen/dp_size_10"
                    android:padding="@dimen/dp_size_35"
                    android:text="@string/ID_YES"
                    android:textColor="@color/text_color_work_list"
                    android:textSize="@dimen/sp_size_13" />


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_size_35"
                android:text="@string/ID_YES_THEN"
                android:textColor="@color/text_color_work_list"
                android:textSize="@dimen/dp_size_13" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_circle_inactive"
                android:drawablePadding="@dimen/dp_size_5"
                android:paddingLeft="@dimen/dp_size_35"
                android:paddingTop="@dimen/dp_size_15"
                android:text="@string/ID_LOCAL"
                android:textColor="@color/text_color_work_list"
                android:textSize="@dimen/dp_size_13" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_circle_inactive"
                android:drawablePadding="@dimen/dp_size_5"
                android:paddingLeft="@dimen/dp_size_35"
                android:paddingTop="@dimen/dp_size_15"
                android:text="@string/ID_MY_COUNTRY"
                android:textColor="@color/text_color_work_list"
                android:textSize="@dimen/dp_size_13" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_circle_inactive"
                android:drawablePadding="@dimen/dp_size_5"
                android:paddingLeft="@dimen/dp_size_35"
                android:paddingTop="@dimen/dp_size_15"
                android:text="@string/ID_WORDSIDE"
                android:textColor="@color/text_color_work_list"
                android:textSize="@dimen/dp_size_13" />


        </LinearLayout>

    </ScrollView>

    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/bt_save_cities"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/red"
        android:fontFamily="@string/ID_ROBOTO_MEDIUM"
        android:text="@string/ID_SAVE"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_size_13" />


</RelativeLayout>
