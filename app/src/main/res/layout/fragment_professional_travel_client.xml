<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/r1_add_work_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/home_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <include
                layout="@layout/setting_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/add_city_scrool"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_below="@+id/r1_add_work_relative"
        android:isScrollContainer="false">

        <LinearLayout
            android:id="@+id/l1_professional_worklike_page"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:id="@+id/tv_travel_heading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/ID_TRAVEL_LIKE"
            android:textColor="@color/blue"
            android:textSize="@dimen/sp_size_15"
            android:padding="@dimen/dp_size_35"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_no"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/ic_circle_inactive"
                android:drawablePadding="@dimen/dp_size_10"
                android:text="@string/ID_NO"
                android:textColor="@color/text_color_work_list"
                android:textSize="@dimen/sp_size_13"
                android:padding="@dimen/dp_size_35"/>

            <TextView

                android:id="@+id/tv_yes"
                android:layout_toRightOf="@+id/tv_no"
                android:drawableLeft="@drawable/ic_circle_inactive"
                android:drawablePadding="@dimen/dp_size_10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/ID_YES"
                android:textColor="@color/text_color_work_list"
                android:textSize="@dimen/sp_size_13"
                android:padding="@dimen/dp_size_35"
                />


            </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ID_YES_THEN"
            android:paddingLeft="@dimen/dp_size_35"
            android:textSize="@dimen/dp_size_13"
            android:textColor="@color/text_color_work_list"
            />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_circle_inactive"
                android:text="@string/ID_LOCAL"
                android:paddingLeft="@dimen/dp_size_35"
                android:paddingTop="@dimen/dp_size_15"
                android:textSize="@dimen/dp_size_13"
                android:drawablePadding="@dimen/dp_size_5"
                android:textColor="@color/text_color_work_list"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ID_MY_COUNTRY"
                android:paddingLeft="@dimen/dp_size_35"
                android:drawablePadding="@dimen/dp_size_5"
                android:drawableLeft="@drawable/ic_circle_inactive"
                android:paddingTop="@dimen/dp_size_15"
                android:textSize="@dimen/dp_size_13"
                android:textColor="@color/text_color_work_list"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ID_WORDSIDE"
                android:paddingLeft="@dimen/dp_size_35"
                android:paddingTop="@dimen/dp_size_15"
                android:textSize="@dimen/dp_size_13"
                android:drawableLeft="@drawable/ic_circle_inactive"
                android:drawablePadding="@dimen/dp_size_5"
                android:textColor="@color/text_color_work_list"
                />


        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/bt_save_cities"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/ID_SAVE"
        android:background="@color/red"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_size_13"
        android:fontFamily="@string/ID_ROBOTO_MEDIUM"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>
