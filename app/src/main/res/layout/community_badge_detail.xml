<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/ic_image">

        <ImageView
            android:id="@+id/cross"
            android:layout_width="@dimen/dp_size_20"
            android:layout_height="@dimen/dp_size_20"
            android:layout_gravity="right|end"
            android:layout_marginEnd="@dimen/dp_size_12"
            android:layout_marginRight="@dimen/dp_size_12"
            android:layout_marginTop="@dimen/dp_size_12"
            android:src="@drawable/ic_dialog_close_dark" />

        <ImageView
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/dp_size_16"
            android:src="@drawable/crown_icon" />

        <ImageView
            android:id="@+id/user_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_size_10"
            android:layout_marginRight="@dimen/dp_size_10"
            android:paddingEnd="@dimen/dp_size_1"
            android:paddingLeft="@dimen/dp_size_8"
            android:paddingRight="@dimen/dp_size_1"
            android:paddingStart="@dimen/dp_size_8" />

    </FrameLayout>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_container"
        android:layout_marginEnd="@dimen/dp_size_24"
        android:layout_marginLeft="@dimen/dp_size_24"
        android:layout_marginRight="@dimen/dp_size_24"
        android:layout_marginStart="@dimen/dp_size_24"
        android:layout_marginTop="@dimen/dp_size_21"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="8sp"
        android:textColor="#de3c3c3c"
        android:textSize="20sp"
        android:textStyle="normal"
        tools:text="Wealth Creators Badge" />


    <TextView
        android:id="@+id/badge_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/message"
        android:layout_marginEnd="@dimen/dp_size_24"
        android:layout_marginLeft="@dimen/dp_size_24"
        android:layout_marginRight="@dimen/dp_size_24"
        android:layout_marginStart="@dimen/dp_size_24"
        android:layout_marginTop="@dimen/dp_size_8"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="8sp"
        android:textColor="#878787"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="21- 27 Feb 2018
Anupriya was a Super SHEROES in Money Matters" />

    <Button
        android:id="@+id/buttonPanel"
        android:layout_width="@dimen/dp_size_160"
        android:layout_height="@dimen/dp_size_36"
        android:layout_below="@id/badge_desc"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_size_24"
        android:layout_marginTop="@dimen/dp_size_24"
        android:background="@drawable/border_new_feature"
        android:fontFamily="@string/ID_ROBOTO_MEDIUM"
        android:gravity="center"
        android:text="@string/ID_OK"
        android:textColor="@color/white" />
</RelativeLayout>
