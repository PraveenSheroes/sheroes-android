<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/badge_header_height">

        <ImageView
            android:id="@+id/cross"
            android:layout_width="@dimen/dp_size_20"
            android:layout_height="@dimen/dp_size_20"
            android:layout_gravity="right|end"
            android:layout_marginEnd="@dimen/dp_size_12"
            android:layout_marginRight="@dimen/dp_size_12"
            android:layout_marginTop="@dimen/dp_size_12"
            android:src="@drawable/ic_dialog_close_dark" />

        <ImageView
            android:id="@+id/badge_icon"
            android:layout_width="@dimen/badge_icon_size"
            android:layout_height="@dimen/badge_icon_size"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/dp_size_16" />

        <ImageView
            android:id="@+id/user_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|end"
            android:layout_marginEnd="@dimen/dp_size_35"
            android:layout_marginRight="@dimen/dp_size_35"
            android:layout_marginTop="@dimen/dp_size_8"
            android:paddingEnd="@dimen/dp_size_1"
            android:paddingLeft="@dimen/dp_size_8"
            android:paddingRight="@dimen/dp_size_1"
            android:paddingStart="@dimen/dp_size_8"
            android:src="@drawable/vector_badge_dialog_girl" />

    </FrameLayout>

    <TextView
        android:id="@+id/badge_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_container"
        android:layout_marginEnd="@dimen/dp_size_24"
        android:layout_marginLeft="@dimen/dp_size_24"
        android:layout_marginRight="@dimen/dp_size_24"
        android:layout_marginStart="@dimen/dp_size_24"
        android:layout_marginTop="@dimen/dp_size_21"
        android:fontFamily="@string/ID_ROBOTO_MEDIUM"
        android:lineSpacingExtra="@dimen/sp_size_8"
        android:textColor="@color/leader_board_dialog_badge_title"
        android:textSize="@dimen/sp_size_20"
        tools:text="Wealth Creators Badge" />

    <TextView
        android:id="@+id/bade_won_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/badge_title"
        android:layout_marginEnd="@dimen/dp_size_24"
        android:layout_marginLeft="@dimen/dp_size_24"
        android:layout_marginRight="@dimen/dp_size_24"
        android:layout_marginStart="@dimen/dp_size_24"
        android:layout_marginTop="@dimen/dp_size_8"
        android:fontFamily="@string/ID_ROBOTO_BOLD"
        android:lineSpacingExtra="@dimen/sp_size_8"
        android:textColor="@color/light_grey"
        android:textSize="@dimen/sp_size_16"
        tools:text="Won Latest on : 21-29 Febâ€™18" />

    <TextView
        android:id="@+id/badge_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bade_won_date_label"
        android:layout_marginEnd="@dimen/dp_size_24"
        android:layout_marginLeft="@dimen/dp_size_24"
        android:layout_marginRight="@dimen/dp_size_24"
        android:layout_marginStart="@dimen/dp_size_24"
        android:layout_marginTop="@dimen/dp_size_8"
        android:fontFamily="@string/ID_ROBOTO_REGULAR"
        android:lineSpacingExtra="@dimen/sp_size_8"
        android:textColor="@color/leader_board_badge_sub_text"
        android:textSize="@dimen/sp_size_16"
        tools:text="Anupriya was a Super SHEROES in Money Matters" />

    <FrameLayout
        android:id="@+id/button_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/badge_desc">

        <TextView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/ID_ROBOTO_MEDIUM"
            android:gravity="center_horizontal"
            android:letterSpacing="0.04"
            android:padding="@dimen/dp_size_16"
            android:text="@string/ID_SHARE"
            android:textAllCaps="true"
            android:textColor="@color/leader_board_dialog_button"
            android:textSize="@dimen/sp_size_14"
            android:visibility="gone" />


        <TextView
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/ID_ROBOTO_MEDIUM"
            android:gravity="center_horizontal"
            android:letterSpacing="0.04"
            android:padding="@dimen/dp_size_16"
            android:text="@string/ID_OK"
            android:textAllCaps="true"
            android:textColor="@color/leader_board_dialog_button"
            android:textSize="@dimen/sp_size_14"
            android:visibility="gone" />

    </FrameLayout>

    <TextView
        android:id="@+id/show_leaderBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/badge_desc"
        android:layout_toLeftOf="@id/button_container"
        android:layout_toStartOf="@id/button_container"
        android:fontFamily="@string/ID_ROBOTO_MEDIUM"
        android:gravity="center_horizontal"
        android:letterSpacing="0.04"
        android:paddingBottom="@dimen/dp_size_16"
        android:paddingEnd="@dimen/dp_size_8"
        android:paddingRight="@dimen/dp_size_8"
        android:paddingStart="@dimen/dp_size_8"
        android:paddingTop="@dimen/dp_size_16"
        android:text="@string/show_leaderboard"
        android:textColor="@color/leader_board_dialog_button"
        android:textSize="@dimen/sp_size_14"
        android:visibility="gone" />

    <TextView
        android:id="@+id/view_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/badge_desc"
        android:layout_toLeftOf="@id/button_container"
        android:layout_toStartOf="@id/button_container"
        android:fontFamily="@string/ID_ROBOTO_MEDIUM"
        android:gravity="center_horizontal"
        android:letterSpacing="0.04"
        android:paddingBottom="@dimen/dp_size_16"
        android:paddingEnd="@dimen/dp_size_8"
        android:paddingRight="@dimen/dp_size_8"
        android:paddingTop="@dimen/dp_size_16"
        android:text="@string/view_profile"
        android:textAllCaps="true"
        android:textColor="@color/leader_board_dialog_button"
        android:textSize="@dimen/sp_size_14"
        android:visibility="gone" />

</RelativeLayout>
