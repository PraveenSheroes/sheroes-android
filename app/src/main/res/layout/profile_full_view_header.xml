<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="@integer/int_value_for_line_1">

    <appliedlife.pvtltd.SHEROES.views.cutomeviews.RoundedImageView
        android:id="@+id/iv_profile_full_view_icon"
        android:layout_width="@dimen/drawer_profile_icon_size"
        android:layout_height="@dimen/drawer_profile_icon_size"
        android:layout_gravity="center"
        android:scaleType="center"
        android:src="@drawable/ic_footer_button_icon"
        app:riv_border_width="@dimen/dp_size_0.5"
        app:riv_corner_radius="@dimen/dp_size_10"
        app:riv_oval="false" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_size_16"
        android:layout_marginRight="@dimen/dp_size_16"
        android:layout_weight="@integer/int_value_for_line_1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_profile_full_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:text="@string/ID_APP_NAME"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_size_14" />

        <TextView
            android:id="@+id/tv_profile_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_size_10"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:text="@string/ID_APP_NAME"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_size_14" />
          <ProgressBar
              android:id="@+id/pb_profile_full_view"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/dp_size_10"
              style="?android:attr/progressBarStyleHorizontal"
              android:progressDrawable="@drawable/rectangle_join"
              android:progressTint="@color/colorAccent"
              android:progress="40"
              android:secondaryProgress="60"
              android:secondaryProgressTint="@color/blue"
              />
    </LinearLayout>
</LinearLayout>
