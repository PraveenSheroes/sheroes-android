<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant_with_fifty_percent"
    android:weightSum="3">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/white">
        <appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView
            android:id="@+id/iv_onboarding_exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_size_40"
            android:background="@drawable/ic_onboarding_exp"/>
        <TextView
            android:id="@+id/tv_exp_text"
            android:layout_width="@dimen/dp_size_260"
            android:layout_height="@dimen/dp_size_80"
            android:layout_marginTop="@dimen/dp_size_18"
            android:layout_below="@+id/iv_onboarding_exp"
            android:fontFamily="@string/ID_ROBOTO_LIGHT"
            android:lineSpacingExtra="@dimen/dp_size_5"
            android:textColor="@color/blue"
            android:textSize="@dimen/sp_size_25"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:text="@string/ID_EXP_TEXT"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_exp_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_size_50"
            >
        <EditText
            android:id="@+id/et_exp_year"
            android:layout_width="@dimen/dp_size_50"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_size_3"
            android:focusable="false"
            android:textAlignment="center"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:background="@drawable/edit_text_line"
/>
        <DatePicker
            android:id="@+id/date_picker"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:datePickerMode="spinner"
            android:calendarViewShown="false"
            android:visibility="gone"
            android:layout_height="@dimen/dp_size_50" />
        <TextView
            android:id="@+id/tv_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:layout_toRightOf="@+id/et_exp_year"
            android:textAlignment="center"
            android:text="@string/ID_YEARS"/>
        <EditText
            android:id="@+id/et_exp_month"
            android:layout_width="@dimen/dp_size_50"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_5"
            android:paddingBottom="@dimen/dp_size_3"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:focusable="false"
            android:layout_toRightOf="@+id/tv_year"
            android:textAlignment="center"
            android:background="@drawable/edit_text_line"

            />

        <TextView
            android:id="@+id/tv_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/et_exp_month"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:textAlignment="center"
            android:text="@string/ID_MONTHS"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Almost Done"
        android:textColor="@color/white"
        android:layout_centerInParent="true"
        android:textSize="@dimen/sp_size_16"
        android:fontFamily="@string/ID_ROBOTO_LIGHT"
        />
    </RelativeLayout>
</LinearLayout>