<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ProgressBar
            android:id="@+id/pb_chat_progress_bar"
            android:layout_width="@dimen/dp_size_30"
            android:layout_height="@dimen/dp_size_30"
            android:background="@drawable/ripple_button"
            android:backgroundTint="@color/grey2"
            android:indeterminateTint="@color/white"
            android:layout_gravity="top|center"/>

        <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/swipe_view_chat"
            android:layout_width="match_parent"
            android:layout_height="513dp"
            android:layout_above="@+id/bottomtextbtnbar"
            android:background="#ffffff"
            android:paddingBottom="7dp">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_chat_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/bottomtextbtnbar"
                android:divider="@color/fully_transparent"
                android:paddingBottom="9dp"
                android:background="#ffffff"
                android:fitsSystemWindows="true"/>

        </android.support.v4.widget.SwipeRefreshLayout>

    </FrameLayout>
    <RelativeLayout
        android:id="@+id/bottomtextbtnbar"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/round_edittext">

        <EditText
            android:id="@+id/et_question_chat"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:hint=" Type Your Message"
            android:minHeight="50dp"
            android:text=""
            android:lines="2"
            android:minLines="2"
            android:textColorHint="#808080"
            android:textSize="14sp"
            android:maxLines ="20"
            android:maxLength ="2000"
            android:inputType="textMultiLine"
            android:layout_marginTop="3dp"
            android:layout_alignParentLeft="true"
            android:textColor="#000000"
            android:cursorVisible="true"
            android:textCursorDrawable="@drawable/helpline_cursor_color"
            android:layout_marginLeft="12dp"
            android:scrollbars="vertical">
        </EditText>

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_mic_img"
            android:layout_marginTop="3dp"
            android:id="@+id/btn_chat_voice"
            android:layout_marginRight="55dp"
            android:layout_alignParentRight="true"

            android:layout_centerVertical="true" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_send_img"
            android:layout_marginTop="3dp"
            android:id="@+id/btn_chat_send"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true" />

    </RelativeLayout>
</RelativeLayout>