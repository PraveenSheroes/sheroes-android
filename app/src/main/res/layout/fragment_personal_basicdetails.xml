<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/r1_personal_basicdetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


        <include
            layout="@layout/profile_header_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top" />


    </android.support.design.widget.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/r1_personal_basicdetails"
        android:background="@color/white"
        android:fadeScrollbars="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_size_16"
            android:layout_marginRight="@dimen/dp_size_16"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/et_first_name_basic_details"
                android:theme="@style/MyTextInputLayout"
                android:paddingTop="@dimen/dp_size_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:hint="@string/ID_FIRST_NAME_HINT"
                    android:textColor="@color/text_color_contactdetails_page"
                    android:textColorHint="@color/text_color_setting_preference_basicdetails"
                    android:textSize="@dimen/sp_size_13" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/et_last_name_basic_details"
                android:theme="@style/MyTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_size_20">

                <EditText
                    android:id="@+id/et_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:hint="@string/ID_LAST_NAME_HINT"
                    android:textColor="@color/text_color_contactdetails_page"
                    android:textColorHint="@color/text_color_setting_preference_basicdetails"
                    android:textSize="@dimen/sp_size_13" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/tv_mobile_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:hint="@string/ID_CONTACT_NO_HINT"
                android:paddingTop="@dimen/dp_size_30"
                android:textColor="@color/text_color_contactdetails_page"
                android:textColorHint="@color/text_color_setting_preference_basicdetails"
                android:textSize="@dimen/sp_size_13" />

            <TextView
                android:id="@+id/tv_mobile_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:paddingTop="@dimen/dp_size_16"
                android:textColor="@color/text_color_contactdetails_page"
                android:textSize="@dimen/sp_size_13" />


            <TextView
                android:id="@+id/tv_user_email_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:hint="@string/ID_EMAIL_ID_HINT"
                android:paddingTop="@dimen/dp_size_30"
                android:textColor="@color/text_color_contactdetails_page"
                android:textColorHint="@color/text_color_setting_preference_basicdetails"
                android:textSize="@dimen/sp_size_13" />

            <TextView
                android:id="@+id/tv_email_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:paddingTop="@dimen/dp_size_16"
                android:textColor="@color/text_color_contactdetails_page"
                android:textSize="@dimen/sp_size_13" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:paddingTop="@dimen/dp_size_16">


                <ImageView
                    android:id="@+id/iv_infoicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/group"
                    android:padding="@dimen/dp_size_10" />


                <TextView
                    android:id="@+id/tv_link_to_setting_section"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_infoicon"
                    android:paddingLeft="@dimen/dp_size_10"
                    android:text="@string/ID_GOFOR_SETTING_LINK"
                    android:textColor="@color/text_color_setting_preference_basicdetails"
                    android:textSize="@dimen/sp_size_12" />

            </LinearLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/et_currntlocation_basicdetails"
                android:theme="@style/MyTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_size_20">

                <EditText
                    android:id="@+id/et_currnt_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:focusable="false"
                    android:imeOptions="actionUnspecified"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:hint="@string/ID_CURRENT_LOCATION_HINT"
                    android:textColor="@color/text_color_contactdetails_page"
                    android:textColorHint="@color/text_color_setting_preference_basicdetails"
                    android:textSize="@dimen/sp_size_13" />

            </android.support.design.widget.TextInputLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingBottom="@dimen/dp_size_2"
                android:paddingTop="@dimen/dp_size_20">


                <TextView
                    android:id="@+id/tv_relation_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:gravity="center_vertical"
                    android:hint="@string/ID_RELACTIONSHIP_HINT"
                    android:textColor="@color/text_color_contactdetails_page"
                    android:textColorHint="@color/text_color_setting_preference_basicdetails"
                    android:textSize="@dimen/sp_size_13" />

                <Spinner
                    android:id="@+id/spinner_relation_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" />


                <TextView
                    android:layout_width="@dimen/dp_size_150"
                    android:layout_height="@dimen/dp_size_1"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_relation_status"
                    android:layout_marginTop="@dimen/dp_size_10"
                    android:background="@color/line_color_personal" />

            </RelativeLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/et_childno_basicdetails"
                android:theme="@style/MyTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_size_20">

                <EditText
                    android:id="@+id/et_child_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:hint="@string/ID_CHILDREN_HINT"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textColor="@color/text_color_contactdetails_page"
                    android:textColorHint="@color/text_color_setting_preference_basicdetails"
                    android:textSize="@dimen/sp_size_13" />

            </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:weightSum="1"
            android:layout_marginBottom="@dimen/dp_size_50"
            >
            <android.support.design.widget.TextInputLayout
                android:id="@+id/et_dob"
                android:theme="@style/MyTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:id="@+id/etxt_fromdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:focusable="false"
                    android:hint="@string/to_date"

                    android:textColor="@color/text_color_contactdetails_page"
                    android:textColorHint="@color/text_color_setting_preference_basicdetails"
                    android:textSize="@dimen/sp_size_13" />
</android.support.design.widget.TextInputLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


    <Button
        android:id="@+id/btn_personal_basic_details_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/red"
        android:fontFamily="@string/ID_ROBOTO_MEDIUM"
        android:gravity="center"
        android:text="@string/ID_SAVE"
        android:textColor="@color/white" />

    <ProgressBar
        android:id="@+id/pb_profile_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>
