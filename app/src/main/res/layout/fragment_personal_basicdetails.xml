<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/r1_personal_basicdetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/home_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_size_65"

            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <include
                layout="@layout/setting_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/r1_personal_basicdetails"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dp_size_13"
        android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/et_first_name_basic_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:hint="@string/ID_FIRST_NAME_HINT"
                    android:textColorHint="@color/text_color_setting_preference_basicdetails"
                    android:textColor="@color/text_color_contactdetails_page"
                    android:focusableInTouchMode="true"
                    android:textSize="@dimen/sp_size_13" />

            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:id="@+id/et_last_name_basic_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:hint="@string/ID_LAST_NAME_HINT"
                    android:textColorHint="@color/text_color_setting_preference_basicdetails"
                    android:textColor="@color/text_color_contactdetails_page"
                    android:focusableInTouchMode="true"
                    android:textSize="@dimen/sp_size_13" />

            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:id="@+id/et_last_contactno_basicdetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:hint="@string/ID_CONTACT_NO_HINT"
                    android:inputType="number"
                    android:textColorHint="@color/text_color_setting_preference_basicdetails"
                    android:textColor="@color/text_color_contactdetails_page"
                    android:focusableInTouchMode="true"
                    android:textSize="@dimen/sp_size_13" />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/et_emailid_basicdetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:hint="@string/ID_EMAIL_ID_HINT"
                    android:textColorHint="@color/text_color_setting_preference_basicdetails"
                    android:textColor="@color/text_color_contactdetails_page"
                    android:focusableInTouchMode="true"
                    android:textSize="@dimen/sp_size_13" />

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_infoicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_size_10"
                    android:background="@drawable/ic_heart_active"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_size_10"
                    android:layout_toRightOf="@+id/iv_infoicon"
                    android:textSize="@dimen/sp_size_12"
                     android:text="@string/ID_GOFOR_SETTING_LINK"
                    android:textColor="@color/line_color_personal" />

            </LinearLayout>




            <android.support.design.widget.TextInputLayout
                android:id="@+id/et_currntlocation_basicdetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:hint="@string/ID_CURRENT_LOCATION_HINT"
                    android:textColorHint="@color/text_color_setting_preference_basicdetails"
                    android:textColor="@color/text_color_contactdetails_page"
                    android:focusableInTouchMode="true"
                    android:textSize="@dimen/sp_size_13" />

            </android.support.design.widget.TextInputLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">


                    <TextView
                        android:id="@+id/tv_relation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/ID_ROBOTO_REGULAR"
                        android:hint="@string/ID_RELACTIONSHIP_HINT"
                        android:gravity="center_vertical"
                        android:textColorHint="@color/text_color_setting_preference_basicdetails"
                        android:textColor="@color/text_color_contactdetails_page"
                        android:focusableInTouchMode="true"
                        android:textSize="@dimen/sp_size_13" />

                <Spinner
                    android:id="@+id/spinner_educationdetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />


                <TextView
                    android:layout_width="100dp"
                    android:layout_height="@dimen/dp_size_1"
                    android:layout_marginTop="@dimen/dp_size_10"
                    android:background="@color/line_color_personal"
                    android:layout_below="@+id/tv_relation"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/et_childno_basicdetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:hint="@string/ID_CHILDREN_HINT"
                    android:inputType="number"
                    android:textColorHint="@color/text_color_setting_preference_basicdetails"
                    android:textColor="@color/text_color_contactdetails_page"
                    android:focusableInTouchMode="true"
                    android:textSize="@dimen/sp_size_13" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

</ScrollView>




    <Button
        android:id="@+id/preferences_deactiveaccount_button"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ID_SAVE"
        android:textColor="@color/white"
        android:fontFamily="@string/ID_ROBOTO_MEDIUM"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>
