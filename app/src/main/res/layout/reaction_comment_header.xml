<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_size_12"
        android:weightSum="@integer/int_value_for_line_1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_user_comment_header_text"
            android:layout_width="0dp"
            android:layout_weight="@integer/int_value_for_line_1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_30"
            android:layout_gravity="center"
            android:fontFamily="@string/ID_ROBOTO_LIGHT"
            android:text="@string/ID_REPLIES"
            android:textColor="@color/searchbox_hint_text_color"
            android:textSize="@dimen/sp_size_24" />

        <TextView
            android:id="@+id/tv_user_comment_close"
            android:layout_width="@dimen/dp_size_50"
            android:layout_height="@dimen/dp_size_50"
            android:layout_gravity="center"
            android:paddingRight="@dimen/dp_size_15"
            android:drawableRight="@drawable/ic_close" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_1"
        android:layout_marginTop="@dimen/dp_size_8"
        android:background="@color/search_tab_unselected_text" />
    <FrameLayout
        android:id="@+id/fl_comment_reaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dp_size_20"
        android:layout_marginRight="@dimen/dp_size_20"
        android:layout_marginLeft="@dimen/dp_size_15">

        <TextView
            android:id="@+id/tv_reaction_type1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_emoji_xo_xo" />

        <TextView
            android:id="@+id/tv_reaction_type2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_emoji2_with_you"
            android:layout_marginLeft="@dimen/dp_size_12"/>

        <TextView
            android:id="@+id/tv_total_replies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:drawableRight="@drawable/ic_spinner_icon"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:gravity="right"
            android:rotation="@integer/int_value_270"
            android:textColor="@color/feed_article_comment"
            android:textSize="@dimen/sp_size_11" />

        <TextView
            android:id="@+id/tv_reaction_type3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_25"
            android:drawableLeft="@drawable/ic_emoji3_whistel" />

        <TextView
            android:id="@+id/tv_reaction_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_size_74"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:text="@string/ID_REACTION"
            android:layout_gravity="center"
            android:textColor="@color/feed_article_comment"
            android:textSize="@dimen/sp_size_11" />
    </FrameLayout>

    <View
        android:id="@+id/view_line_for_reaction"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_1"
        android:layout_marginTop="@dimen/dp_size_20"
        android:background="@color/search_tab_unselected_text" />
</LinearLayout>
