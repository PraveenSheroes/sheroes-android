<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:vernacular="http://schemas.android.com/apk/res-auto"
    android:id="@+id/faqs_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_size_minus_5"
    android:layout_marginRight="@dimen/dp_size_minus_5"
    android:layout_marginTop="@dimen/dp_size_minus_7"
    android:orientation="vertical"
    app:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="@color/white_color"
    card_view:cardElevation="@dimen/dp_size_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/tab_faq_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_size_28"
                android:clickable="true"
                android:orientation="horizontal">

                <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
                    android:id="@+id/tv_faqs_question"
                    style="@style/TextView14spRegular"
                    android:layout_width="@dimen/dp_size_270"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_size_16"
                    android:layout_marginTop="@dimen/dp_size_28"
                    android:textColor="@color/faq_question_color"
                    android:textStyle="bold"
                    vernacular:customTextFontFamily="@string/regular_font" />

                <ImageView
                    android:id="@+id/id_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_size_28"
                    android:layout_marginTop="@dimen/dp_size_30"
                    android:src="@drawable/vector_spinner_icon"
                    android:tint="@color/faq_spinner_color" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_faq_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_size_28"
                android:layout_marginLeft="@dimen/dp_size_16"
                android:layout_marginRight="@dimen/dp_size_16"
                android:animateLayoutChanges="true"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_size_1"
                    android:background="@color/red" />

                <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
                    android:id="@+id/tv_faqs_answer"
                    style="@style/TextView14spRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_size_28"
                    android:textColor="@color/faq_answer_color"
                    vernacular:customTextFontFamily="@string/regular_font" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>