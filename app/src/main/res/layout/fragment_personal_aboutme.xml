<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/al_community_open_about"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <appliedlife.pvtltd.SHEROES.views.cutomeviews.CustomeCollapsableToolBar.CustomCollapsingToolbarLayout
                android:id="@+id/cl_profile_about_me"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="@color/colorAccent"
                android:layout_gravity="center"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_community_cover_img"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_size_200"
                        android:background="@drawable/profile_collapsible_background_color"
                        android:fitsSystemWindows="true"
                        android:scaleType="centerCrop"
                        app:layout_collapseMode="parallax" />

                    <appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView
                        android:id="@+id/iv_profile_image"
                        android:layout_width="@dimen/dp_size_62"
                        android:layout_height="@dimen/dp_size_65"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:background="@drawable/ic_about_me" />

                    <appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView
                        android:id="@+id/iv_user_image_set"
                        android:layout_width="@dimen/dp_size_62"
                        android:layout_height="@dimen/dp_size_65"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:background="@color/white"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_about_me_tittle1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_profile_image"
                        android:layout_centerInParent="true"
                        android:fontFamily="@string/ID_ROBOTO_LIGHT"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:paddingTop="@dimen/dp_size_16"
                        android:text="@string/ID_ABOUT_ME"
                        android:textSize="@dimen/dp_size_24" />


                </RelativeLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">  

                        <TextView
                            android:id="@+id/tv_about_me_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_size_16"
                            android:drawableLeft="@drawable/ic_back_white"
                            android:fontFamily="@string/ID_ROBOTO_LIGHT" />


                        <TextView
                            android:id="@+id/tv_about_me_tittle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:padding="@dimen/dp_size_16"
                            android:textAllCaps="true"
                            android:text="@string/ID_ABOUT_ME" />



                    </RelativeLayout>

                </android.support.v7.widget.Toolbar>

            </appliedlife.pvtltd.SHEROES.views.cutomeviews.CustomeCollapsableToolBar.CustomCollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:isScrollContainer="false"
            android:background="@color/white"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <RelativeLayout
                android:id="@+id/id_relative1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"


                android:paddingLeft="@dimen/dp_size_25"
                android:paddingRight="@dimen/dp_size_25"
                android:paddingTop="@dimen/dp_size_25">


                <TextView
                    android:id="@+id/witten_tittle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:text="@string/ID_ABOUT_WRITE_TITTLE"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/dp_size_14" />

                <EditText
                    android:id="@+id/et_write_about_me"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/witten_tittle"
                    android:background="@drawable/edit_text_create_community_style"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:hint="@string/ID_WRITE_REASION"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textMultiLine"
                    android:lineSpacingExtra="@dimen/dp_size_4"
                    android:maxLength="4000"
                    android:paddingTop="@dimen/dp_size_50"
                    android:scrollbars="vertical"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text_color_setting_preference_basicdetails"
                    android:textSize="@dimen/sp_size_13" />

                <ImageView
                    android:id="@+id/iv_write_about_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_size_1"
                    android:layout_below="@+id/et_write_about_me"
                    android:background="@color/grey2" />

                <TextView
                    android:id="@+id/charecter_cout_number"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/iv_write_about_line"
                    android:paddingLeft="@dimen/dp_size_8"
                    android:text=""
                    android:textColor="@color/count_char_text_color"
                    android:visibility="gone" />

            </RelativeLayout>

        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>



    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/btn_save_about_me_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:background="@color/grey2"
        android:enabled="false"
        android:fontFamily="@string/ID_ROBOTO_MEDIUM"
        android:gravity="center"
        android:text="@string/ID_SAVE"
        android:textColor="@color/white"


        />



</RelativeLayout>