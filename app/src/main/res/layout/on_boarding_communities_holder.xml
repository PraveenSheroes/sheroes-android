<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_size_8"
    android:layout_marginLeft="@dimen/dp_size_4"
    android:layout_marginRight="@dimen/dp_size_4"
    android:elevation="@dimen/dp_size_10"
    app:cardElevation="@dimen/dp_size_10"
    app:cardCornerRadius="@dimen/dp_size_6"
    app:layout_anchorGravity="bottom|center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView
            android:id="@+id/iv_boarding_circle_icon"
            android:layout_width="@dimen/communities_icon"
            android:layout_height="@dimen/communities_icon"
            android:layout_gravity="center"
            android:src="@drawable/ic_community_selected_icon"
            android:layout_marginTop="@dimen/dp_size_16" />

        <TextView
            android:id="@+id/tv_boarding_communities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_size_16"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_size_32"
            android:layout_marginRight="@dimen/dp_size_32"
            android:ellipsize="end"
            android:layout_marginBottom="@dimen/dp_size_18"
            android:lines="@integer/int_value_for_line_2"
            android:fontFamily="@string/ID_ROBOTO_MEDIUM"
            android:textColor="@color/comment_text"
            android:textSize="@dimen/sp_size_16" />

        <TextView
            android:id="@+id/tv_boarding_communities_join"
            android:layout_width="@dimen/dp_size_80"
            android:layout_height="@dimen/dp_size_30"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="@dimen/dp_size_16"
            android:background="@drawable/rectangle_feed_commnity_join"
            android:fontFamily="@string/ID_ROBOTO_MEDIUM"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_size_32"
            android:layout_marginRight="@dimen/dp_size_32"
            android:text="@string/ID_JOIN"
            android:textAllCaps="true"
            android:textColor="@color/footer_icon_text"
            android:textSize="@dimen/sp_size_14" />

    </LinearLayout>
</android.support.v7.widget.CardView>