<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_size_5"
    app:cardElevation="@dimen/dp_size_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_html_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_16"
            android:layout_marginRight="@dimen/dp_size_12"
            android:layout_marginTop="@dimen/dp_size_12"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:text="Tags: Health,Education"
            android:textColor="@color/suggested_card_text"
            android:textSize="@dimen/sp_size_12" />

        <TextView
            android:id="@+id/tv_article_detail_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_size_16"
            android:layout_marginRight="@dimen/dp_size_12"
            android:layout_marginTop="@dimen/dp_size_12"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:gravity="center"
            android:text="Tags: Health,Education"
            android:textColor="@color/suggested_card_text"
            android:textSize="@dimen/sp_size_12" />

        <TextView
            android:id="@+id/tv_article_detail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_size_16"
            android:layout_marginRight="@dimen/dp_size_12"
            android:layout_marginTop="@dimen/dp_size_12"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:gravity="center"
            android:text="5 hr ago"
            android:textColor="@color/text_color_setting_preference_basicdetails"
            android:textSize="@dimen/sp_size_12" />

        <appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView
            android:id="@+id/iv_article_detail_card_circle_icon"
            android:layout_width="@dimen/feed_profile_icon_size"
            android:layout_height="@dimen/feed_profile_icon_size"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_size_16"
            android:layout_marginRight="@dimen/dp_size_12"
            android:layout_marginTop="@dimen/dp_size_20"
            android:src="@drawable/ic_footer_button_icon" />

        <TextView
            android:id="@+id/tv_article_detail_icon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_size_16"
            android:layout_marginRight="@dimen/dp_size_12"
            android:layout_marginTop="@dimen/dp_size_10"
            android:fontFamily="@string/ID_ROBOTO_MEDIUM"
            android:gravity="center"
            android:text="@string/ID_APP_NAME"
            android:textColor="@color/com_post_share_textcolor"
            android:textSize="@dimen/sp_size_12" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_size_13">

            <TextView
                android:id="@+id/tv_article_detail_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_size_16"
                android:layout_marginRight="@dimen/dp_size_12"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:gravity="center"
                android:text="@string/ID_APP_NAME"
                android:textColor="@color/teg_text_color"
                android:textSize="@dimen/sp_size_12" />

            <include
                android:id="@+id/li_article_detail_emoji_pop_up"
                layout="@layout/emoji_reaction_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:visibility="gone"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/li_article_detail_user_reactions"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_size_35"
            android:layout_marginLeft="@dimen/dp_size_16"
            android:layout_marginRight="@dimen/dp_size_12"
            android:layout_marginTop="@dimen/dp_size_20"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_article_detail_user_reaction"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".28"
                android:drawableLeft="@drawable/ic_heart_in_active"
                android:drawablePadding="@dimen/dp_size_minus_20"
                android:gravity="center"
                android:text="@string/ID_LOVE"
                android:textColor="@color/emoji_text" />

            <TextView
                android:id="@+id/tv_article_detail_user_comment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".36"
                android:drawableLeft="@drawable/ic_comment_icon" />

            <TextView
                android:id="@+id/tv_article_detail_user_bookmark"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".1"
                android:drawableRight="@drawable/ic_bookmark_active"
                android:visibility="invisible" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_size_0.5"
            android:layout_marginLeft="@dimen/dp_size_12"
            android:layout_marginRight="@dimen/dp_size_12"
            android:layout_marginTop="@dimen/dp_size_12"
            android:background="@color/search_tab_unselected_text" />

        <FrameLayout
            android:id="@+id/fl_article_detail_no_reaction_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/dp_size_12"
            android:layout_marginRight="@dimen/dp_size_12"
            android:layout_marginTop="@dimen/dp_size_15">

            <TextView
                android:id="@+id/tv_article_detail_reaction1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_emoji_xo_xo" />

            <TextView
                android:id="@+id/tv_article_detail_reaction2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_12"
                android:drawableLeft="@drawable/ic_emoji2_with_you" />

            <TextView
                android:id="@+id/tv_article_detail_reaction3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_25"
                android:drawableLeft="@drawable/ic_emoji3_whistel" />

            <TextView
                android:id="@+id/tv_article_detail_total_reactions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp_size_84"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:text="53 reactions"
                android:textColor="@color/feed_article_comment"
                android:textSize="@dimen/sp_size_11" />

            <TextView
                android:id="@+id/tv_article_detail_total_replies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/dp_size_15"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:gravity="right"
                android:text="8 replies"
                android:textColor="@color/feed_article_comment"
                android:textSize="@dimen/sp_size_11" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/li_article_detail_user_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_12"
            android:layout_marginRight="@dimen/dp_size_12"
            android:layout_marginTop="@dimen/dp_size_20"
            android:orientation="horizontal"
            android:weightSum="1">

            <appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView
                android:id="@+id/iv_article_detail_user_pic"
                android:layout_width="@dimen/dp_size_27"
                android:layout_height="@dimen/dp_size_28"
                android:src="@drawable/ic_footer_button_icon" />


            <TextView
                android:id="@+id/tv_article_detail_user_comment_post"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_size_12"
                android:layout_weight="@integer/int_value_for_line_1"
                android:lines="@integer/int_value_for_line_2"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:lineSpacingExtra="@dimen/dp_size_3"
                android:text="@string/IDS_STR_NETWORK_TIME_OUT_DESCRIPTION"
                android:textColor="@color/feed_conversation"
                android:textSize="@dimen/sp_size_12" />

            <TextView
                android:id="@+id/tv_article_detail_user_comment_post_menu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:drawableRight="@drawable/ic_menu_dashboard"
                android:paddingLeft="@dimen/dp_size_10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/li_article_detail_user_comments_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_12"
            android:layout_marginRight="@dimen/dp_size_12"
            android:layout_marginTop="@dimen/dp_size_20"
            android:orientation="horizontal"
            android:weightSum="1">

            <appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView
                android:id="@+id/iv_article_detail_user_pic_second"
                android:layout_width="@dimen/dp_size_27"
                android:layout_height="@dimen/dp_size_28"
                android:src="@drawable/ic_footer_button_icon" />


            <TextView
                android:id="@+id/tv_article_detail_user_comment_post_second"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_size_12"
                android:layout_weight="@integer/int_value_for_line_1"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:lines="@integer/int_value_for_line_2"
                android:lineSpacingExtra="@dimen/dp_size_3"
                android:text="@string/IDS_STR_NETWORK_TIME_OUT_DESCRIPTION"
                android:textColor="@color/feed_conversation"
                android:textSize="@dimen/sp_size_12" />

            <TextView
                android:id="@+id/tv_article_detail_user_comment_post_menu_second"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:drawableRight="@drawable/ic_menu_dashboard"
                android:paddingLeft="@dimen/dp_size_10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/li_article_detail_user_comments_third"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_12"
            android:layout_marginRight="@dimen/dp_size_12"
            android:layout_marginTop="@dimen/dp_size_20"
            android:orientation="horizontal"
            android:weightSum="1">

            <appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView
                android:id="@+id/iv_article_detail_user_pic_third"
                android:layout_width="@dimen/dp_size_27"
                android:layout_height="@dimen/dp_size_28"
                android:src="@drawable/ic_footer_button_icon" />


            <TextView
                android:id="@+id/tv_article_detail_user_comment_post_third"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_size_12"
                android:layout_weight="@integer/int_value_for_line_1"
                android:lines="@integer/int_value_for_line_2"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:lineSpacingExtra="@dimen/dp_size_3"
                android:text="@string/IDS_STR_NETWORK_TIME_OUT_DESCRIPTION"
                android:textColor="@color/feed_conversation"
                android:textSize="@dimen/sp_size_12" />


            <TextView
                android:id="@+id/tv_article_detail_user_comment_post_menu_third"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:drawableRight="@drawable/ic_menu_dashboard"
                android:paddingLeft="@dimen/dp_size_10" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_article_detail_view_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:gravity="center"
            android:padding="@dimen/dp_size_8"
            android:text="@string/ID_VIEW_MORE"
            android:textColor="@color/teg_text_color"
            android:textSize="@dimen/dp_size_12" />

        <LinearLayout
            android:id="@+id/li_article_detail_join_conversation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_size_12"
            android:background="@drawable/rectangle_comment_background"
            android:orientation="horizontal"
            android:weightSum="1">

            <appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView
                android:id="@+id/iv_article_detail_register_user_pic"
                android:layout_width="@dimen/dp_size_27"
                android:layout_height="@dimen/dp_size_28"
                android:layout_margin="@dimen/dp_size_8"
                android:src="@drawable/ic_footer_button_icon" />

            <TextView
                android:id="@+id/tv_article_detail_register_user_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_size_10"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:text="@string/ID_JOIN_CONVERSATION"
                android:textColor="@color/feed_conversation"
                android:textSize="@dimen/sp_size_12" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>