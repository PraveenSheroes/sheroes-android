<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:vernacular="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white">

        <TextView
            android:id="@+id/iv_image_crop_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="left|center"
            android:drawableRight="@drawable/vector_back_arrow"
            android:onClick="onImageCropBackClick"
            android:padding="15dp" />

        <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
            android:id="@+id/tv_crop_image"
            style="@style/TextView16spMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center|right"
            android:gravity="right"
            android:onClick="onSelectImageClick"
            android:padding="15dp"
            android:text="@string/ID_OK"
            android:textAllCaps="true"
            android:textColor="@color/toolbar_title_text"
            vernacular:customTextFontFamily="@string/medium_font" />
    </RelativeLayout>

    <appliedlife.pvtltd.SHEROES.imageops.CropImageView
        android:id="@+id/cropImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
