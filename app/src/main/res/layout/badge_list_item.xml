<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_size_72"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/badge_icon"
        android:layout_width="@dimen/dp_size_36"
        android:layout_height="@dimen/dp_size_36"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/dp_size_18"
        android:layout_marginStart="@dimen/dp_size_18"
        android:layout_marginTop="@dimen/dp_size_18"
        android:src="@drawable/crown_icon" />

    <ImageView
        android:id="@+id/earned_badge_count"
        android:layout_width="@dimen/dp_size_30"
        android:layout_height="@dimen/dp_size_30"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/dp_size_24"
        android:layout_marginRight="@dimen/dp_size_24"
        android:layout_marginTop="@dimen/dp_size_21"
        android:src="@drawable/crown_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_size_16"
        android:layout_marginStart="@dimen/dp_size_16"
        android:layout_toEndOf="@id/badge_icon"
        android:layout_toLeftOf="@id/earned_badge_count"
        android:layout_toRightOf="@id/badge_icon"
        android:layout_toStartOf="@id/earned_badge_count"
        android:orientation="vertical">

        <TextView
            android:id="@+id/badge_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_size_16"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="8sp"
            android:textColor="#3c3c3c"
            android:textSize="16sp"
            android:textStyle="normal"
            android:text="Magic Pen Badge" />

        <TextView
            android:id="@+id/bade_won_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_size_3"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="6sp"
            android:textColor="#878787"
            android:textSize="14sp"
            android:textStyle="normal"
            android:text="Won this week" />

    </LinearLayout>
</RelativeLayout>