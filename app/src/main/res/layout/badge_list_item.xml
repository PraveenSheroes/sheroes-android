<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/badge_list_height"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/badge_icon"
        android:layout_width="@dimen/badge_list_icon"
        android:layout_height="@dimen/badge_list_icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/badge_closet_icon_margin"
        android:layout_marginStart="@dimen/badge_closet_icon_margin"
        android:layout_marginTop="@dimen/badge_closet_icon_margin" />

    <TextView
        android:id="@+id/earned_badge_count"
        android:layout_width="@dimen/badge_counter_icon"
        android:layout_height="@dimen/badge_counter_icon"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/badge_closet_counter_text"
        android:fontFamily="@string/ID_ROBOTO_BOLD"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginEnd="@dimen/badge_closet_count_margin_right"
        android:layout_marginRight="@dimen/badge_closet_count_margin_right"
        android:textColor="@color/earned_badge_count"
        android:layout_marginTop="@dimen/badge_closet_count_margin_top"
        tools:background="@drawable/vector_active_badge_blank" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/badge_closet_margin"
        android:layout_marginStart="@dimen/badge_closet_margin"
        android:layout_toEndOf="@id/badge_icon"
        android:layout_toLeftOf="@id/earned_badge_count"
        android:layout_toRightOf="@id/badge_icon"
        android:layout_toStartOf="@id/earned_badge_count"
        android:orientation="vertical">

        <TextView
            android:id="@+id/badge_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/badge_closet_title_margin"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:lineSpacingExtra="@dimen/badge_closet_title_line_space"
            android:textColor="@color/badge_text"
            android:textSize="@dimen/badge_closet_title_text"
            tools:text="Magic Pen Badge" />

        <TextView
            android:id="@+id/bade_won_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/badge_closet_won_date_margin_top"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:lineSpacingExtra="@dimen/badge_closet_won_date_line_space"
            android:textColor="@color/leader_board_badge_sub_text"
            android:textSize="@dimen/badge_closet_won_date"
            tools:text="Won this week" />

    </LinearLayout>
</RelativeLayout>