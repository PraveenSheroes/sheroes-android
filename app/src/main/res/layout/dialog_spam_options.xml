<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:minWidth="312dp"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_size_16"
    android:paddingEnd="@dimen/dp_size_16"
    android:paddingLeft="@dimen/dp_size_16"
    android:paddingRight="@dimen/dp_size_16"
    android:paddingStart="@dimen/dp_size_16">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_size_16"
        android:fontFamily="@string/ID_ROBOTO_MEDIUM"
        android:lineSpacingExtra="9sp"
        android:text="Select a reason"
        android:textColor="#3c3c3c"
        android:textSize="14sp"
        android:textStyle="normal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_size_16"
        android:fontFamily="@string/ID_ROBOTO_REGULAR"
        android:lineSpacingExtra="9sp"
        android:text="Why is it inappropriate?"
        android:textColor="#3c3c3c"
        android:textSize="14sp"
        android:textStyle="normal" />

    <RadioGroup
        android:id="@+id/radios"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="true"
            android:drawableEnd="@android:drawable/btn_radio"
            android:drawablePadding="30dp"
            android:drawableRight="@android:drawable/btn_radio"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="This post is a spam"
            android:textColor="#878787"
            android:textSize="14sp"
            android:textStyle="normal" />

        <RadioButton
            android:id="@+id/second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableEnd="@android:drawable/btn_radio"
            android:drawablePadding="30dp"
            android:drawableRight="@android:drawable/btn_radio"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="This post has been done by a man"
            android:textColor="#878787"
            android:textSize="14sp"
            android:textStyle="normal" />

        <RadioButton
            android:id="@+id/third"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableEnd="@android:drawable/btn_radio"
            android:drawablePadding="30dp"
            android:drawableRight="@android:drawable/btn_radio"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="This post contains promotional content"
            android:textColor="#878787"
            android:textSize="14sp"
            android:textStyle="normal" />


        <RadioButton
            android:id="@+id/fourth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableEnd="@android:drawable/btn_radio"
            android:drawablePadding="30dp"
            android:drawableRight="@android:drawable/btn_radio"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="This post contains fake/scammy content/news"
            android:textColor="#878787"
            android:textSize="14sp"
            android:textStyle="normal" />

        <RadioButton
            android:id="@+id/other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableEnd="@android:drawable/btn_radio"
            android:drawablePadding="30dp"
            android:drawableRight="@android:drawable/btn_radio"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="Others"
            android:textColor="#878787"
            android:textSize="14sp"
            android:textStyle="normal" />
    </RadioGroup>

    <EditText
        android:id="@+id/edit_text_reason"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_100"
        android:gravity="top|left"
        android:inputType="textMultiLine"
        android:scrollHorizontally="false"
        android:visibility="gone" />

    <Button
        android:id="@+id/submit"
        android:layout_width="180dp"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/dp_size_24"
        android:background="@color/red"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:text="submit"
        android:textAllCaps="true"
        android:textColor="@color/white" />

</LinearLayout>
