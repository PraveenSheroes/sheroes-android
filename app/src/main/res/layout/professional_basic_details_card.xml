<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_size_10"
    android:layout_marginTop="@dimen/dp_size_10"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_size_16">

            <TextView
                android:id="@+id/tv_profile_basic_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:text="@string/ID_BASICDETAILS"
                android:textAllCaps="true"
                android:textColor="@color/dashboard_fed_text"
                android:textSize="@dimen/sp_size_13" />

            <TextView
                android:id="@+id/tv_professional_edit_basic_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/ic_edit_icon" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_current_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:paddingBottom="@dimen/dp_size_16"
                    android:paddingLeft="@dimen/dp_size_16"
                    android:paddingStart="@dimen/dp_size_16"
                    android:paddingTop="@dimen/dp_size_16"
                    android:text="@string/ID_STATUS"
                    android:textColor="@color/dashboard_fed_text"
                    android:textSize="@dimen/sp_size_13" />


                <TextView
                    android:id="@+id/tv_current_status_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:padding="@dimen/dp_size_16"
                    android:text=""
                    android:textColor="@color/searchbox_hint_text_color"
                    android:textSize="@dimen/sp_size_13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">


                <TextView
                    android:id="@+id/tv_sector"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:paddingBottom="@dimen/dp_size_16"
                    android:paddingLeft="@dimen/dp_size_16"
                    android:paddingStart="@dimen/dp_size_16"
                    android:paddingTop="@dimen/dp_size_16"
                    android:text="@string/ID_SECTOR"
                    android:textColor="@color/dashboard_fed_text"
                    android:textSize="@dimen/sp_size_13" />


                <TextView
                    android:id="@+id/tv_sector_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:ellipsize="end"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:maxLines="1"
                    android:padding="@dimen/dp_size_16"
                    android:text=""
                    android:textColor="@color/searchbox_hint_text_color"
                    android:textSize="@dimen/sp_size_13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_total_work_experience"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:paddingBottom="@dimen/dp_size_16"
                    android:paddingLeft="@dimen/dp_size_16"
                    android:paddingStart="@dimen/dp_size_16"
                    android:paddingTop="@dimen/dp_size_16"
                    android:text="@string/ID_TOTAL_WORK_EXPERIENCE"
                    android:textColor="@color/dashboard_fed_text"
                    android:textSize="@dimen/sp_size_13" />


                <TextView
                    android:id="@+id/tv_tot_exp_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:ellipsize="end"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:maxLines="1"
                    android:padding="@dimen/dp_size_16"
                    android:text=""
                    android:textColor="@color/searchbox_hint_text_color"
                    android:textSize="@dimen/sp_size_13" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_language"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:paddingBottom="@dimen/dp_size_16"
                    android:paddingLeft="@dimen/dp_size_16"
                    android:paddingStart="@dimen/dp_size_16"
                    android:visibility="gone"
                    android:paddingTop="@dimen/dp_size_16"
                    android:text="@string/language"
                    android:textColor="@color/dashboard_fed_text"
                    android:textSize="@dimen/sp_size_13" />


                <TextView
                    android:id="@+id/tv_tot_language_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:ellipsize="end"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:maxLines="1"
                    android:padding="@dimen/dp_size_16"
                    android:visibility="gone"
                    android:text=""
                    android:textColor="@color/searchbox_hint_text_color"
                    android:textSize="@dimen/sp_size_13" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>