<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_size_8"
    android:background="@color/white">

    <FrameLayout
        android:id="@+id/icon_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/dp_size_28"
            android:layout_marginStart="@dimen/dp_size_28"
            android:src="@drawable/circular_background" />

        <ImageView
            android:id="@+id/trophy_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_community_badge" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/winner_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_size_10"
        android:layout_marginStart="@dimen/dp_size_10"
        android:layout_toEndOf="@id/icon_container"
        android:layout_toRightOf="@id/icon_container"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/ID_ROBOTO_MEDIUM"
            android:lineSpacingExtra="2sp"
            android:text="Champa Roy"
            android:textColor="@color/gray_light"
            android:textSize="@dimen/sp_size_14" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:text="158 Posts · 168 Likes · 140 Comments"
            android:textColor="@color/gray_light"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>