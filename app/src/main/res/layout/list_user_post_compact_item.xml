<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_post_compact_card"
    android:layout_width="300dp"
    android:layout_height="250dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/author_image_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp">

            <appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView
                android:id="@+id/author_image"
                android:layout_width="@dimen/feed_profile_icon_size"
                android:layout_height="@dimen/feed_profile_icon_size" />

            <ImageView
                android:id="@+id/author_verified_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:background="@drawable/ic_verified"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:id="@+id/post_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@id/author_image_container"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            tools:text="Yashmita Singh posted inHealth Tips" />

        <TextView
            android:id="@+id/post_relative_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_toRightOf="@id/author_image_container"
            android:layout_below="@id/post_title"
            android:layout_marginLeft="8dp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="#90949c"
            tools:text="25 min ago" />

        <TextView
            android:id="@+id/post_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:layout_below="@id/post_relative_time"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="#3c3c3c"
            android:lineSpacingExtra="6sp"
            tools:text="I love the way I smile......In fact, I love my smile most.....I am a pretty girlâ€¦View More" />
        <RelativeLayout
            android:id="@+id/middle_content"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/post_description">
        <LinearLayout
            android:id="@+id/image_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:src="@color/colorPrimaryDark"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@color/email"
                android:layout_weight=".5"/>
        </LinearLayout>
        
        <RelativeLayout
            android:id="@+id/link_detail_container"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <FrameLayout
                android:id="@+id/link_image_container"
                android:layout_width="100dp"
                android:layout_height="100dp">
            
            <ImageView
                android:id="@+id/link_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@color/email" />

            <ImageView
                android:id="@+id/play_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_media_play_dark"
                android:background="@drawable/circular_view" />/>
            </FrameLayout>
            <TextView
                android:id="@+id/link_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/link_image_container"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"
                android:ellipsize="end"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="#3c3c3c"
                tools:text="Lyrical: Moh Moh Ke Dhaage (Male) Song with Lyrics | Dum Laga Ke Haisha | Papon | Varun Grover" />
        </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="#90949c"
            android:layout_below="@id/middle_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            tools:text="124 Likes" />
        <TextView
            android:id="@+id/comments_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:layout_marginTop="8dp"
            android:layout_below="@id/middle_content"
            android:textColor="#90949c"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            tools:text="25 Comments" />
    </RelativeLayout>


</android.support.v7.widget.CardView>