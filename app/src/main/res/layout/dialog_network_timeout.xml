<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:vernacular="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/grey8"
    android:minWidth="320dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/li_user_deactivate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingBottom="@dimen/dp_size_12"
            android:paddingLeft="@dimen/dp_size_12"
            android:paddingRight="@dimen/dp_size_16"
            android:paddingTop="@dimen/dp_size_16"
            android:src="@drawable/vector_cross" />

        <ImageView
            android:id="@+id/iv_user_deactivate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/vector_user_deactivated" />

        <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
            android:id="@+id/tv_user_deactivate_text"
            style="@style/TextView16spMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_size_16"
            android:layout_marginRight="@dimen/dp_size_16"
            android:layout_marginTop="@dimen/dp_size_24"
            android:background="@drawable/user_deactivate_text_bg"
            android:gravity="center"
            android:padding="@dimen/dp_size_8"
            android:textColor="@color/comment_text"
            vernacular:customTextFontFamily="@string/medium_font" />

        <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
            style="@style/TextView12spRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_size_8"
            android:gravity="center"
            android:padding="@dimen/dp_size_4"
            android:text="@string/reactivate_your_account"
            android:textColor="@color/recent_post_comment"
            vernacular:customTextFontFamily="@string/regular_font" />

        <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
            android:id="@+id/tv_care_sheroes"
            style="@style/TextView14spRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp_size_24"
            android:layout_marginTop="@dimen/dp_size_8"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:gravity="center"
            android:padding="@dimen/dp_size_4"
            android:text="@string/care_sheroes"
            android:textColor="@color/footer_icon_text"
            vernacular:customTextFontFamily="@string/regular_font" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_error_msg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">

        <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
            android:id="@+id/tv_no_connection"
            style="@style/TextView14spMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_size_10"
            android:paddingTop="@dimen/dp_size_15"
            android:text="@string/IDS_STR_NETWORK_TIME_OUT_TITLE"
            android:textColor="@color/noConnection"
            android:visibility="gone"
            vernacular:customTextFontFamily="@string/medium_font" />

        <ImageView
            android:id="@+id/imv_no_connection_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_no_connection"
            android:visibility="gone" />


        <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
            android:id="@+id/tv_no_conn_desc"
            style="@style/TextView14spRegular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imv_no_connection_img"
            android:layout_marginTop="@dimen/dp_size_30"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_size_31"
            android:paddingRight="@dimen/dp_size_30"
            android:textColor="@color/grey2"
            android:textStyle="bold"
            vernacular:customTextFontFamily="@string/regular_font" />

        <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
            android:id="@+id/tv_try_again"
            style="@style/TextView14spMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_no_conn_desc"
            android:layout_marginTop="@dimen/dp_size_20"
            android:background="@color/white"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_size_16"
            android:paddingTop="@dimen/dp_size_15"
            android:textAllCaps="true"
            android:textColor="@color/red"
            vernacular:customTextFontFamily="@string/medium_font" />
    </RelativeLayout>
</LinearLayout>
