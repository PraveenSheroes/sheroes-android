<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fully_transparent"
    android:layout_marginLeft="@dimen/dp_size_20"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/iv_search_icon_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center"
        android:padding="@dimen/dp_size_10"
        android:background="@drawable/ic_search_box_icon"
        android:importantForAccessibility="no" />



    <EditText
        android:id="@+id/et_search_edit_text_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fully_transparent"
        android:hint="@string/ID_SEARCH_GOOD_AT"
        android:textColorHint="@color/grey2"
        android:textColor="@color/job_filter_desc_color"
        android:inputType="text"
        android:textSize="@dimen/sp_size_15"
        android:padding="@dimen/dp_size_15" />


</LinearLayout>

