<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_profile_spinner_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/feed_background" />

    <ProgressBar
        android:id="@+id/pb_profile_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/added_member_text" />

    <LinearLayout
        android:id="@+id/li_no_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_no_result_try_again"
            android:layout_width="@dimen/dp_size_350"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@string/ID_ROBOTO_MEDIUM"
            android:padding="@dimen/dp_size_20"
            android:text="@string/ID_NO_RESULT_FOUND"
            android:textAlignment="center"
            android:textColor="@color/requested_btn"
            android:textSize="@dimen/sp_size_14" />
    </LinearLayout>
</FrameLayout>

