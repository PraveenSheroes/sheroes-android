<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fb="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rlsignup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rlsignupin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:id="@+id/signuptext"
                    android:layout_width="@dimen/dp_size_254"
                    android:layout_height="@dimen/dp_size_36"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_size_40"
                    android:fontFamily="@string/ID_ROBOTO_LIGHT"
                    android:text="@string/ID_SIGNUP_TEXT"
                    android:textAlignment="center"
                    android:textSize="@dimen/dp_size_16" />


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/fnwidget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/signuptext"
                    android:layout_marginTop="@dimen/dp_size_10"
                    android:paddingLeft="@dimen/dp_size_45"
                    android:paddingRight="@dimen/dp_size_45">

                    <EditText
                        android:id="@+id/fname_signup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/signup_text_color"
                        android:hint="@string/ID_FIRST_NAME_HINT_SIGNUP"
                        android:digits="@string/ID_NAME_CHECK"
                        android:inputType="textPersonName"
                        android:maxLines="@integer/int_value_for_line_1"
                        android:textSize="@dimen/sp_size_14" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/lnwidget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fnwidget"
                    android:layout_marginTop="@dimen/dp_size_5"
                    android:paddingLeft="@dimen/dp_size_45"
                    android:paddingRight="@dimen/dp_size_45">

                    <EditText
                        android:id="@+id/lname_signup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/signup_text_color"
                        android:hint="@string/ID_LAST_NAME_HINT_SIGNUP"
                        android:digits="@string/ID_NAME_CHECK"
                        android:inputType="textPersonName"
                        android:maxLines="@integer/int_value_for_line_1"
                        android:textSize="@dimen/sp_size_14" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/emailwidget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lnwidget"
                    android:layout_marginTop="@dimen/dp_size_5"
                    android:paddingLeft="@dimen/dp_size_45"
                    android:paddingRight="@dimen/dp_size_45">

                    <EditText
                        android:id="@+id/email_signup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/signup_text_color"
                        android:hint="@string/ID_EMAIL_ID_HINT_SIGNUP"
                        android:inputType="textEmailAddress"
                        android:maxLines="@integer/int_value_for_line_1"
                        android:textSize="@dimen/sp_size_14" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/mobilewidget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/emailwidget"
                    android:layout_marginTop="@dimen/dp_size_5"
                    android:paddingLeft="@dimen/dp_size_45"
                    android:paddingRight="@dimen/dp_size_45">

                    <EditText
                        android:id="@+id/mobile_signup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/signup_text_color"
                        android:hint="@string/ID_SIGN_UP_MOBILE_HINT"
                        android:inputType="number"
                        android:maxLength="10"
                        android:maxLines="@integer/int_value_for_line_1"
                        android:textSize="@dimen/sp_size_14" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/passwordwidget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mobilewidget"
                    android:layout_marginTop="@dimen/dp_size_5"
                    android:paddingLeft="@dimen/dp_size_45"
                    android:paddingRight="@dimen/dp_size_45">

                    <EditText
                        android:id="@+id/password_signup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/signup_text_color"
                        android:hint="@string/ID_SIGN_UP_PASSWORD_HINT"
                        android:inputType="text"
                        android:maxLines="@integer/int_value_for_line_1"
                        android:textSize="@dimen/sp_size_14" />

                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/btn_sign_up"
                    android:layout_width="@dimen/dp_size_209"
                    android:layout_height="@dimen/dp_size_42"
                    android:layout_below="@+id/passwordwidget"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_size_20"
                    android:background="@drawable/rounded_rectangle_signup"
                    android:fontFamily="@string/ID_ROBOTO_BOLD"
                    android:text="@string/ID_SIGN_UP"
                    android:textColor="@color/signup_text_color"
                    android:textSize="@dimen/sp_size_14" />

                <TextView
                    android:id="@+id/tv_signup_already_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_sign_up"
                    android:layout_marginTop="@dimen/dp_size_10"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/dp_size_15"
                    android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                    android:text="@string/ID_SIGNUP_ALREADY_LOGIN" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_size_150"
                android:layout_below="@+id/rlsignupin"
                android:background="@color/grey8">

                <TextView
                    android:id="@+id/tv_continue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:padding="@dimen/dp_size_10"
                    android:layout_marginTop="@dimen/dp_size_10"
                    android:fontFamily="@string/ID_ROBOTO_BOLD"
                    android:text="@string/ID_OR_CONTINUE"
                    android:textAlignment="center" />

                <com.facebook.login.widget.LoginButton
                    android:id="@+id/click_to_join_fb_signup"
                    android:layout_width="@dimen/dp_size_158"
                    android:layout_height="@dimen/dp_size_42"
                    android:layout_below="@+id/tv_continue"
                    android:layout_marginLeft="@dimen/dp_size_18"
                    android:layout_marginTop="@dimen/dp_size_15"
                    android:background="@drawable/ic_fb_signup"
                    android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_size_12"
                    android:textStyle="normal"
                    fb:login_text=""
                    fb:logout_text="" />

                <Button
                    android:id="@+id/btn_login_google"
                    android:layout_width="@dimen/dp_size_158"
                    android:layout_height="@dimen/dp_size_42"
                    android:layout_below="@+id/tv_continue"
                    android:background="@drawable/ic_google_plus"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_size_18"
                    android:layout_marginTop="@dimen/dp_size_15"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <include layout="@layout/progress_bar_login" />

</FrameLayout>