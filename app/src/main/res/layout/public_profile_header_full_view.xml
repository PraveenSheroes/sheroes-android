<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="@integer/int_value_for_line_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_size_50"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_16"
            android:orientation="vertical">

            <appliedlife.pvtltd.SHEROES.views.cutomeviews.RoundedImageView
                android:id="@+id/iv_public_profile_full_view_icon"
                android:layout_width="@dimen/drawer_profile_icon_size"
                android:layout_height="@dimen/drawer_profile_icon_size"
                android:layout_gravity="center"
                app:riv_border_width="@dimen/dp_size_0.5"
                app:riv_corner_radius="@dimen/dp_size_10"
                app:riv_oval="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_size_40"
                android:drawableLeft="@drawable/ic_online"
                android:drawablePadding="@dimen/dp_size_10"
                android:text="Online"
                android:visibility="invisible"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_16"
            android:layout_marginTop="@dimen/dp_size_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_mentor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_size_10"
                android:drawableRight="@drawable/ic_verified"
                android:fontFamily="@string/ID_ROBOTO_BOLD"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_size_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_25"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:text="@string/ID_MENTOR_FOR"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_size_12" />

            <TextView
                android:id="@+id/tv_mentor_expertise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_10"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:textColor="@color/public_profile_text"
                android:textSize="@dimen/sp_size_12" />

            <TextView
                android:id="@+id/tv_mentor_city_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_20"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_size_12" />

            <TextView
                android:id="@+id/tv_web_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_10"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:textColor="@color/public_profile_text"
                android:textSize="@dimen/sp_size_12" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view_line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_1"
        android:layout_marginLeft="@dimen/dp_size_20"
        android:alpha=".5"
        android:visibility="invisible"
        android:layout_marginRight="@dimen/dp_size_20"
        android:layout_marginTop="@dimen/dp_size_16"
        android:background="@color/public_profile_text" />

    <TextView
        android:id="@+id/tv_mentor_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_size_20"
        android:layout_marginRight="@dimen/dp_size_20"
        android:layout_marginTop="@dimen/dp_size_12"
        android:fontFamily="@string/ID_ROBOTO_REGULAR"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_size_12" />

    <View
        android:id="@+id/view_line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_1"
        android:layout_marginLeft="@dimen/dp_size_20"
        android:layout_marginRight="@dimen/dp_size_20"
        android:alpha=".5"
        android:visibility="invisible"
        android:layout_marginTop="@dimen/dp_size_20"
        android:background="@color/public_profile_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_followers_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_20"
            android:fontFamily="@string/ID_ROBOTO_LIGHT"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_size_16" />

        <TextView
            android:id="@+id/tv_follower_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/ID_ROBOTO_BOLD"
            android:text="@string/ID_FOLLOWERS"
            android:layout_marginLeft="@dimen/dp_size_5"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_size_12" />

        <TextView
            android:id="@+id/tv_post_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_10"
            android:fontFamily="@string/ID_ROBOTO_LIGHT"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_size_16" />

        <TextView
            android:id="@+id/tv_post_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/ID_ROBOTO_BOLD"
            android:text="@string/ID_GROWTH_BUDDIES_POST"
            android:layout_marginLeft="@dimen/dp_size_5"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_size_12" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="@dimen/dp_size_40"
        android:gravity="right">
        <TextView
            android:id="@+id/tv_follow_unfollow_public_profile"
            android:layout_width="@dimen/dp_size_80"
            android:layout_height="@dimen/dp_size_30"
            android:background="@drawable/rectangle_follow_unfollow"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:gravity="center"
            android:text="@string/ID_GROWTH_BUDDIES_UNFOLLOW"
            android:layout_marginRight="@dimen/dp_size_20"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_size_12"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>
