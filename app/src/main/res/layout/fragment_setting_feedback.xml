<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/r1_feedback_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


        <include
            layout="@layout/setting_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top" />


    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/sc1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/r1_feedback_relative"
        android:background="@color/back_ground_color"
        android:isScrollContainer="false">


        <LinearLayout
            android:id="@+id/l1_setting_feedback_page"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_size_16"
                android:layout_marginTop="@dimen/dp_size_16"
                android:fontFamily="@string/ID_ROBOTO_BOLD"
                android:layout_marginLeft="@dimen/dp_size_8"
                android:padding="@dimen/dp_size_8"
                android:text="@string/ID_THOUGHTS"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_size_14" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@string/ID_ROBOTO_LIGHT"
                android:padding="@dimen/dp_size_5"
                android:layout_marginLeft="@dimen/dp_size_11"
                android:layout_marginRight="@dimen/dp_size_16"
                android:lineSpacingExtra="@dimen/dp_size_4"
                android:text="@string/ID_TYING_MESSAGE"
                android:textSize="@dimen/dp_size_12" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_size_1"
                android:layout_marginTop="@dimen/dp_size_13"
                android:background="@color/line_color" />

            <RatingBar
                android:id="@+id/dialog_ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="@dimen/dp_size_10"
                android:progressBackgroundTint="@color/grey2"
                android:backgroundTint="@color/rating_color"
                android:progressTint="@color/rating_color"
                android:secondaryProgressTint="@color/rating_color"
                android:clickable="true"
                android:isIndicator="false"
                android:numStars="5"
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:rating="0"

                android:theme="@style/RatingBar" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_size_1"
                android:background="@color/line_color"
                android:padding="@dimen/dp_size_10" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/back_ground_color"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_skip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                    android:gravity="center"
                    android:padding="@dimen/dp_size_10"
                    android:text="@string/ID_TEXT_OPTIONAL"
                    android:textColor="@color/skip_textcolor"
                    android:textSize="@dimen/sp_size_12" />

                <EditText
                    android:id="@+id/et_write_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@color/white"
                    android:cursorVisible="true"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:hint="@string/ID_COMMENT"
                    android:padding="@dimen/dp_size_10"
                    android:textColor="@color/black"
                    android:textColorHint="@color/back_ground_color"
                    android:textSize="@dimen/sp_size_14"
                    android:visibility="gone"

                    >

                    <requestFocus />
                </EditText>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/preferences_deactiveaccount_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey2"
        android:enabled="false"
        android:layout_alignParentBottom="true"
        android:fontFamily="@string/ID_ROBOTO_MEDIUM"
        android:text="@string/ID_SUBMIT"
        android:textColor="@color/white" />


</RelativeLayout>