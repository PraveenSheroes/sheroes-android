<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/r1_add_education"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <include
            layout="@layout/profile_header_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top" />
    </android.support.design.widget.AppBarLayout>



    <ScrollView
        android:id="@+id/scrool_education"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/r1_add_education"
        android:isScrollContainer="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_size_16"
            android:paddingRight="@dimen/dp_size_16"
            android:paddingTop="@dimen/dp_size_16">

            <RelativeLayout
                android:id="@+id/r1_add_education_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingRight="@dimen/dp_size_4"
                    android:paddingTop="@dimen/dp_size_10"
                    android:text="*"
                    android:textColor="@color/star_color" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/et_education_degree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_star"
                    android:theme="@style/MyTextInputLayout">

                    <EditText
                        android:id="@+id/et_degree_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/ID_ROBOTO_REGULAR"
                        android:hint="@string/ID_DEGREE_HINT"
                        android:focusable="false"
                        android:imeOptions="actionUnspecified"
                        android:inputType="textCapCharacters"
                        android:textColor="@color/text_color_contactdetails_page"
                        android:textColorHint="@color/text_color_setting_preference_basicdetails"
                        android:textSize="@dimen/sp_size_13" />

                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/r1_add_education1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/r1_add_education_details">

                <TextView
                    android:id="@+id/tv_star1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingRight="@dimen/dp_size_4"
                    android:paddingTop="@dimen/dp_size_10"
                    android:text="*"
                    android:textColor="@color/star_color" />


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/et_school_university"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_star1"
                    android:theme="@style/MyTextInputLayout">

                    <EditText
                        android:id="@+id/et_school_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/ID_ROBOTO_REGULAR"
                        android:hint="@string/ID_DEGREE1_HINT"
                        android:focusable="false"
                        android:imeOptions="actionUnspecified"
                        android:inputType="textCapCharacters"
                        android:textColor="@color/text_color_contactdetails_page"
                        android:textColorHint="@color/text_color_setting_preference_basicdetails"
                        android:textSize="@dimen/sp_size_13" />

                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/r1_add_education_details1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_size_10"
                android:layout_below="@+id/r1_add_education1">

                <TextView
                    android:id="@+id/tv_starid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingTop="@dimen/dp_size_10"
                    android:paddingRight="@dimen/dp_size_4"
                    android:text="*"
                    android:textColor="@color/star_color" />

                <TextView
                    android:id="@+id/tv_edu_start_date"
                    android:layout_width="@dimen/dp_size_100"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_starid"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:inputType="textCapCharacters"
                    android:textAllCaps="true"
                    android:text="@string/ID_SELF_EMP_START"
                    android:textColor="@color/text_color_setting_preference_basicdetails"
                    android:textSize="@dimen/sp_size_13" />

                <TextView
                    android:id="@+id/tv_edu_end_date"
                    android:layout_width="@dimen/dp_size_100"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_size_30"
                    android:layout_toRightOf="@id/tv_edu_start_date"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:inputType="textCapCharacters"
                    android:text="@string/ID_SELF_EMP_END"
                    android:textColor="@color/text_color_setting_preference_basicdetails"
                    android:textSize="@dimen/sp_size_13" />

            </RelativeLayout>

            <ProgressBar
                android:id="@+id/pb_profile_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_centerInParent="true" />
            <RelativeLayout

                android:id="@+id/r1_add_education_details2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/r1_add_education_details1">



                <EditText
                    android:id="@+id/et_job_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_size_7"
                    android:focusable="false"
                    android:imeOptions="actionUnspecified"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:hint="@string/ID_DATE_START_HINT"
                    android:textColorHint="@color/text_color_contactdetails_page"
                    android:textSize="@dimen/sp_size_13" />


                <EditText
                    android:id="@+id/et_job_end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_size_40"
                    android:focusable="false"
                    android:imeOptions="actionUnspecified"
                    android:layout_toRightOf="@+id/et_job_start_date"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:hint="@string/ID_DATE_START_HINT"
                    android:textColorHint="@color/text_color_contactdetails_page"
                    android:textSize="@dimen/sp_size_13" />

            </RelativeLayout>


            <CheckBox
                android:id="@+id/cb_working_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/r1_add_education_details2"
                android:layout_marginRight="@dimen/dp_size_35"
                android:button="@drawable/customecheckbox"
                android:checked="false"
                android:visibility="gone"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:paddingLeft="@dimen/dp_size_8"
                android:text="@string/ID_SELF_EMP_TITTLE"
                android:textColor="@color/text_color_work_list"
                android:textSize="@dimen/sp_size_14" />


            <RelativeLayout
                android:id="@+id/r1_add_education_details3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/cb_working_from">

                <TextView
                    android:id="@+id/tv_star3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingTop="@dimen/dp_size_10"
                    android:paddingRight="@dimen/dp_size_4"
                    android:text="*"
                    android:textColor="@color/star_color" />


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/et_feild_of_study"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_star3"
                    android:theme="@style/MyTextInputLayout">

                    <EditText
                        android:id="@+id/et_field_of_study"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/ID_ROBOTO_REGULAR"
                        android:hint="@string/ID_FILED_OF_STUDY_HINT"
                        android:focusable="false"
                        android:imeOptions="actionUnspecified"
                        android:inputType="textCapCharacters"
                        android:textColor="@color/text_color_contactdetails_page"
                        android:textColorHint="@color/text_color_setting_preference_basicdetails"
                        android:textSize="@dimen/sp_size_13" />

                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_star5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/dp_size_4"
                android:text="*"
                android:paddingTop="@dimen/dp_size_30"

                android:textColor="@color/star_color"
                android:layout_below="@+id/r1_add_education_details3"/>

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ID_DESCRIPTION"
                android:paddingTop="@dimen/dp_size_30"
                android:layout_marginLeft="@dimen/dp_size_15"

                android:layout_below="@+id/r1_add_education_details3"
                />
            <EditText
                android:id="@+id/et_write_desc"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_size_100"
                android:layout_below="@+id/tv_desc"
                android:background="@drawable/edit_text_create_community_style"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:hint="@string/ID_WRITE_REASION"
                android:imeOptions="actionUnspecified"
                android:inputType="textMultiLine"
                android:lineSpacingExtra="@dimen/dp_size_4"
                android:maxLength="4000"
                android:paddingTop="@dimen/dp_size_5"
                android:scrollbars="vertical"
                android:textColor="@color/black"
                android:textColorHint="@color/text_color_setting_preference_basicdetails"
                android:textSize="@dimen/sp_size_13" />
            <ImageView
                android:id="@+id/iv_write_about_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_size_1"
                android:layout_below="@+id/et_write_desc"
                android:background="@color/grey2" />
            <TextView
                android:id="@+id/charecter_cout_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/dp_size_80"
                android:layout_below="@id/iv_write_about_line"
                android:paddingLeft="@dimen/dp_size_8"
                android:textColor="@color/count_char_text_color"
                />
        </RelativeLayout>

    </ScrollView>


    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/btn_save_education_details_"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/red"
        android:fontFamily="@string/ID_ROBOTO_MEDIUM"
        android:text="@string/ID_SAVE"
        android:textColor="@color/white" />


</RelativeLayout>