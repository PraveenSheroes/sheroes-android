<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tv_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/dp_size_10"
            android:background="@drawable/select_tag_shap"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/grey2"
            android:textSize="@dimen/sp_size_12" />

        <TextView
            android:id="@+id/tv_tags1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_10"
            android:layout_marginTop="@dimen/dp_size_10"
            android:layout_toRightOf="@+id/tv_tags"

            android:background="@drawable/select_tag_shap"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"

            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/grey2"
            android:textSize="@dimen/sp_size_12"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_tags2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_10"
            android:layout_marginTop="@dimen/dp_size_10"

            android:layout_toRightOf="@+id/tv_tags1"
            android:background="@drawable/select_tag_shap"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/grey2"
            android:textSize="@dimen/sp_size_12"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_tags3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_10"
            android:layout_marginTop="@dimen/dp_size_10"
            android:layout_toRightOf="@+id/tv_tags2"

            android:background="@drawable/select_tag_shap"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/grey2"
            android:textSize="@dimen/sp_size_12"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_tags4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_10"
            android:layout_marginTop="@dimen/dp_size_10"
            android:layout_toRightOf="@+id/tv_tags3"
            android:background="@drawable/select_tag_shap"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"

            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/grey2"
            android:textSize="@dimen/sp_size_12"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>