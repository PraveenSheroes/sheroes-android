<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_comment_background"
    android:gravity="center">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="@dimen/dp_size_16"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_cross" />

    <ImageView
        android:id="@+id/imv_no_connection_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_close"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_caution"
        android:visibility="visible" />


    <TextView
        android:id="@+id/tv_no_conn_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imv_no_connection_img"
        android:layout_marginTop="@dimen/dp_size_16"
        android:layout_marginRight="@dimen/dp_size_16"
        android:layout_marginLeft="@dimen/dp_size_16"
        android:fontFamily="@string/ID_ROBOTO_REGULAR"
        android:lineSpacingExtra="@dimen/dp_size_5"
        android:gravity="center"
        android:text="@string/ID_JOIN_COMMUNITY"
        android:layout_marginBottom="@dimen/dp_size_24"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_size_16" />

</RelativeLayout>
