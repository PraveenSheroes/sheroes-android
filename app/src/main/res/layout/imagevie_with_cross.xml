<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_size_5"
    android:paddingRight="@dimen/dp_size_5"
    android:layout_gravity="left"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/customView"
        android:layout_width="@dimen/dp_size_60"
        android:layout_height="@dimen/dp_size_80"
        android:scaleType="fitXY"
         />

    <Button
        android:id="@+id/button1"
        android:layout_width="@dimen/dp_size_18"
        android:layout_height="@dimen/dp_size_18"
        android:layout_marginRight="@dimen/dp_size_5"
        android:layout_marginTop="@dimen/dp_size_5"
        android:padding="@dimen/dp_size_5"
        android:layout_gravity="right|top"
        android:background="@drawable/ic_cross_flat"
        />

</FrameLayout>