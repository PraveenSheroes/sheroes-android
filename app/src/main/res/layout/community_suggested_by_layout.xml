<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_size_170"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_size_5"
    android:layout_marginRight="@dimen/dp_size_2"
    android:layout_gravity="left"
    android:gravity="left"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_suggested_community_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_80"
        android:layout_marginTop="@dimen/dp_size_12"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tv_community_suggested_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_size_15"
        android:fontFamily="@string/ID_ROBOTO_MEDIUM"
        android:gravity="center"
        android:text="Education community"
        android:textColor="@color/suggested_card_text"
        android:textSize="@dimen/dp_size_12"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_suggested_community_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_size_12"
        android:background="@drawable/rectangle_detail_round"
        android:fontFamily="@string/ID_ROBOTO_REGULAR"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_size_3"
        android:paddingLeft="@dimen/dp_size_10"
        android:paddingRight="@dimen/dp_size_10"
        android:paddingTop="@dimen/dp_size_3"
        android:text="@string/ID_MEMBERS"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_size_12" />

    <TextView
        android:id="@+id/tv_suggested_community_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_size_12"
        android:drawablePadding="@dimen/dp_size_8"
        android:drawableRight="@drawable/ic_lock"
        android:fontFamily="@string/ID_ROBOTO_REGULAR"
        android:gravity="center"
        android:text="@string/ID_GROUP"
        android:textColor="@color/footer_icon_text"
        android:textSize="@dimen/sp_size_12" />

    <TextView
        android:id="@+id/tv_suggested_community_join"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_30"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_size_12"
        android:layout_marginRight="@dimen/dp_size_12"
        android:layout_marginTop="@dimen/dp_size_15"
        android:background="@drawable/rectangle_join"
        android:fontFamily="@string/ID_ROBOTO_REGULAR"
        android:gravity="center"
        android:text="@string/ID_JOIN"
        android:textColor="@color/footer_icon_text"
        android:textSize="@dimen/sp_size_12" />
</LinearLayout>