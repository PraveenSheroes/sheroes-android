<?xml version="1.0" encoding="utf-8"?>



<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_size_10"
    >
    <LinearLayout
        android:id="@+id/l1_job_add_card"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/dp_size_16"
        android:paddingRight="@dimen/dp_size_16"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_size_25"
            android:paddingRight="@dimen/dp_size_10">

            <TextView
                android:id="@+id/tv_education_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                android:textAllCaps="true"
                android:textColor="@color/text_color_contactdetails_page"
                android:textSize="@dimen/sp_size_13" />


            <TextView
                android:id="@+id/tv_edit_education"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/ic_edit_icon"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_date_details"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/dp_size_10"

            android:layout_height="wrap_content"
            android:visibility="gone"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:textColor="@color/text_color_date_view"
            android:textSize="@dimen/sp_size_12" />

        <TextView
            android:id="@+id/tv_degree_name"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/dp_size_10"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:textColor="@color/blue"
            android:textSize="@dimen/sp_size_12" />

        <TextView
            android:id="@+id/tv_college_name"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/dp_size_10"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:textColor="@color/text_color_date_view"
            android:textSize="@dimen/sp_size_12" />



        <TextView
            android:id="@+id/tv_subject_name"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/dp_size_10"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:textColor="@color/text_color_date_view"
            android:textSize="@dimen/sp_size_12" />

        <TextView
            android:id="@+id/tv_grade_value"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/dp_size_10"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:textColor="@color/text_color_date_view"
            android:textSize="@dimen/sp_size_12" />

    </LinearLayout>
</android.support.v7.widget.CardView>