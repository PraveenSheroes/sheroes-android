<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/community_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_size_4"
    android:layout_marginBottom="@dimen/dp_size_4"
    android:elevation="@dimen/dp_size_14">

<RelativeLayout
    android:id="@+id/rl_search_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_back_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="@dimen/dp_size_20"
        android:src="@drawable/vector_back_arrow" />

    <TextView
        android:id="@+id/tv_setting_tittle"
        style="@style/TextAppearance.Toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_size_10"
        android:layout_marginStart="@dimen/dp_size_10"
        android:layout_toEndOf="@id/iv_back_setting"
        android:layout_toRightOf="@id/iv_back_setting"
        android:ellipsize="end"
        android:fontFamily="@string/ID_ROBOTO_MEDIUM"
        android:gravity="center_vertical"
        android:maxLines="@integer/int_value_for_line_1" />

    <TextView
        android:id="@+id/tv_setting_tittle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_setting_tittle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_size_7"
        android:layout_marginTop="@dimen/dp_size_5"
        android:fontFamily="@string/ID_ROBOTO_LIGHT"
        android:layerType="software"
        android:textColor="@color/menu_icon"
        android:textSize="@dimen/sp_size_14" />

</RelativeLayout>
</android.support.v7.widget.CardView>
