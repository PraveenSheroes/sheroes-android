<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/pb_onboarding_search_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/search_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <ImageView
                android:id="@+id/iv_search_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|top"
                android:layout_marginLeft="@dimen/dp_size_40"
                android:layout_marginRight="@dimen/dp_size_12"
                android:background="@drawable/ic_back_black"
                android:padding="@dimen/dp_size_10" />

            <include
                layout="@layout/search_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </android.support.v7.widget.Toolbar>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_size_0.5"
            android:layout_marginLeft="@dimen/dp_size_65"
            android:layout_marginRight="@dimen/dp_size_30"
            android:background="@color/search_tab_unselected_text" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_job_loc_search_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_size_50"/>

            <TextView
                android:id="@+id/tv_location_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/sp_size_14"
                android:textColor="@color/dashboard_fed_text"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="gone"
                android:text="@string/ID_LOCATION_RESULT"
                android:fontFamily="@string/ID_ROBOTO_MEDIUM"/>
        </FrameLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_save_job_location"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_50"
        android:background="@drawable/rect_btn"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:fontFamily="@string/ID_ROBOTO_MEDIUM"
        android:textAllCaps="true"
        android:text="@string/ID_SAVE"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_size_13" />
</FrameLayout>