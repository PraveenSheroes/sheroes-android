<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="284dp"
    android:layout_marginTop="@dimen/dp_size_8"
    android:elevation="@dimen/dp_size_5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_size_10"
        android:layout_marginStart="@dimen/dp_size_10">

        <TextView
            android:id="@+id/community_container_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/dp_size_8"
            android:layout_toLeftOf="@id/more_community"
            android:layout_toStartOf="@id/more_community"
            android:fontFamily="sans-serif"
            android:letterSpacing="0.04"
            android:textColor="@color/comment_text"
            android:textSize="16sp"
            android:textStyle="normal"
            tools:text="Hobbies" />

        <TextView
            android:id="@+id/more_community"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/dp_size_16"
            android:layout_marginLeft="@dimen/dp_size_16"
            android:layout_marginRight="@dimen/dp_size_16"
            android:layout_marginStart="@dimen/dp_size_16"
            android:layout_marginTop="@dimen/dp_size_8"
            android:fontFamily="@string/ID_ROBOTO_MEDIUM"
            android:gravity="center"
            android:letterSpacing="0.07"
            android:padding="@dimen/dp_size_2"
            android:text="@string/more"
            android:textAllCaps="true"
            android:textColor="@color/footer_icon_text"
            android:textSize="@dimen/sp_size_14"
            tools:text="More" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/communities_carousel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/community_container_label"
            android:layout_marginTop="@dimen/dp_size_14"
            android:minHeight="@dimen/dp_size_100" />

    </RelativeLayout>

</android.support.v7.widget.CardView>