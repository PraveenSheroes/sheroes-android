<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/r1_profile_profesional"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/home_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_size_65"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <include
                layout="@layout/setting_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/r1_profile_profesional">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <appliedlife.pvtltd.SHEROES.views.cutomeviews.materialspinner.MaterialSpinner
                android:layout_width="match_parent"
                android:id="@+id/spinner_current_status"
                android:layout_height="wrap_content"
                android:hint="@string/ID_CURRENT_STATUS"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:textColorHint="@color/text_color_contactdetails_page"
                android:textSize="@dimen/sp_size_13"
                android:focusableInTouchMode="true"
                android:spinnerMode="dialog">
            </appliedlife.pvtltd.SHEROES.views.cutomeviews.materialspinner.MaterialSpinner>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/et_others_details"
                android:layout_width="match_parent"
                android:focusableInTouchMode="true"
                android:paddingLeft="@dimen/dp_size_18"
                android:paddingRight="@dimen/dp_size_18"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:hint="@string/ID_ADITIONAL"
                    android:textColorHint="@color/text_color_setting_preference_basicdetails"
                    android:textColor="@color/count_char_text_color"
                    android:textSize="@dimen/sp_size_13" />

            </android.support.design.widget.TextInputLayout>



        </LinearLayout>








    </ScrollView>


</RelativeLayout>
