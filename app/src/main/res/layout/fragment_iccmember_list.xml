<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="appliedlife.pvtltd.SHEROES.views.fragments.ICCMemberListFragment"
    android:background="@color/white_color">

    <TextView
        android:layout_width="@dimen/dp_size_300"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/ID_ICC_MEMBER_TITLE"
        android:layout_marginTop="@dimen/dp_size_20"
        android:layout_marginLeft="@dimen/dp_size_25"/>
    
    <View
        android:layout_width="@dimen/dp_size_300"
        android:layout_height="@dimen/dp_size_2"
        android:layout_marginLeft="@dimen/dp_size_30"
        android:layout_marginTop="@dimen/dp_size_24"
        android:background="@color/red">

    </View>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_list_icc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="LinearLayoutManager"
        android:layout_marginTop="@dimen/dp_size_10"
       />
    <ProgressBar
        android:id="@+id/pb_icc_member_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />
</LinearLayout>

