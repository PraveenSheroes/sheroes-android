<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_challenge_response"
                android:layout_width="match_parent"
                android:layout_height="@dimen/challenge_completed_height"
                android:adjustViewBounds="true"
                android:background="@color/photo_placeholder"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_challenge_response_text_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_size_16"
                android:layout_marginRight="@dimen/dp_size_16"
                android:layout_marginTop="@dimen/dp_size_16"
                android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                android:gravity="center"
                android:text="@string/challenge_done"
                android:textColor="@color/comment_text"
                android:textSize="@dimen/sp_size_18" />

            <TextView
                android:id="@+id/tv_challenge_response_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_size_16"
                android:layout_marginRight="@dimen/dp_size_16"
                android:layout_marginTop="@dimen/dp_size_7"
                android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                android:gravity="center"
                android:textColor="@color/comment_text"
                android:textSize="@dimen/sp_size_14" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_size_16"
                android:background="@color/email">

                <ImageView
                    android:id="@+id/iv_gratication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_size_16"
                    android:src="@drawable/challenge_gratif" />

                <TextView
                    android:id="@+id/tv_gratification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_gratication"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/dp_size_16"
                    android:layout_marginRight="@dimen/dp_size_16"
                    android:layout_marginTop="@dimen/dp_size_16"
                    android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/dp_size_5"
                    android:text="@string/share_with_friend_text"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_size_14" />

                <LinearLayout
                    android:id="@+id/ll_share"
                    android:layout_width="@dimen/challenge_share_btn_width"
                    android:layout_height="@dimen/dp_size_36"
                    android:layout_below="@+id/tv_gratification"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/dp_size_16"
                    android:layout_marginTop="@dimen/dp_size_16"
                    android:background="@drawable/rectangle_comment_background"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_size_16"
                        android:layout_marginRight="@dimen/dp_size_16"
                        android:src="@drawable/ic_gratification_share" />

                    <View
                        android:layout_width="@dimen/dp_size_0.5"
                        android:layout_height="match_parent"
                        android:alpha=".5"
                        android:background="@color/email" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_size_16"
                        android:layout_marginRight="@dimen/dp_size_5"
                        android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                        android:text="@string/share_with_friends"
                        android:textAllCaps="true"
                        android:textColor="@color/email"
                        android:textSize="@dimen/sp_size_14" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
