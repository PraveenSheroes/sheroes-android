<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/pb_article_image"
        android:layout_width="@dimen/dp_size_30"
        android:layout_height="@dimen/dp_size_30"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_size_80"
        android:indeterminateTint="@color/white" />

    <ImageView
        android:id="@+id/iv_feed_article_single_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:id="@+id/rl_gradiant"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_50"
        android:layout_gravity="bottom"
        android:background="@drawable/view_holder_gradiant"
        android:gravity="bottom"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_feed_article_total_views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_size_12"
            android:layout_marginLeft="@dimen/dp_size_16"
            android:drawableLeft="@drawable/ic_timer_icon"
            android:drawablePadding="@dimen/dp_size_6"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_size_12" />

    </RelativeLayout>

</FrameLayout>
