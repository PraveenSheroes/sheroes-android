<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_feed_article_single_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:id="@+id/rl_gradiant"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_50"
        android:layout_gravity="bottom"
        android:alpha=".8"
        android:visibility="gone"
        android:background="@drawable/view_holder_gradiant"
        android:gravity="bottom">

        <TextView
            android:id="@+id/tv_feed_article_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_timer_icon"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_size_12"
            android:layout_marginLeft="@dimen/dp_size_16"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_size_12"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/tv_feed_article_total_views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_detail_round"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:paddingBottom="@dimen/dp_size_5"
            android:paddingLeft="@dimen/dp_size_10"
            android:paddingRight="@dimen/dp_size_10"
            android:paddingTop="@dimen/dp_size_5"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_size_11"
            android:layout_marginBottom="@dimen/dp_size_12"
            android:layout_marginRight="@dimen/dp_size_16"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="13dp" />
    </RelativeLayout>

</FrameLayout>
