<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/community_detail_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_coomunities_detail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_132"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <appliedlife.pvtltd.SHEROES.views.cutomeviews.CustomeCollapsableToolBar.CustomCollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_communities_detail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_size_132"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/colorAccent"
            app:collapsedTitleTextAppearance="@style/title.collapsed"
            app:expandedTitleTextAppearance="@style/title.expanded"
            app:collapsedSubtitleAppearance="@style/subtitle_collapsed"
            app:expandedSubtitleAppearance="@style/subtitle"
            app:expandedTitleGravity="bottom|center_horizontal"
            android:fitsSystemWindows="true">
            <ImageView
                android:id="@+id/iv_communities_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:layout_collapseMode="parallax" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_margin="@dimen/dp_size_13">

                <TextView
                    android:id="@+id/tv_communities_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_timer_icon"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:paddingLeft="@dimen/dp_size_5"
                    android:visibility="invisible"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_size_12" />

                <TextView
                    android:id="@+id/tv_member"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:alpha=".8"
                    android:background="@drawable/rectangle_detail_round"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:paddingBottom="@dimen/dp_size_5"
                    android:paddingLeft="@dimen/dp_size_15"
                    android:paddingRight="@dimen/dp_size_15"
                    android:paddingTop="@dimen/dp_size_5"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_size_10" />
            </FrameLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_communities_detail"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="right"
                android:gravity="right"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
                <TextView
                    android:id="@+id/iv_community_detail_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|top"
                    android:layout_marginRight="@dimen/dp_size_25"
                    android:padding="@dimen/dp_size_10"
                    android:drawableRight="@drawable/ic_back_white"/>

                <LinearLayout
                    android:id="@+id/li_header"
                    android:layout_width="@dimen/dp_size_220"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_community_detail_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_size_14"
                        android:lines="@integer/int_value_for_line_1"
                        android:gravity="center"
                        android:ellipsize="end"
                        android:textColor="@color/white"
                        android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                        />
                    <TextView
                        android:id="@+id/tv_community_detail_subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_size_12"
                        android:gravity="center"
                        android:lines="@integer/int_value_for_line_1"
                        android:textColor="@color/white"
                        android:fontFamily="@string/ID_ROBOTO_REGULAR"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_communities_detail_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:drawableLeft="@drawable/ic_share_icon"
                    android:drawablePadding="@dimen/dp_size_10"
                    android:padding="@dimen/dp_size_10" />

            </android.support.v7.widget.Toolbar>

        </appliedlife.pvtltd.SHEROES.views.cutomeviews.CustomeCollapsableToolBar.CustomCollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_communities_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_post_community"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:background="@color/footer_icon_text"
        app:backgroundTint="@color/footer_icon_text"
        android:layout_marginRight="@dimen/dp_size_10"
        android:layout_marginBottom="@dimen/dp_size_10"
        android:src="@drawable/ic_fab_icon"/>
</android.support.design.widget.CoordinatorLayout>