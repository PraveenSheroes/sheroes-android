<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_user_comment_header_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@string/ID_ROBOTO_LIGHT"
        android:padding="@dimen/dp_size_30"
        android:drawablePadding="@dimen/dp_size_20"
        android:drawableRight="@drawable/com_facebook_tooltip_blue_xout"
        android:text="@string/ID_REPLIES"
        android:textSize="@dimen/sp_size_24"
        android:textColor="@color/searchbox_hint_text_color"
      />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_1"
        android:background="@color/search_tab_unselected_text"/>

</LinearLayout>
