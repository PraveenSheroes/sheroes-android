<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_intro_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_size_10"
    android:background="@color/white">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_app_intro_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/once_open_card" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_app_intro_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_size_18"
                android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                android:textColor="@color/pure_black"
                android:textSize="@dimen/sp_size_14" />

            <TextView
                android:id="@+id/tv_app_intro_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_14"
                android:layout_marginRight="@dimen/dp_size_12"
                android:layout_marginTop="@dimen/dp_size_14"
                android:ellipsize="end"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:maxLines="@integer/int_value_for_line_3"
                android:textColor="@color/text_color_follow"
                android:textSize="@dimen/sp_size_12" />
        </LinearLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>
