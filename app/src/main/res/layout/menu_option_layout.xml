<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/li_feed_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/rectangle_comment_background"
        android:orientation="vertical"
        android:padding="@dimen/dp_size_10">

    <TextView
        android:id="@+id/tv_article_menu_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_size_5"
        android:text="@string/ID_SHARE"
        android:textColor="@color/dashboard_text"
        android:textSize="@dimen/sp_size_12" />

    <TextView
        android:id="@+id/tv_article_menu_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_size_5"
        android:text="@string/ID_EDIT"
        android:textColor="@color/dashboard_text"
        android:textSize="@dimen/sp_size_12" />

    <TextView
        android:id="@+id/tv_article_menu_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_size_5"
        android:text="@string/ID_DELETE"
        android:textColor="@color/dashboard_text"
        android:textSize="@dimen/sp_size_12" />

    <TextView
        android:id="@+id/tv_article_menu_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_size_5"
        android:text="@string/ID_REPORT"
        android:textColor="@color/dashboard_text"
        android:textSize="@dimen/sp_size_12" />
</LinearLayout>
