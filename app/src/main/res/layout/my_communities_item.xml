<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/community_item"
    android:layout_width="111dp"
    android:layout_height="94dp"
    android:gravity="center"
    android:orientation="vertical">

    <appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView
        android:id="@+id/mutual_community_icon"
        android:layout_width="@dimen/dp_size_50"
        android:layout_height="@dimen/dp_size_50"
        android:layout_margin="@dimen/dp_size_4"
        tools:src="@color/green" />

    <TextView
        android:id="@+id/community_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_size_4"
        android:ellipsize="end"
        android:fontFamily="@string/ID_ROBOTO_REGULAR"
        android:maxLines="@integer/int_value_for_line_1"
        android:textColor="@color/recent_post_comment"
        android:textSize="@dimen/sp_size_14"
        tools:text="Health Tips" />

</LinearLayout>