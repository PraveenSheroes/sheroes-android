<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:minWidth="312dp"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_size_16">

    <RelativeLayout
        android:padding="@dimen/dp_size_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="7sp"
            android:textColor="#3c3c3c"
            android:textSize="16sp"
            android:textStyle="normal"
            tools:text="Reported Earlier" />

        <ImageView
            android:id="@+id/cross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_size_10"
            android:paddingRight="@dimen/dp_size_8"
            android:src="@drawable/ic_cross" />

    </RelativeLayout>

    <TextView
        android:paddingLeft="@dimen/dp_size_16"
        android:paddingRight="@dimen/dp_size_16"
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_size_8"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="9sp"
        android:textColor="#878787"
        android:textSize="14sp"
        android:textStyle="normal"
        tools:text="Your response will help us to improve your experience with Sheroes" />

    <TextView
        android:id="@+id/close"
        android:layout_width="80dp"
        android:layout_height="36dp"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dp_size_35"
        android:background="@null"
        android:fontFamily="sans-serif-medium"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="@color/red"
        tools:text="Close" />

</LinearLayout>
