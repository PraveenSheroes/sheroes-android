<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/community_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/like_list_item_padding_top">

    <FrameLayout
        android:id="@+id/user_pic_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/user_post_container_left_margin"
        android:layout_marginRight="@dimen/user_post_container_left_margin">

        <ImageView
            android:id="@+id/user_pic"
            android:layout_width="@dimen/like_list_user_pic_size"
            android:layout_height="@dimen/like_list_user_pic_size" />

        <ImageView
            android:id="@+id/user_badge"
            android:layout_width="@dimen/like_list_user_badge_size"
            android:layout_height="@dimen/like_list_user_badge_size"
            android:layout_gravity="end|bottom"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/user_pic_container"
        android:layout_toRightOf="@id/user_pic_container"
        android:lineSpacingExtra="@dimen/like_list_user_name_linespace"
        android:textColor="@color/comment_text"
        android:textSize="14sp"
        tools:text="Champa Roy" />
</RelativeLayout>

