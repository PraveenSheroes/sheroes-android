<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/community_card_view"
    android:layout_width="@dimen/dp_size_300"
    android:layout_height="212dp"
    android:layout_margin="@dimen/dp_size_12"
    android:elevation="@dimen/dp_size_5">

    <LinearLayout
        android:background="@color/carousel_card_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/feature_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_size_150"
            tools:src="@drawable/vector_empty_winner" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_10"
            android:layout_marginStart="@dimen/dp_size_10"
            android:layout_marginBottom="@dimen/dp_size_8"
            android:layout_marginTop="@dimen/dp_size_12">

            <TextView
                android:id="@+id/community_join"
                android:layout_width="@dimen/dp_size_78"
                android:layout_height="@dimen/dp_size_30"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_size_16"
                android:layout_marginLeft="@dimen/dp_size_16"
                android:layout_marginRight="@dimen/dp_size_16"
                android:layout_marginStart="@dimen/dp_size_16"
                android:gravity="center"
                android:textAllCaps="true"
                android:letterSpacing="0.07"
                android:textColor="@color/footer_icon_text"
                android:textSize="@dimen/sp_size_14"
                tools:text="@string/ID_JOIN" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@id/community_join"
                android:layout_toStartOf="@id/community_join">

                <appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView
                    android:id="@+id/community_icon"
                    android:layout_width="@dimen/dp_size_40"
                    android:layout_marginLeft="@dimen/dp_size_9"
                    android:layout_marginStart="@dimen/dp_size_9"
                    android:layout_height="@dimen/dp_size_40"
                    tools:src="@drawable/ic_champion_avatar" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_size_5"
                    android:layout_marginLeft="@dimen/dp_size_5"
                    android:layout_marginRight="@dimen/dp_size_5"
                    android:layout_marginStart="@dimen/dp_size_5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/community_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/ID_ROBOTO_REGULAR"
                        android:letterSpacing="0.04"
                        android:maxLines="@integer/int_value_for_line_1"
                        android:ellipsize="end"
                        android:textColor="@color/comment_text"
                        android:textSize="@dimen/sp_size_15"
                        tools:text="Health Tips" />


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/icon"
                            android:src="@drawable/ic_member_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <TextView
                            android:layout_toRightOf="@id/icon"
                            android:layout_toEndOf="@id/icon"
                            android:layout_marginTop="@dimen/dp_size_1"
                            android:layout_marginStart="@dimen/dp_size_8"
                            android:layout_marginLeft="@dimen/dp_size_8"
                            android:gravity="center"
                            android:id="@+id/community_member_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@string/ID_ROBOTO_REGULAR"
                            android:maxLines="@integer/int_value_for_line_1"
                            android:textColor="@color/recent_post_comment"
                            android:textSize="@dimen/sp_size_14"
                            tools:text="47889 Members" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>