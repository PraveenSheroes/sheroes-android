<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/dp_size_2"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/dp_size_5"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView
                android:id="@+id/iv_community_icon"
                android:layout_width="@dimen/dp_size_50"
                android:layout_height="@dimen/dp_size_50"
                android:src="@drawable/ic_footer_button_icon" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_5"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_dashboard_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/ID_ROBOTO_BOLD"
                    android:text="@string/ID_ERROR_FIELD_REQUIRED"
                    android:textColor="@color/feed_article_label"
                    android:textSize="@dimen/sp_size_14"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_dashboard_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:text="Local group"
                    android:textColor="@color/footer_icon_text"
                    android:textSize="@dimen/sp_size_12" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_dashboard_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_search_group_icon" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_post_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_size_5"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:lineSpacingExtra="@dimen/dp_size_3"
            android:lines="2"
            android:text="@string/ID_DASHBOARD"
            android:textColor="@color/feed_article_label"
            android:textSize="@dimen/sp_size_13" />

        <LinearLayout
            android:id="@+id/li_feed_community_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" />
        <LinearLayout
            android:id="@+id/li_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_size_10"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_tag_lable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".78"
                android:textSize="@dimen/sp_size_12"
                android:textColor="@color/feed_article_label"
                android:text="Tag: Health,Education" />

            <TextView
                android:id="@+id/tv_join"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:text="@string/ID_JOIN"
                android:gravity="center"
                android:background="@drawable/rectangle_feed_commnity_join"
                android:textColor="@color/footer_icon_text"
                android:textSize="@dimen/sp_size_12" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/li_user_reactions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_size_15"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_user_reaction"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:drawableLeft="@drawable/ic_heart_in_active" />

            <TextView
                android:id="@+id/tv_user_comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:drawableLeft="@drawable/ic_heart_active" />

            <TextView
                android:id="@+id/tv_user_bookmark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:drawableRight="@drawable/ic_bookmark_active" />

            <TextView
                android:id="@+id/tv_user_menu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:drawableRight="@drawable/ic_menu_dashboard" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_size_10"
            android:layout_gravity="right">

            <TextView
                android:id="@+id/tv_reaction_type1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_emoji1" />

            <TextView
                android:id="@+id/tv_reaction_type2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_emoji2"
                android:paddingLeft="@dimen/dp_size_15" />

            <TextView
                android:id="@+id/tv_reaction_type3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_emoji3"
                android:drawablePadding="@dimen/dp_size_30"
                android:paddingLeft="@dimen/dp_size_30"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:textColor="@color/feed_article_comment"
                android:textSize="@dimen/sp_size_11"
                android:text="53 reactions" />

            <TextView
                android:id="@+id/tv_total_replies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:textColor="@color/feed_article_comment"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:textSize="@dimen/sp_size_11"
                android:text="8 replies" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/li_user_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_size_10"
            android:weightSum="1">

            <appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView
                android:id="@+id/iv_user_pic"
                android:layout_width="@dimen/dp_size_27"
                android:layout_height="@dimen/dp_size_27"
                android:src="@drawable/ic_footer_button_icon" />

            <TextView
                android:id="@+id/tv_user_comment_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:padding="@dimen/dp_size_5"
                android:text="@string/IDS_STR_NETWORK_TIME_OUT_DESCRIPTION"
                android:textSize="@dimen/sp_size_12"
                android:textStyle="bold" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_size_1"
            android:background="@color/search_tab_unselected_text"/>
        <LinearLayout
            android:id="@+id/li_feed_community_join_conversation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_size_10"
            android:weightSum="1">

            <appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView
                android:id="@+id/iv_register_user_pic"
                android:layout_width="@dimen/dp_size_27"
                android:layout_height="@dimen/dp_size_27"
                android:src="@drawable/ic_footer_button_icon" />

            <TextView
                android:id="@+id/tv_register_user_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:padding="@dimen/dp_size_5"
                android:text="@string/ID_ERROR_INVALID_EMAIL"
                android:textSize="@dimen/sp_size_12"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>