<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/dp_size_5">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_size_32"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_size_16"
            android:layout_marginBottom="@dimen/dp_size_16"
            android:background="@color/grey8"
            android:weightSum="@integer/int_value_for_line_1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".33">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_size_8"
                    android:layout_marginLeft="@dimen/dp_size_16"
                    android:layout_marginTop="@dimen/dp_size_8"
                    android:src="@drawable/ic_mentor_profession" />

                <TextView
                    android:id="@+id/tv_feed_mentor_first_profession"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_size_8"
                    android:layout_marginLeft="@dimen/dp_size_8"
                    android:layout_marginTop="@dimen/dp_size_8"
                    android:drawablePadding="@dimen/dp_size_6"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:text="XXXXXXXXXXXXXX"
                    android:textColor="@color/mentor_profession"
                    android:textSize="@dimen/sp_size_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".33">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_size_8"
                    android:layout_marginLeft="@dimen/dp_size_8"
                    android:layout_marginTop="@dimen/dp_size_8"
                    android:src="@drawable/ic_mentor_profession" />

                <TextView
                    android:id="@+id/tv_feed_mentor_second_profession"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_size_8"
                    android:layout_marginLeft="@dimen/dp_size_8"
                    android:layout_marginTop="@dimen/dp_size_8"
                    android:drawablePadding="@dimen/dp_size_6"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:text="XXXXXXXXXXXXXX"
                    android:textColor="@color/mentor_profession"
                    android:textSize="@dimen/sp_size_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_size_16"
                android:layout_weight=".3">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_size_8"
                    android:layout_marginLeft="@dimen/dp_size_8"
                    android:layout_marginTop="@dimen/dp_size_8"
                    android:src="@drawable/ic_mentor_profession" />

                <TextView
                    android:id="@+id/tv_feed_mentor_third_profession"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_size_8"
                    android:layout_marginLeft="@dimen/dp_size_8"
                    android:layout_marginTop="@dimen/dp_size_8"
                    android:drawablePadding="@dimen/dp_size_6"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:text="XXXXXXXXXXXXXX"
                    android:textColor="@color/mentor_profession"
                    android:textSize="@dimen/sp_size_14" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_mentor_loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXXXXXXX"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_size_16"
            android:textSize="@dimen/sp_size_14"
            android:drawableLeft="@drawable/ic_mentor_profession"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:textColor="@color/grey_600"/>
        <TextView
            android:id="@+id/tv_mentor_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXXXXXXX"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_size_16"
            android:layout_marginLeft="@dimen/dp_size_16"
            android:textSize="@dimen/sp_size_14"
            android:drawableLeft="@drawable/ic_mentor_profession"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:textColor="@color/grey_600"/>
        <TextView
            android:id="@+id/tv_mentor_website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXXXXXXX"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_size_16"
            android:layout_marginLeft="@dimen/dp_size_16"
            android:textSize="@dimen/sp_size_14"
            android:drawableLeft="@drawable/ic_mentor_profession"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:textColor="@color/grey_600"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_size_16"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_comma1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/iv_comma2"
                android:layout_toRightOf="@+id/iv_comma2"
                android:background="@drawable/ic_shape" />

            <ImageView
                android:id="@+id/iv_comma2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="19dp"
                android:layout_marginStart="19dp"
                android:background="@drawable/ic_shape" />

            <TextView
                android:id="@+id/tv_mentor_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/iv_comma2"
                android:layout_alignStart="@+id/iv_comma2"
                android:layout_below="@+id/iv_comma1"
                android:layout_marginLeft="@dimen/dp_size_16"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:text="XXXXXXXXXXXXXXXXXXXX"
                android:textColor="@color/mentor_profession"
                android:maxLines="8"
                android:ellipsize="end"
                android:textSize="@dimen/sp_size_14"
                android:textStyle="italic" />

        </RelativeLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>
