<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_community_post"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="beforeDescendants"
            android:orientation="vertical">

            <include
                layout="@layout/community_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_8"/>

            <appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView
                android:id="@+id/iv_community_post_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_size_20"
                android:padding="@dimen/dp_size_5"
                android:scaleType="fitXY"
                android:src="@drawable/ic_community_post" />


            <TextView
                android:id="@+id/txt_choose_community_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_size_38"
                android:layout_marginTop="@dimen/dp_size_10"
                android:drawableRight="@drawable/drop_down_shap"
                android:ellipsize="end"
                android:gravity="center"
                android:hint="@string/ID_CHOOSE_COMMUNITY"
                android:maxLines="1"
                android:padding="@dimen/dp_size_10"
                android:textSize="@dimen/sp_size_14" />


            <TextView
                android:id="@+id/text1"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_size_1"
                android:layout_marginLeft="@dimen/dp_size_38"
                android:layout_marginRight="@dimen/dp_size_38"
                android:layout_marginTop="@dimen/dp_size_20"
                android:background="@color/line_color" />

            <LinearLayout
                android:id="@+id/l2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/r1"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_size_25"
                android:gravity="center">

                <HorizontalScrollView
                    android:id="@+id/hor_scroll_for_community_post_images"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/lnr_image_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_size_20"
                        android:orientation="horizontal" />
                </HorizontalScrollView>

                <FrameLayout
                    android:id="@+id/fl_camera_btn_for_post_images"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_size_30"
                    android:background="@drawable/rectangle_shap">

                    <ImageView
                        android:id="@+id/iv_camera_btn_for_post_images"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/ic_camera_icon_with_rectangle"

                        />
                </FrameLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_add_more_community_post_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/dp_size_38"
                android:layout_marginRight="@dimen/dp_size_38"
                android:paddingTop="@dimen/dp_size_10"
                android:text="@string/ID_ADDMORE"
                android:textColor="@color/blue"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/li_user_comment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_size_80"
                android:layout_marginTop="@dimen/dp_size_8"
                android:gravity="bottom"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/li_edit_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_size_8"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/et_share_community_post_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/fully_transparent"
                            android:fontFamily="@string/ID_ROBOTO_REGULAR"
                            android:hint="@string/ID_SHARE_WITH_COMMUNITY"
                            android:inputType="textCapSentences|textMultiLine"
                            android:lineSpacingExtra="@dimen/dp_size_4"
                            android:maxLength="4000"
                            android:layout_marginLeft="@dimen/dp_size_30"
                            android:minHeight="@dimen/dp_size_48"
                            android:textColor="@color/black"
                            android:textColorHint="@color/user_comment_text"
                            android:textSize="@dimen/sp_size_12"
                            android:windowSoftInputMode="stateHidden" />

                    </FrameLayout>


                    <TextView
                        android:id="@+id/txt_counter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/et_share_community_post_text"
                        android:layout_gravity="bottom"
                        android:fontFamily="@string/ID_ROBOTO_LIGHT"
                        android:textColor="@color/dashboard_fed_text"
                        android:textSize="@dimen/sp_size_10" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/li_link_render"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_link_thumbnail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:src="@drawable/gallery"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/dp_size_10"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_link_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello jjjdddddddddd"
                        android:textColor="@color/pure_black"
                        android:fontFamily="@string/ID_ROBOTO_REGULAR"
                        android:textSize="@dimen/sp_size_14"/>
                    <TextView
                        android:id="@+id/tv_link_sub_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_size_6"
                        android:fontFamily="@string/ID_ROBOTO_REGULAR"
                        android:text="subtitlekkdkkdkdk kkkdkd"
                        android:textSize="@dimen/sp_size_12"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_size_0.7"
                android:layout_marginLeft="@dimen/dp_size_38"
                android:layout_marginRight="@dimen/dp_size_38"
                android:layout_marginTop="@dimen/dp_size_5"
                android:background="@color/grey2" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_38"
                android:layout_marginRight="@dimen/dp_size_38"
                android:layout_marginTop="@dimen/dp_size_15"
                android:text="@string/ID_POST"
                android:textColor="@color/text_color_close"
                android:textSize="@dimen/sp_size_12"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_size_20"
                android:layout_marginRight="@dimen/dp_size_20"
                android:layout_marginTop="@dimen/dp_size_20"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lnr_community_post"
                    android:layout_width="@dimen/dp_size_75"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView
                            android:id="@+id/iv_community_user"
                            android:layout_width="@dimen/dp_size_35"
                            android:layout_height="@dimen/dp_size_35" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_community_poster_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLength="10"
                        android:text="@string/ID_NAME"
                        android:textAllCaps="true"
                        android:textSize="@dimen/sp_size_12" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnr_community_post1"
                    android:layout_width="@dimen/dp_size_75"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_size_20"
                    android:layout_toRightOf="@+id/lnr_community_post"
                    android:gravity="center"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView
                            android:id="@+id/iv_community_owner"
                            android:layout_width="@dimen/dp_size_35"
                            android:layout_height="@dimen/dp_size_35" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_community_owner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:lines="@integer/int_value_for_line_1"
                        android:paddingLeft="@dimen/dp_size_4"
                        android:text="@string/ID_COMMUNITIY"
                        android:textAllCaps="true"
                        android:textColor="@color/searchbox_text_color"
                        android:textSize="@dimen/sp_size_12" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnr_community_post2"
                    android:layout_width="@dimen/dp_size_75"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_size_20"
                    android:layout_toRightOf="@+id/lnr_community_post1"
                    android:gravity="center"

                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView
                            android:id="@+id/iv_community_anonymous"
                            android:layout_width="@dimen/dp_size_35"
                            android:layout_height="@dimen/dp_size_35"
                            android:background="@drawable/ic_anonomous" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_community_anonomous"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLength="10"
                        android:text="@string/ID_ANONYMOUS"
                        android:textAllCaps="true"
                        android:textColor="@color/searchbox_text_color"
                        android:textSize="@dimen/sp_size_12" />
                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_community_post_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_size_45"
                android:layout_marginBottom="@dimen/dp_size_10"
                android:layout_marginLeft="@dimen/dp_size_45"
                android:layout_marginRight="@dimen/dp_size_45"
                android:layout_marginTop="@dimen/dp_size_25"
                android:background="@drawable/rectangle_btn"
                android:gravity="center"
                android:textAllCaps="true"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/progress_bar_login" />
</FrameLayout>