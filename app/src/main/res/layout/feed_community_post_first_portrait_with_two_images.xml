<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_feed_community_post_first_portrait_side_two_image"
        android:layout_width="@dimen/dp_size_200"
        android:layout_height="@dimen/dp_size_330"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_size_3"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_feed_community_post_second_portrait_side_two_image"
            android:layout_width="@dimen/dp_size_160"
            android:layout_height="@dimen/dp_size_165"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/iv_feed_community_post_third_portrait_side_two_image"
            android:layout_width="@dimen/dp_size_160"
            android:layout_height="@dimen/dp_size_165"
            android:layout_marginTop="@dimen/dp_size_1"
            android:scaleType="centerCrop" />

    </LinearLayout>
</LinearLayout>
