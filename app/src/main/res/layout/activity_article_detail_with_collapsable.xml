<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_article_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fully_transparent"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <appliedlife.pvtltd.SHEROES.views.cutomeviews.CustomeCollapsableToolBar.CustomCollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_article_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:collapsedTitleTextAppearance="@style/title.collapsed"
            app:contentScrim="@color/colorAccent"
            app:expandedSubtitleAppearance="@style/subtitle"
            app:expandedTitleGravity="bottom|center_horizontal"
            app:expandedTitleTextAppearance="@style/title.expanded"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <appliedlife.pvtltd.SHEROES.views.cutomeviews.SquareImageView
                android:id="@+id/iv_article_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                app:layout_collapseMode="parallax" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom">

                <TextView
                    android:id="@+id/tv_article_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_timer_icon"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:paddingLeft="@dimen/dp_size_16"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_size_12" />

                <TextView
                    android:id="@+id/tv_article_detail_total_views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="@dimen/dp_size_10"
                    android:layout_marginRight="@dimen/dp_size_16"
                    android:alpha=".8"
                    android:background="@drawable/rectangle_detail_round"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:paddingBottom="@dimen/dp_size_5"
                    android:paddingLeft="@dimen/dp_size_15"
                    android:paddingRight="@dimen/dp_size_15"
                    android:paddingTop="@dimen/dp_size_5"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_size_10" />
            </FrameLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_article_detail"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="right"
                android:gravity="right"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <TextView
                    android:id="@+id/tv_article_detail_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|top"
                    android:layout_marginRight="@dimen/dp_size_20"
                    android:drawableLeft="@drawable/ic_back_white"
                    android:padding="@dimen/dp_size_10" />

                <LinearLayout
                    android:id="@+id/li_header"
                    android:layout_width="@dimen/dp_size_212"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_article_detail_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                        android:gravity="center"
                        android:lines="@integer/int_value_for_line_1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_size_14" />

                    <TextView
                        android:id="@+id/tv_article_detail_subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/ID_ROBOTO_REGULAR"
                        android:gravity="center"
                        android:lines="@integer/int_value_for_line_1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_size_12" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_article_detail_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/dp_size_5"
                    android:drawableRight="@drawable/ic_share_icon"
                    android:padding="@dimen/dp_size_10"
                    app:cardElevation="@dimen/dp_size_10" />

                <TextView
                    android:id="@+id/tv_article_detail_bookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_size_5"
                    android:drawableLeft="@drawable/ic_bookmark_detail_white"
                    android:padding="@dimen/dp_size_10"
                    app:cardElevation="@dimen/dp_size_10" />
            </android.support.v7.widget.Toolbar>

        </appliedlife.pvtltd.SHEROES.views.cutomeviews.CustomeCollapsableToolBar.CustomCollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_article_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_size_10"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />


</android.support.design.widget.CoordinatorLayout>