<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <appliedlife.pvtltd.SHEROES.views.cutomeviews.SquareImageView
            android:id="@+id/iv_profile_full_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:layout_collapseMode="parallax" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/home_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_size_65"
            android:background="@color/text_color_close"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <include
                android:id="@+id/rl_search_box"
                layout="@layout/home_search_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top" />
        </android.support.v7.widget.Toolbar>

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_community_view"
            style="@style/NavigationTabTextAppeareance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:tabIndicatorColor="@color/footer_icon_text"
            app:tabIndicatorHeight="@dimen/dp_size_5"
            app:tabSelectedTextColor="@color/footer_icon_text"
            app:tabTextColor="@color/search_tab_unselected_text" />
        <RelativeLayout
            android:id="@+id/li_article_spinner_icon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_size_40"
            android:background="@color/white"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_catagory_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_size_50"
                android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                android:gravity="center"
                android:text="@string/ID_CHOOSE_CATEGORY"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_size_13" />

            <TextView
                android:id="@+id/tv_catagory_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:gravity="center"
                android:lines="@integer/int_value_for_line_2"
                android:ellipsize="end"
                android:textColor="@color/suggested_text"
                android:textSize="@dimen/sp_size_13" />

            <ImageView
                android:id="@+id/iv_spinner_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_size_20"
                android:src="@drawable/ic_spinner_icon" />
        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>
    <!--  <include layout="@layout/fragment_container" />-->
    <android.support.v4.view.ViewPager
        android:id="@+id/home_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <include
        android:id="@+id/fl_feed_full_view"
        layout="@layout/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <include
        android:id="@+id/fl_article_card_view"
        layout="@layout/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <include
        android:id="@+id/li_home_community_button_layout"
        layout="@layout/home_community_button_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="@dimen/dp_size_65"
        android:visibility="gone" />

    <include
        layout="@layout/home_listing_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom" />
</android.support.design.widget.CoordinatorLayout>
