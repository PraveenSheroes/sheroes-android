<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ractangle_welcome_footer_"
        android:layout_marginTop="@dimen/dp_size_150"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_hey_success_next"
            android:layout_width="@dimen/dp_size_54"
            android:layout_height="@dimen/dp_size_54"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_size_20"
            android:src="@drawable/ic_male_gender" />
        <TextView
            android:id="@+id/tv_message"
            android:layout_width="@dimen/dp_size_250"
            android:layout_height="wrap_content"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:text="@string/ID_FACEBOOK_ERROR"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_size_25"
            android:lineSpacingExtra="@dimen/dp_size_5"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_size_13" />

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/ID_OK"
            android:layout_gravity="right"
            android:padding="@dimen/dp_size_14"
            android:layout_marginRight="@dimen/dp_size_70"
            android:textAllCaps="true"
            android:textColor="@color/blue"
            android:textSize="@dimen/sp_size_14" />

    </LinearLayout>
</LinearLayout>
