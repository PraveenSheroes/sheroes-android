<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:drawableLeft="@drawable/ic_cross"
        android:padding="@dimen/dp_size_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_hey_success_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_male_gender" />

        <ImageView
            android:id="@+id/iv_women_error"
            android:layout_width="@dimen/dp_size_54"
            android:layout_height="@dimen/dp_size_54"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_size_20"
            android:src="@drawable/ic_women_error_dilog"
            android:visibility="gone" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_size_8"
            android:layout_marginRight="@dimen/dp_size_16"
            android:layout_marginLeft="@dimen/dp_size_16"
            android:fontFamily="@string/ID_ROBOTO_MEDIUM"
            android:lineSpacingExtra="@dimen/dp_size_5"
            android:text="Oops!!"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/comment_text"
            android:textSize="@dimen/sp_size_18" />
        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_size_8"
            android:layout_marginRight="@dimen/dp_size_16"
            android:layout_marginLeft="@dimen/dp_size_16"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:lineSpacingExtra="@dimen/dp_size_5"
            android:text="Oops!! Sheroes is a women only platform. Facebook says you are a Gentleman"
            android:textAlignment="center"
            android:textColor="@color/recent_post_comment"
            android:textSize="@dimen/sp_size_16" />
    </LinearLayout>
</LinearLayout>
