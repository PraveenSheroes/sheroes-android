<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:vernacular="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/helpline_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/date_stamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/helpline_date_marginBottom"
        android:layout_marginTop="@dimen/helpline_date_marginTop"
        android:background="@drawable/helpline_datestamp"
        android:paddingBottom="@dimen/helpline_date_paddingTopBottom"
        android:paddingLeft="@dimen/helpline_date_paddingLeftRight"
        android:paddingRight="@dimen/helpline_date_paddingLeftRight"
        android:paddingTop="@dimen/helpline_date_paddingTopBottom"
        android:text="DATE"
        android:textSize="@dimen/helpline_date_textsize" />

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/helpline_outer_layout_padding">

        <FrameLayout
            android:layout_marginBottom="@dimen/attendant_image_marginBottom"
            android:id="@+id/fl_profile_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView
                android:id="@+id/iv_mentor_full_view_icon"
                android:layout_width="@dimen/attendant_image_height_width"
                android:layout_height="@dimen/attendant_image_height_width" />
        </FrameLayout>

        <RelativeLayout
            android:layout_marginLeft="@dimen/helpline_que_marginLeft"
            android:layout_marginRight="@dimen/helpline_que_marginRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/LinearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/incoming_shap"
                android:orientation="vertical"
                android:shadowColor="@color/green"
                android:padding="@dimen/helpline_qa_padding">

                <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
                    android:id="@+id/attendant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_horizontal"
                    android:textAllCaps="false"
                    android:textColor="@color/gray_light"
                    style="@style/TextView12spRegular"
                    vernacular:customTextFontFamily="@string/regular_font" />

                <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
                    android:id="@+id/answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:focusable="true"
                    android:gravity="left|center_horizontal"
                    android:linksClickable="true"
                    android:longClickable="true"
                    android:minHeight="@dimen/help_card_min_height"
                    android:textAllCaps="false"
                    android:textColor="@color/comment_text"
                    android:textColorLink="@color/view_more"
                    android:textIsSelectable="true"
                    vernacular:customTextFontFamily="@string/regular_font" />

        <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
                    android:id="@+id/time_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/LinearLayout2"
                    android:layout_marginTop="@dimen/helpline_time_marginTop"
                    android:textAllCaps="false"
                    android:textColor="@color/helpline_text_time_color"
                    android:textSize="@dimen/helpline_time_text_size"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:textAlignment="gravity"
                    android:maxLines="@integer/int_value_for_line_1"/>

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/rate_us_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:minWidth="@dimen/helpline_rateusImage_width"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/helpline_rateusImage_height"
            android:layout_marginBottom="@dimen/helpline_rateusImage_paddingBottom"
            android:layout_marginTop="@dimen/helpline_rateusImage_paddingTop"
            android:layout_gravity="center"
            android:src="@drawable/ic_rateus"
            android:scaleType="fitCenter" />

        <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@string/bold_font"
            android:gravity="center"
            android:paddingBottom="@dimen/helpline_rateusTitle_paddingBottom"
            android:text="@string/helpline_rateus_title"
            android:textColor="@color/tab_text"
            style="@style/TextView18spRegular"  />

        <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@string/bold_font"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/helpline_rateus_body_lineSpacingExtra"
            android:paddingBottom="@dimen/helpline_rateus_body_paddingBottom"
            android:text="@string/helpline_rateus_body"
            style="@style/TextView14spRegular" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/helpline_buttonsLayout_marginBottom"
            android:gravity="center"
            android:orientation="horizontal">

            <appliedlife.pvtltd.SHEROES.vernacular.FontButton
                android:id="@+id/rate_us"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/helpline_rateusButton_marginRight"
                android:background="@drawable/rectangle_helpline_rate_us"
                android:text="@string/rate_us"
                android:textAllCaps="true"
                android:textColor="@color/helpline_question_text" />

            <appliedlife.pvtltd.SHEROES.vernacular.FontButton
                android:id="@+id/not_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_helpline_not_now"
                android:text="@string/not_now"
                android:textAllCaps="true" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>