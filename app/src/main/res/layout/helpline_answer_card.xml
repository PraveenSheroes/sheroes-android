<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:vernacular="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/helpline_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/date_stamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/helpline_date_marginBottom"
        android:layout_marginTop="@dimen/helpline_date_marginTop"
        android:background="@drawable/helpline_datestamp"
        android:paddingBottom="@dimen/helpline_date_paddingTopBottom"
        android:paddingLeft="@dimen/helpline_date_paddingLeftRight"
        android:paddingRight="@dimen/helpline_date_paddingLeftRight"
        android:paddingTop="@dimen/helpline_date_paddingTopBottom"
        android:text="DATE"
        android:textSize="@dimen/helpline_date_textsize" />

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/helpline_outer_layout_padding">

        <FrameLayout
            android:layout_marginBottom="@dimen/dp_size_16"
            android:id="@+id/fl_profile_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView
                android:id="@+id/iv_mentor_full_view_icon"
                android:layout_width="44dp"
                android:layout_height="44dp" />
        </FrameLayout>

        <RelativeLayout
            android:layout_marginLeft="@dimen/sp_size_8"
            android:layout_marginRight="@dimen/dp_size_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/LinearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/incoming_shap"
                android:orientation="vertical"
                android:shadowColor="@color/green"
                android:padding="@dimen/dp_size_16">

                <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
                    android:id="@+id/answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:focusable="true"
                    android:gravity="left|center_horizontal"
                    android:linksClickable="true"
                    android:longClickable="true"
                    android:minHeight="@dimen/help_card_min_height"
                    android:textAllCaps="false"
                    android:textColor="@color/helpline_answer_text"
                    android:textColorLink="@color/view_more"
                    android:textIsSelectable="true"
                    vernacular:customTextFontFamily="@string/regular_font" />

        <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
                    android:id="@+id/time_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/LinearLayout2"
                    android:layout_marginTop="@dimen/helpline_time_marginTop"
                    android:textAllCaps="false"
                    android:textColor="@color/helpline_answer_text"
                    android:textSize="@dimen/helpline_time_text_size"
                    android:gravity="right"
                    android:textAlignment="gravity"
                    android:maxLines="@integer/int_value_for_line_1"/>

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>