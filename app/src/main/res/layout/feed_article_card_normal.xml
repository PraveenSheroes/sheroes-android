<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_size_10"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_size_12"
        android:layout_marginTop="@dimen/dp_size_16"
        android:gravity="top"
        android:orientation="horizontal"
        android:weightSum="1">

        <appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView
            android:id="@+id/iv_feed_article_card_circle_icon"
            android:layout_width="@dimen/feed_profile_icon_size"
            android:layout_height="@dimen/feed_profile_icon_size"
            android:layout_gravity="top" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_8"
            android:layout_marginRight="@dimen/dp_size_10"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_feed_article_card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                android:textColor="@color/comment_text"
                android:textSize="@dimen/sp_size_12" />

            <TextView
                android:id="@+id/tv_feed_article_title_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_3"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:textColor="@color/feed_card_time"
                android:textSize="@dimen/sp_size_12"  />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_feed_article_user_bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_bookmark_in_active"
            android:paddingBottom="@dimen/dp_size_10"
            android:paddingLeft="@dimen/dp_size_14"
            android:paddingTop="@dimen/dp_size_5"
            android:paddingRight="@dimen/dp_size_20"/>

        <TextView
            android:id="@+id/tv_feed_article_user_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:drawableRight="@drawable/ic_menu_dashboard"
            android:paddingBottom="@dimen/dp_size_10"
            android:paddingTop="@dimen/dp_size_5"
            android:paddingLeft="@dimen/dp_size_14"
            android:paddingRight="@dimen/sp_size_24"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/li_feed_article_images"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_180"
        android:layout_marginTop="@dimen/dp_size_8"
        android:layout_marginRight="@dimen/dp_size_16"
        android:layout_marginLeft="@dimen/dp_size_16"
        android:background="@drawable/ic_image_holder"
        android:orientation="vertical" />
    <TextView
        android:id="@+id/tv_feed_article_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_size_16"
        android:layout_marginRight="@dimen/dp_size_16"
        android:layout_marginTop="@dimen/dp_size_8"
        android:fontFamily="@string/ID_ROBOTO_MEDIUM"
        android:lineSpacingExtra="@dimen/dp_size_3"
        android:lines="4"
        android:maxLines="4"
        android:minLines="1"
        android:textColor="@color/feed_article_label"
        android:textSize="@dimen/sp_size_16" />

    <TextView
        android:id="@+id/tv_feed_article_header_lebel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_size_16"
        android:layout_marginRight="@dimen/dp_size_16"
        android:layout_marginTop="@dimen/dp_size_8"
        android:fontFamily="@string/ID_ROBOTO_REGULAR"
        android:lineSpacingExtra="@dimen/dp_size_3"
        android:maxLines="@integer/int_value_for_line_4"
        android:textColor="@color/recent_post_comment"
        android:textSize="@dimen/sp_size_14" />

    <TextView
        android:id="@+id/tv_feed_article_view_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/dp_size_25"
        android:layout_marginTop="-10dp"
        android:background="@color/white"
        android:fontFamily="@string/ID_ROBOTO_REGULAR"
        android:gravity="right"
        android:visibility="gone"
        android:text="@string/ID_VIEW_MORE"
        android:textColor="@color/view_more"
        android:textSize="@dimen/sp_size_14" />
    <RelativeLayout
        android:id="@+id/rl_feed_article_no_reaction_comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_size_16"
        android:layout_marginRight="@dimen/dp_size_16"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_size_16">

        <TextView
            android:id="@+id/tv_feed_article_reaction1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_likes_heart" />

        <TextView
            android:id="@+id/tv_feed_article_total_reactions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dp_size_8"
            android:layout_marginStart="@dimen/dp_size_8"
            android:layout_toEndOf="@id/tv_feed_article_reaction1"
            android:layout_toRightOf="@id/tv_feed_article_reaction1"
            android:fontFamily="@string/ID_ROBOTO_MEDIUM"
            android:textColor="@color/feed_card_time"
            android:textSize="@dimen/sp_size_12" />

        <TextView
            android:id="@+id/tv_feed_article_total_replies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@string/ID_ROBOTO_MEDIUM"
            android:textColor="@color/feed_card_time"
            android:textSize="@dimen/sp_size_12" />
    </RelativeLayout>


    <View
        android:id="@+id/line_for_no_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_0.5"
        android:layout_marginLeft="@dimen/dp_size_16"
        android:layout_marginRight="@dimen/dp_size_16"
        android:layout_marginTop="@dimen/dp_size_8"
        android:background="@color/feed_card_time" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_size_8"
        android:layout_marginRight="@dimen/dp_size_6"
        android:layout_marginTop="@dimen/dp_size_6"
        android:clickable="false"
        android:orientation="horizontal"
        android:saveEnabled="false">

        <TextView
            android:id="@+id/tv_feed_article_user_reaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_heart_in_active"
            android:drawablePadding="@dimen/dp_size_8"
            android:fontFamily="@string/ID_ROBOTO_MEDIUM"
            android:gravity="center"
            android:padding="@dimen/dp_size_10"
            android:text="@string/ID_LIKE"
            android:textColor="@color/recent_post_comment"
            android:textSize="@dimen/sp_size_14"/>

        <TextView
            android:id="@+id/tv_feed_article_user_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_feed_article_user_comment"
            android:layout_alignBottom="@+id/tv_feed_article_user_comment"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/ic_share_card"
            android:drawablePadding="@dimen/dp_size_8"
            android:fontFamily="@string/ID_ROBOTO_MEDIUM"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_size_10"
            android:paddingLeft="@dimen/dp_size_10"
            android:paddingRight="@dimen/dp_size_10"
            android:paddingTop="@dimen/dp_size_7"
            android:text="@string/ID_SHARE_ON_WHATS_APP"
            android:textColor="@color/share_color"
            android:textSize="@dimen/sp_size_14"   />

        <TextView
            android:id="@+id/tv_feed_article_user_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_card_share"
            android:layout_marginRight="@dimen/margin_card_share"
            android:layout_toLeftOf="@id/tv_feed_article_user_share"
            android:layout_toStartOf="@id/tv_feed_article_user_share"
            android:drawableLeft="@drawable/ic_comment_icon"
            android:drawablePadding="@dimen/dp_size_8"
            android:fontFamily="@string/ID_ROBOTO_MEDIUM"
            android:layout_centerHorizontal="true"
            android:paddingBottom="@dimen/dp_size_10"
            android:paddingLeft="@dimen/dp_size_10"
            android:paddingRight="@dimen/dp_size_10"
            android:paddingTop="@dimen/dp_size_10"
            android:text="@string/comment"
            android:textColor="@color/recent_post_comment"
            android:textSize="@dimen/sp_size_14" />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/li_feed_article_user_comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_size_16"
        android:layout_marginRight="@dimen/dp_size_6"
        android:layout_marginTop="@dimen/dp_size_18"
        android:orientation="horizontal"
        android:weightSum="1">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView
                android:id="@+id/iv_feed_article_user_pic"
                android:layout_width="@dimen/comment_icon"
                android:layout_height="@dimen/comment_icon" />

            <ImageView
                android:id="@+id/iv_feed_article_user_verified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_marginLeft="@dimen/dp_size_15"
                android:layout_marginTop="@dimen/dp_size_15"
                android:background="@drawable/ic_verified"
                android:visibility="gone" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/int_value_for_line_1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_feed_article_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_10"
                android:ellipsize="end"
                android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                android:lineSpacingExtra="@dimen/dp_size_3"
                android:maxLines="@integer/int_value_for_line_2"
                android:textColor="@color/comment_text"
                android:textSize="@dimen/sp_size_12" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_size_10"
                android:layout_marginRight="@dimen/dp_size_5"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_feed_article_user_comment_post"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:maxLines="@integer/int_value_for_line_3"
                    android:lineSpacingExtra="@dimen/dp_size_3"
                    android:textColor="@color/comment_text"
                    android:textSize="@dimen/sp_size_12" />
                <TextView
                    android:id="@+id/tv_feed_article_user_comment_post_view_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ID_VIEW_MORE"
                    android:background="@color/white"
                    android:visibility="gone"
                    android:layout_marginBottom="@dimen/dp_size_2"
                    android:layout_gravity="bottom|right"
                    android:textColor="@color/view_more"/>
            </FrameLayout>

            <TextView
                android:id="@+id/tv_feed_article_comment_post_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_10"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:textColor="@color/recent_post_comment"
                android:textSize="@dimen/sp_size_12" />





        </LinearLayout>

        <TextView
            android:id="@+id/tv_feed_article_user_comment_post_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:drawableRight="@drawable/ic_menu_dashboard"
            android:paddingLeft="@dimen/dp_size_10"
            android:paddingRight="@dimen/dp_size_14"
            android:paddingTop="@dimen/dp_size_5"
            android:paddingBottom="@dimen/dp_size_20"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_feed_article_join_conversation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/join_conversation"
        android:layout_marginTop="@dimen/dp_size_10"
        android:orientation="horizontal"
        android:weightSum="1">

        <FrameLayout
            android:id="@+id/fl_login_user"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/dp_size_16"
            android:layout_height="wrap_content">

            <appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView
                android:id="@+id/iv_feed_article_login_user_pic"
                android:layout_width="@dimen/comment_icon"
                android:layout_height="@dimen/comment_icon"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp" />
            <ImageView
                android:id="@+id/iv_feed_article_login_user_icon_verified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_marginLeft="@dimen/dp_size_15"
                android:layout_marginTop="@dimen/dp_size_15"
                android:background="@drawable/ic_verified"
                android:visibility="gone" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/fl_login_user"
            android:layout_marginLeft="@dimen/dp_size_10"
            android:layout_marginTop="@dimen/dp_size_16"
            android:layout_marginBottom="@dimen/dp_size_16"
            android:orientation="vertical">
            <appliedlife.pvtltd.SHEROES.views.cutomeviews.RippleView
                android:id="@+id/ripple_feed_article_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_feed_article_login_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                android:maxLines="@integer/int_value_for_line_2"
                android:layout_marginRight="@dimen/dp_size_16"
                android:textColor="@color/comment_text"
                android:textSize="@dimen/sp_size_12" />

            <TextView
                android:id="@+id/tv_article_join_conversation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_4"
                android:padding="@dimen/dp_size_11"
                android:layout_marginRight="@dimen/dp_size_16"
                android:background="@drawable/rectangle_comment_background"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:lineSpacingExtra="@dimen/dp_size_3"
                android:maxLines="@integer/int_value_for_line_3"
                android:textColor="@color/feed_card_time"
                android:textSize="@dimen/sp_size_14" />
            </appliedlife.pvtltd.SHEROES.views.cutomeviews.RippleView>
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>

