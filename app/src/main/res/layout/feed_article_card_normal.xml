<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_size_5"
    app:cardElevation="@dimen/dp_size_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_size_12"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView
                android:id="@+id/iv_feed_article_card_circle_icon"
                android:layout_width="@dimen/feed_profile_icon_size"
                android:layout_height="@dimen/feed_profile_icon_size"
                android:src="@drawable/ic_footer_button_icon" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_12"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_feed_article_card_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/ID_ROBOTO_BOLD"
                    android:textColor="@color/footer_icon_text"
                    android:textSize="@dimen/sp_size_14"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_feed_article_title_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_size_3"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:textColor="@color/feed_article_label"
                    android:textSize="@dimen/sp_size_12" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_feed_article_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_size_5"
                android:background="@drawable/ic_feed_article_top_left" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_feed_article_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_12"
            android:layout_marginRight="@dimen/dp_size_12"
            android:fontFamily="@string/ID_ROBOTO_MEDIUM"
            android:lineSpacingExtra="@dimen/dp_size_3"
            android:lines="@integer/int_value_for_line_1"
            android:textColor="@color/feed_article_label"
            android:textSize="@dimen/sp_size_14" />

        <TextView
            android:id="@+id/tv_feed_article_header_lebel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_12"
            android:layout_marginRight="@dimen/dp_size_12"
            android:layout_marginTop="@dimen/dp_size_12"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:lineSpacingExtra="@dimen/dp_size_3"
            android:textColor="@color/feed_article_label"
            android:textSize="@dimen/sp_size_13" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_size_13">

            <LinearLayout
                android:id="@+id/li_feed_article_images"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_size_180"
                android:background="@drawable/ic_image_holder"
                android:orientation="vertical" />
            <include
                android:id="@+id/li_feed_article_card_emoji_pop_up"
                layout="@layout/emoji_reaction_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:visibility="gone"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/li_feed_article_user_reactions"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_size_35"
            android:layout_marginLeft="@dimen/dp_size_6"
            android:layout_marginRight="@dimen/dp_size_6"
            android:layout_marginTop="@dimen/dp_size_20"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_feed_article_user_reaction"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".26"
                android:gravity="center|left"
                android:drawablePadding="@dimen/dp_size_5"
                android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                android:textSize="@dimen/sp_size_11"
                android:textColor="@color/emoji_text"
                android:paddingLeft="@dimen/dp_size_10"
                android:drawableLeft="@drawable/ic_heart_in_active" />

            <TextView
                android:id="@+id/tv_feed_article_user_comment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".27"
                android:paddingLeft="@dimen/dp_size_10"
                android:drawableLeft="@drawable/ic_comment_icon" />

            <TextView
                android:id="@+id/tv_feed_article_user_bookmark"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".24"
                android:paddingRight="@dimen/dp_size_20"
                android:drawableRight="@drawable/ic_bookmark_in_active" />

            <TextView
                android:id="@+id/tv_feed_article_user_menu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight=".22"
                android:paddingRight="@dimen/dp_size_10"
                android:drawableRight="@drawable/ic_menu_dashboard" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_size_0.5"
            android:layout_marginLeft="@dimen/dp_size_12"
            android:layout_marginRight="@dimen/dp_size_12"
            android:layout_marginTop="@dimen/dp_size_15"
            android:background="@color/search_tab_unselected_text" />


        <FrameLayout
            android:id="@+id/fl_feed_article_no_reaction_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/dp_size_12"
            android:layout_marginRight="@dimen/dp_size_12"
            android:layout_marginTop="@dimen/dp_size_15">

            <TextView
                android:id="@+id/tv_feed_article_reaction1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_emoji_xo_xo" />

            <TextView
                android:id="@+id/tv_feed_article_reaction2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_12"
                android:drawableLeft="@drawable/ic_emoji2_with_you" />

            <TextView
                android:id="@+id/tv_feed_article_reaction3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_25"
                android:drawableLeft="@drawable/ic_emoji3_whistel" />

            <TextView
                android:id="@+id/tv_feed_article_total_replies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/dp_size_15"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:gravity="right"
                android:visibility="gone"
                android:textColor="@color/feed_article_comment"
                android:textSize="@dimen/sp_size_11" />

            <TextView
                android:id="@+id/tv_feed_article_total_reactions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp_size_84"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:gravity="center"
                android:textColor="@color/feed_article_comment"
                android:textSize="@dimen/sp_size_11" />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/li_feed_article_user_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_12"
            android:layout_marginRight="@dimen/dp_size_7"
            android:layout_marginTop="@dimen/dp_size_20"
            android:visibility="gone"
            android:orientation="horizontal"
            android:weightSum="@integer/int_value_for_line_1">

            <appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView
                android:id="@+id/iv_feed_article_user_pic"
                android:layout_width="@dimen/dp_size_27"
                android:layout_height="@dimen/dp_size_28"
                android:layout_margin="@dimen/dp_size_8"
                android:src="@drawable/ic_footer_button_icon" />

            <TextView
                android:id="@+id/tv_feed_article_user_comment_post"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="@integer/int_value_for_line_1"
                android:lines="@integer/int_value_for_line_2"
                android:gravity="center|left"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:lineSpacingExtra="@dimen/dp_size_3"
                android:textColor="@color/feed_conversation"
                android:textSize="@dimen/sp_size_12" />

            <TextView
                android:id="@+id/tv_feed_article_user_comment_post_menu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:paddingLeft="@dimen/dp_size_10"
                android:visibility="gone"
                android:paddingRight="@dimen/dp_size_10"
                android:drawableRight="@drawable/ic_menu_dashboard" />
               </LinearLayout>

        <LinearLayout
            android:id="@+id/li_feed_article_join_conversation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_size_12"
            android:background="@drawable/rectangle_comment_background"
            android:weightSum="1">

            <appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView
                android:id="@+id/iv_feed_article_register_user_pic"
                android:layout_width="@dimen/dp_size_27"
                android:layout_height="@dimen/dp_size_28"
                android:layout_margin="@dimen/dp_size_8"
                android:src="@drawable/ic_footer_button_icon" />

            <TextView
                android:id="@+id/tv_feed_article_register_user_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_size_12"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:text="@string/ID_JOIN_CONVERSATION"
                android:textColor="@color/feed_conversation"
                android:textSize="@dimen/sp_size_12" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>