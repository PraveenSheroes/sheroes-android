<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_size_233"
    android:background="@color/shadow"
    android:gravity="bottom"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_weight="3">

        <ImageView
            android:id="@+id/nav_header_logo"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/nav_header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/nav_header_logo"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/nav_header_logo"
            android:textColor="@color/white"
            android:textSize="24sp"
            tools:fontPath="fonts/SourceSansPro-Semibold.otf" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/nav_profile_parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="18dp"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/iv_profile_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_bookmark_active"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>
