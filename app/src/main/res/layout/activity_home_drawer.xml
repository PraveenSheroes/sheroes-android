<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_size_250"
    android:background="@drawable/ic_reaction_strip_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_side_drawer_profile_blur_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_size_20"
        android:orientation="vertical">

        <appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView
            android:id="@+id/iv_drawer_profile_circle_icon"
            android:layout_width="@dimen/drawer_profile_icon_size"
            android:layout_height="@dimen/drawer_profile_icon_size"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_size_25"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:text="@string/ID_APP_NAME"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_size_14" />

        <TextView
            android:id="@+id/tv_user_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_size_10"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:text="@string/ID_APP_NAME"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_size_12" />
    </LinearLayout>
</FrameLayout>
