<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey8"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/inivite_search_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:id="@+id/tv_back_community"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_back_black"
            android:layout_marginRight="@dimen/dp_size_5"/>
        <include layout="@layout/search_layout" />
    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/sp_size_1"
        android:layout_below="@+id/search_toolbar"
        android:layout_marginLeft="@dimen/dp_size_38"
        android:layout_marginRight="@dimen/dp_size_38"
        android:background="@color/share_line_color" />

    <LinearLayout
        android:id="@+id/li_invite_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tv_blank_img"
            android:layout_width="@dimen/dp_size_89"
            android:layout_height="@dimen/dp_size_60"
            android:layout_gravity="center"
            android:background="@drawable/ic_community_icon" />

        <TextView
            android:id="@+id/tv_invite_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_size_5"
            android:text="@string/ID_INVITE_MEMBER_COMMUNITY"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_invite_user_only"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_size_5"
            android:text="@string/ID_INVITE_USER_TEXT" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_invite_search_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_toolbar"
        android:divider="@color/black"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/pb_invite_search_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_toolbar"
        android:layout_centerInParent="true" />
</RelativeLayout>