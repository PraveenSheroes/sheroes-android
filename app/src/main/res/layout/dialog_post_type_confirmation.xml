<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:vernacular="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_border"
    android:minHeight="@dimen/communities_admin_post_type_dialog_height"
    android:minWidth="@dimen/dp_size_280"
    android:orientation="vertical">

    <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
        android:id="@+id/post_now"
        style="@style/TextView14spBold"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_48"
        android:gravity="center"
        android:text="@string/post_now"
        android:textColor="@color/footer_icon_text"
        android:textStyle="normal"
        tools:text="@string/post_now"
        vernacular:customTextFontFamily="@string/medium_font" />

    <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
        android:id="@+id/schedule_post"
        style="@style/TextView14spBold"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_48"
        android:background="@color/footer_icon_text"
        android:gravity="center"
        android:text="@string/schedule_post"
        android:textColor="@color/white"
        android:textStyle="normal"
        tools:text="@string/schedule_post"
        vernacular:customTextFontFamily="@string/medium_font" />

</LinearLayout>