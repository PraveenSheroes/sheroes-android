<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:vernacular="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_drawer_navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/menu_grey_vector"
        android:paddingBottom="@dimen/dp_size_10"
        android:paddingRight="@dimen/dp_size_20"
        android:paddingTop="@dimen/dp_size_10"
        android:visibility="visible" />

    <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
        android:id="@+id/title_text"
        style="@style/TextAppearance.Toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_home_notification_icon"
        android:layout_alignBottom="@+id/tv_home_notification_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/tv_drawer_navigation"
        android:layout_toRightOf="@+id/tv_drawer_navigation"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="@integer/int_value_for_line_1"
        vernacular:customTextFontFamily="@string/medium_font" />

    <ImageView
        android:id="@+id/ic_sheroes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginLeft="@dimen/sheroes_logo_marginleft"
        android:layout_marginTop="@dimen/sheroes_logo_margintop"
        android:paddingBottom="@dimen/sheroes_logo_paddingbottom"
        android:paddingEnd="@dimen/sheroes_logo_paddingright"
        android:paddingLeft="@dimen/sheroes_logo_paddingleft"
        android:paddingRight="@dimen/sheroes_logo_paddingright"
        android:paddingStart="@dimen/sheroes_logo_paddingleft"
        android:paddingTop="@dimen/sheroes_logo_paddingtop"
        android:src="@drawable/vector_sheroes_header" />


    <ImageView
        android:id="@+id/fl_nav_communities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="@dimen/dp_size_10"
        android:paddingRight="@dimen/dp_size_16"
        android:paddingTop="@dimen/dp_size_10"
        android:src="@drawable/vector_communities_nav_icon" />

    <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
        android:id="@+id/tv_new_tag"
        style="@style/TextView12spRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fl_nav_communities"
        android:layout_marginLeft="@dimen/new_tag_margin_left"
        android:layout_marginStart="@dimen/new_tag_margin_left"
        android:layout_marginTop="@dimen/new_tag_margin_top"
        android:layout_toEndOf="@+id/tv_home_notification_icon"
        android:layout_toRightOf="@+id/tv_home_notification_icon"
        android:background="@drawable/vector_new_tag"
        android:paddingEnd="@dimen/new_tag_padding_right"
        android:paddingLeft="@dimen/new_tag_padding_left"
        android:paddingRight="@dimen/new_tag_padding_right"
        android:paddingStart="@dimen/new_tag_padding_left"
        android:paddingTop="@dimen/new_tag_padding_top"
        android:text="@string/new_tag"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:visibility="gone"
        vernacular:customTextFontFamily="@string/regular_font" />

    <TextView
        android:id="@+id/tv_home_notification_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fl_nav_communities"
        android:layout_toLeftOf="@+id/fl_nav_communities"
        android:layout_toStartOf="@+id/fl_nav_communities"
        android:drawableLeft="@drawable/vector_notification"
        android:paddingBottom="@dimen/dp_size_10"
        android:paddingLeft="@dimen/dp_size_10"
        android:paddingRight="@dimen/notification_icon_right_padding"
        android:paddingTop="@dimen/dp_size_14" />

    <FrameLayout
        android:id="@+id/fl_notification_read_count"
        android:layout_width="@dimen/dp_size_25"
        android:layout_height="@dimen/dp_size_25"
        android:layout_alignEnd="@+id/tv_home_notification_icon"
        android:layout_alignRight="@+id/tv_home_notification_icon"
        android:layout_alignTop="@+id/tv_home_notification_icon"
        android:background="@drawable/vector_red_circle"
        android:backgroundTint="@color/footer_icon_text"
        android:visibility="gone">

        <appliedlife.pvtltd.SHEROES.vernacular.FontTextView
            android:id="@+id/tv_notification_read_count"
            style="@style/TextView9spMediumBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            vernacular:customTextFontFamily="@string/medium_font" />
    </FrameLayout>


</RelativeLayout>
