<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_search_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_search_bar"
        android:fontFamily="@string/ID_ROBOTO_REGULAR"
        android:padding="@dimen/dp_size_12"
        android:drawablePadding="@dimen/dp_size_12"
        android:drawableLeft="@drawable/ic_search_box_icon"
        android:layerType="software"
        android:textColor="@color/search_box_text"
        android:textSize="@dimen/sp_size_12"
        android:layout_marginRight="@dimen/dp_size_25"
        android:layout_toLeftOf="@+id/iv_home_notification_icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

       <TextView
           android:id="@+id/tv_setting"
           android:visibility="gone"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textAllCaps="true"
           android:gravity="center_horizontal"/>

    <ImageView
        android:id="@+id/iv_home_notification_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:background="@drawable/ic_notification"
        android:importantForAccessibility="no"
        android:padding="@dimen/dp_size_10"
        android:layout_marginRight="@dimen/dp_size_20"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
