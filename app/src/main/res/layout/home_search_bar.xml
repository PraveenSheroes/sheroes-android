<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_drawer_navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_nav_setting"
        android:paddingTop="@dimen/dp_size_10"
        android:paddingLeft="@dimen/dp_size_5"
        android:paddingBottom="@dimen/dp_size_10"
        android:paddingRight="@dimen/dp_size_16"/>
    <TextView
        android:id="@+id/tv_search_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_search_bar"
        android:fontFamily="@string/ID_ROBOTO_REGULAR"
        android:padding="@dimen/dp_size_12"
        android:layout_gravity="center"
        android:drawablePadding="@dimen/dp_size_12"
        android:drawableLeft="@drawable/ic_search_box_icon"
        android:layerType="software"
        android:textColor="@color/search_box_text"
        android:textSize="@dimen/sp_size_12"
        android:layout_toRightOf="@+id/tv_drawer_navigation"
        android:layout_toLeftOf="@+id/iv_home_notification_icon"
        />

    <TextView
        android:id="@+id/tv_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textSize="@dimen/sp_size_19"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/dp_size_10"
        android:layout_toRightOf="@+id/tv_drawer_navigation"
        android:layout_toLeftOf="@+id/iv_home_notification_icon"
        android:text="@string/ID_BOOKMARKS"
        android:layout_gravity="bottom"

        android:visibility="gone"
        android:gravity="center"/>

    <TextView
        android:id="@+id/iv_home_notification_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:drawableLeft="@drawable/ic_notification"
        android:layout_marginRight="@dimen/dp_size_6"
        android:padding="@dimen/dp_size_10"
        android:layout_marginLeft="@dimen/dp_size_6"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
