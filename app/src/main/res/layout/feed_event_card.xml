<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:baselineAligned="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp_size_16"
        android:gravity="top"
        android:weightSum="1">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView
                android:id="@+id/iv_feed_event_icon"
                android:layout_width="@dimen/feed_profile_icon_size"
                android:layout_height="@dimen/feed_profile_icon_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:background="@drawable/vector_verified"
                android:visibility="gone" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_16"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_feed_event_card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                android:textColor="@color/feed_article_label"
                android:textSize="@dimen/sp_size_15" />

            <TextView
                android:id="@+id/tv_feed_event_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_3"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:textColor="@color/feed_article_label"
                android:textSize="@dimen/sp_size_12" />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/li_feed_event_images"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_size_minus_5"
        android:layout_marginTop="@dimen/dp_size_13"
        android:orientation="vertical" />


    <LinearLayout
        android:id="@+id/li_feed_event_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_size_6"
        android:layout_marginRight="@dimen/dp_size_6"
        android:layout_marginTop="@dimen/dp_size_7"
        android:clickable="false"
        android:orientation="horizontal"
        android:saveEnabled="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_size_16"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_event_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:textAllCaps="true"
                android:textColor="@color/footer_icon_text"
                android:textSize="@dimen/sp_size_10" />

            <TextView
                android:id="@+id/tv_event_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:textColor="@color/faq_question_color"
                android:textSize="@dimen/sp_size_18" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_event_title"
            android:layout_width="@dimen/dp_size_200"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_size_30"
            android:fontFamily="@string/ID_ROBOTO_MEDIUM"
            android:lineSpacingExtra="@dimen/dp_size_4"
            android:textColor="@color/detail_page_text"
            android:textSize="@dimen/sp_size_16" />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_event_interested_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_size_70"
        android:layout_marginTop="@dimen/dp_size_6"
        android:fontFamily="@string/ID_ROBOTO_REGULAR"
        android:textColor="@color/event_text"
        android:textSize="@dimen/sp_size_10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_size_16"
        android:layout_marginTop="@dimen/dp_size_16"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_event_interested_btn"
            android:layout_width="@dimen/dp_size_105"
            android:layout_height="@dimen/dp_size_30"
            android:layout_marginRight="@dimen/dp_size_8"
            android:background="@drawable/rectangle_feed_commnity_join"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:gravity="center"
            android:text="@string/ID_INTERESTED"
            android:textAllCaps="true"
            android:textColor="@color/footer_icon_text"
            android:textSize="@dimen/sp_size_12" />

        <TextView
            android:id="@+id/tv_event_going_btn"
            android:layout_width="@dimen/dp_size_90"
            android:layout_height="@dimen/dp_size_30"
            android:layout_marginRight="@dimen/dp_size_8"
            android:background="@drawable/rectangle_feed_commnity_join"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:gravity="center"
            android:text="@string/ID_GOING"
            android:textAllCaps="true"
            android:textColor="@color/footer_icon_text"
            android:textSize="@dimen/sp_size_12" />

        <Button
            android:id="@+id/tv_event_share_btn"
            android:layout_width="@dimen/dp_size_30"
            android:layout_height="@dimen/dp_size_30"
            android:layout_marginRight="@dimen/dp_size_52"
            android:background="@drawable/selector_event_share"
            android:fontFamily="@string/ID_ROBOTO_REGULAR"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/footer_icon_text"
            android:textSize="@dimen/sp_size_12" />
    </LinearLayout>
</LinearLayout>
