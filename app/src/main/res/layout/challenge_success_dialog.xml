<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/challenge_header"
                    android:padding="@dimen/dp_size_20">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_winner_trophy_circle" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_size_25"
                        android:drawablePadding="@dimen/dp_size_10"
                        android:drawableTop="@drawable/ic_winner_trophy"
                        android:fontFamily="@string/ID_ROBOTO_LIGHT"
                        android:text="@string/ID_CONGRATULATION"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_size_20" />
                </FrameLayout>

                <ImageView
                    android:id="@+id/iv_add_pic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_size_16"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/tv_add_photo_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp_size_20"
                    android:layout_marginLeft="@dimen/dp_size_45"
                    android:layout_marginRight="@dimen/dp_size_45"
                    android:layout_marginTop="@dimen/dp_size_45"
                    android:text="@string/ID_ADD_PHOTO"
                    android:textAlignment="center" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:alpha=".8"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_select_from_gallery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_size_30"
                        android:background="@color/text_education_line"
                        android:fontFamily="@string/ID_ROBOTO_REGULAR"
                        android:gravity="center"
                        android:padding="@dimen/dp_size_17"
                        android:text="@string/ID_CHOOSE_PHOTO"
                        android:textColor="@color/challenge_header"
                        android:textSize="@dimen/sp_size_13" />

                    <ImageView
                        android:id="@+id/iv_challenge_open_camera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_size_30"
                        android:background="@color/text_education_line"
                        android:padding="@dimen/dp_size_17"
                        android:src="@drawable/ic_challenge_camera" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_size_30"
                    android:gravity="center">

                    <View
                        android:layout_width="@dimen/dp_size_70"
                        android:layout_height="@dimen/dp_size_0.5"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_size_80"
                        android:layout_marginRight="@dimen/dp_size_10"
                        android:alpha=".5"
                        android:background="@color/challenge_header" />

                    <TextView
                        android:layout_width="@dimen/dp_size_25"
                        android:layout_height="@dimen/dp_size_25"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_circle_w"
                        android:fontFamily="@string/ID_ROBOTO_MEDIUM"
                        android:gravity="center"
                        android:text="@string/ID_OR"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_size_10" />

                    <View
                        android:layout_width="@dimen/dp_size_70"
                        android:layout_height="@dimen/dp_size_0.5"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_size_10"
                        android:layout_marginRight="@dimen/dp_size_65"
                        android:alpha=".5"
                        android:background="@color/challenge_header" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/li_you_tube_link_share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_size_30"
                    android:alpha=".5"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_challenge_you_tube"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_you_tube_icon" />

                    <EditText
                        android:id="@+id/et_you_tube_link"
                        android:layout_width="@dimen/dp_size_180"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_size_5"
                        android:background="@color/fully_transparent"
                        android:ellipsize="end"
                        android:fontFamily="@string/ID_ROBOTO_REGULAR"
                        android:gravity="left"
                        android:hint="@string/ID_ADD_YOU_TUBE_LINK"
                        android:lines="@integer/int_value_for_line_1"
                        android:padding="@dimen/dp_size_5"
                        android:textColor="@color/pure_black"
                        android:textSize="@dimen/sp_size_11" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_size_0.5"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_size_80"
                    android:layout_marginRight="@dimen/dp_size_65"
                    android:alpha=".5"
                    android:background="@color/challenge_header" />

                <TextView
                    android:id="@+id/tv_share_after_success"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_size_30"
                    android:gravity="center"
                    android:padding="@dimen/dp_size_20"
                    android:text="@string/ID_PROCEED"
                    android:textAllCaps="true"
                    android:textColor="@color/challenge_header"
                    android:textSize="@dimen/sp_size_14"
                    android:textStyle="bold" />
            </LinearLayout>
            <include layout="@layout/progress_bar_login" />
        </FrameLayout>
    </LinearLayout>

</ScrollView>
