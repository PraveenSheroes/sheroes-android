<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:isScrollContainer="false"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/r1_work_experience_job_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/home_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_size_65"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <include
                layout="@layout/setting_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/r1_work_experience_job_details"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/personal_contactdetails_editpage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_size_16"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="*"
                    android:padding="@dimen/dp_size_4"
                    android:layout_marginTop="@dimen/dp_size_8"
                    android:textColor="@color/star_color"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/et_job_designation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/ID_ROBOTO_REGULAR"
                        android:hint="@string/ID_SELF_EMP_DESIGNATION_HINT"
                        android:textColorHint="@color/text_color_setting_preference_basicdetails"
                        android:textColor="@color/text_color_contactdetails_page"
                        android:focusableInTouchMode="true"
                        android:textSize="@dimen/sp_size_13" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_size_16"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="*"
                    android:padding="@dimen/dp_size_4"
                    android:layout_marginTop="@dimen/dp_size_8"
                    android:textColor="@color/star_color"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <EditText
                        android:id="@+id/et_job_functional_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/ID_ROBOTO_REGULAR"
                        android:hint="@string/ID_SELF_EMP_FUNCTIONAL_HINT"
                        android:textAllCaps="true"
                        android:textColorHint="@color/text_color_setting_preference_basicdetails"
                        android:textColor="@color/text_color_contactdetails_page"
                        android:focusableInTouchMode="true"
                        android:textSize="@dimen/sp_size_13"
                        android:drawablePadding="@dimen/dp_size_8"


                        />

                </android.support.design.widget.TextInputLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_size_16"

                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="*"
                    android:padding="@dimen/dp_size_4"
                    android:layout_marginTop="@dimen/dp_size_8"
                    android:textColor="@color/star_color"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <EditText
                        android:id="@+id/et_job_organization_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/ID_ROBOTO_REGULAR"
                        android:hint="@string/ID_ORGANISATION"
                        android:textColorHint="@color/text_color_setting_preference_basicdetails"
                        android:textColor="@color/text_color_contactdetails_page"
                        android:focusableInTouchMode="true"
                        android:textSize="@dimen/sp_size_13"
                        />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_size_16">

                <EditText
                    android:id="@+id/et_job_organization_brandname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:hint="@string/ID_SELF_EMP_BRAND_HINT"
                    android:textColorHint="@color/text_color_setting_preference_basicdetails"
                    android:textColor="@color/text_color_contactdetails_page"
                    android:focusableInTouchMode="true"
                    android:textSize="@dimen/sp_size_13"
                    />

            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dp_size_16"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_starid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:padding="@dimen/dp_size_4"
                    android:textColor="@color/star_color"/>

                <EditText
                android:id="@+id/tv_job_start_date"
                android:layout_toRightOf="@+id/tv_starid"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:text="@string/ID_SELF_EMP_START"
                android:textColor="@color/text_color_setting_preference_basicdetails"
                android:textSize="@dimen/sp_size_13" />

                <EditText
                android:id="@+id/tv_job_end_date"
                android:layout_toRightOf="@+id/et_job_start_date"
                android:paddingLeft="@dimen/dp_size_60"
                android:layout_width="wrap_content"
                android:layout_alignParentTop="true"
                android:textAllCaps="true"
                android:layout_height="wrap_content"
                android:fontFamily="@string/ID_ROBOTO_REGULAR"
                android:text="@string/ID_SELF_EMP_END"
                android:textColor="@color/text_color_setting_preference_basicdetails"
                android:textSize="@dimen/sp_size_13" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_size_16">
                <EditText
                        android:id="@+id/et_job_start_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_size_10"
                        android:fontFamily="@string/ID_ROBOTO_REGULAR"
                        android:hint="@string/ID_SELF_EMP_START_DATE_HINT"
                        android:textColorHint="@color/text_color_contactdetails_page"
                        android:background="@drawable/date_edittext_backgroundstyle"
                        android:layout_marginLeft="@dimen/dp_size_7"
                        android:focusableInTouchMode="true"
                        android:textSize="@dimen/sp_size_13" />


                <EditText
                    android:id="@+id/et_job_end_date"
                    android:layout_toRightOf="@+id/et_job_start_date"
                    android:layout_marginLeft="@dimen/dp_size_30"
                    android:padding="@dimen/dp_size_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:hint="@string/ID_SELF_EMP_START_DATE_HINT"
                    android:textColorHint="@color/text_color_contactdetails_page"
                    android:background="@drawable/date_edittext_backgroundstyle"
                    android:focusableInTouchMode="true"
                    android:textSize="@dimen/sp_size_13" />




                <TextView
                    android:layout_below="@+id/et_job_end_date"
                    android:id="@+id/et_working_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@drawable/ic_circle_inactive"
                    android:paddingTop="@dimen/dp_size_16"
                    android:drawablePadding="@dimen/dp_size_5"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:text="@string/ID_SELF_EMP_TITTLE"
                    android:textColorHint="@color/text_color_setting_preference_basicdetails"
                    android:textColor="@color/text_color_contactdetails_page"
                    android:focusableInTouchMode="true"
                    android:layout_marginRight="@dimen/dp_size_35"
                    android:textSize="@dimen/sp_size_13" />

            </RelativeLayout>
            <include

                android:id="@+id/include_add_jobcard"
                layout="@layout/add_job_project_card"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_size_15"
                android:layout_marginBottom="@dimen/dp_size_40"
                android:background="@color/background_color_project_number"
                >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/dp_size_16"
                android:padding="@dimen/dp_size_15"
                android:drawablePadding="@dimen/dp_size_10"
                android:text="@string/ID_PROJECT"
                android:textSize="@dimen/dp_size_13"
                android:drawableRight="@drawable/ic_add_city_icon"/>
            </LinearLayout>


            <android.support.design.widget.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_size_16"
                android:layout_marginRight="@dimen/dp_size_16"
                android:focusableInTouchMode="true">

                <EditText
                    android:id="@+id/et_job_organization_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/date_edittext_backgroundstyle"
                    android:drawableRight="@drawable/ic_spinner_icon"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:hint="@string/ID_SELF_EMP_ORGANIZATION_TYPE_HINT"
                    android:padding="@dimen/dp_size_16"
                    android:textColor="@color/text_color_contactdetails_page"
                    android:textSize="@dimen/sp_size_13" />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_size_16"
                android:layout_marginRight="@dimen/dp_size_16"
                android:focusableInTouchMode="true">

                <EditText
                    android:id="@+id/et_add_sector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/date_edittext_backgroundstyle"
                    android:drawableRight="@drawable/ic_spinner_icon"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:hint="@string/ID_SECTOR_HINT"
                    android:padding="@dimen/dp_size_16"
                    android:textColor="@color/text_color_contactdetails_page"
                    android:textSize="@dimen/sp_size_13" />


            </android.support.design.widget.TextInputLayout>





        </LinearLayout>

    </ScrollView>


    <Button
        android:id="@+id/btn_save_selfempolyment_details"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/ID_SAVE"
        android:textColor="@color/white"
        android:fontFamily="@string/ID_ROBOTO_MEDIUM"
        android:layout_alignParentBottom="true"
        />





    </RelativeLayout>