<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_coomunities_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="@color/fully_transparent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_communities_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/search_tab_text"
            app:expandedTitleMarginEnd="@dimen/dp_size_54"
            app:expandedTitleMarginStart="@dimen/dp_size_50"
            app:expandedTitleMarginTop="@dimen/dp_size_160"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <appliedlife.pvtltd.SHEROES.views.cutomeviews.SquareImageView
                android:id="@+id/iv_communities_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_margin="@dimen/dp_size_13">

                <TextView
                    android:id="@+id/tv_communities_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_timer_icon"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:paddingLeft="@dimen/dp_size_5"
                    android:text="@string/ID_ERROR_FIELD_REQUIRED"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_size_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:alpha=".8"
                    android:background="@drawable/rectangle_detail_round"
                    android:fontFamily="@string/ID_ROBOTO_REGULAR"
                    android:paddingBottom="@dimen/dp_size_5"
                    android:paddingLeft="@dimen/dp_size_15"
                    android:paddingRight="@dimen/dp_size_15"
                    android:paddingTop="@dimen/dp_size_5"
                    android:text="@string/ID_APP_NAME"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_size_10" />
            </FrameLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_communities_detail"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="right"
                android:gravity="right"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <TextView
                    android:id="@+id/tv_communities_detail_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:drawableLeft="@drawable/ic_share_icon"
                    android:drawablePadding="@dimen/dp_size_10"
                    android:paddingRight="@dimen/dp_size_38" />

                <TextView
                    android:id="@+id/tv_communities_detail_bookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:drawableLeft="@drawable/ic_bookmark_in_active"
                    android:drawablePadding="@dimen/dp_size_10"
                    android:paddingRight="@dimen/dp_size_20" />
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_communities_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_communities_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_search_group_icon"
        app:layout_anchor="@id/app_bar_coomunities_detail"
        app:layout_anchorGravity="bottom|center"
        app:fabSize="auto"
        app:backgroundTint="@color/colorPrimary"
        app:borderWidth="@dimen/dp_size_4"
        app:pressedTranslationZ="@dimen/dp_size_12"
        app:rippleColor="@color/colorPrimary"/>
</android.support.design.widget.CoordinatorLayout>